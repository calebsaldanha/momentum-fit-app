<%- include('../partials/header') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar', { path: '/admin/exercises' }) %>
    <main class="dashboard-main">
        <div class="page-header">
            <h1>Biblioteca de <span class="text-neon">Exercícios</span></h1>
        </div>

        <% if (messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if (messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <div class="card-box" style="margin-bottom: 30px;">
            <h3 style="color:white;">Adicionar Exercício</h3>
            <form action="/admin/exercises/create" method="POST" style="margin-top:15px;">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                <div class="form-row">
                    <input type="text" name="name" placeholder="Nome do Exercício" required style="flex:2;">
                    <select name="muscle_group" required style="flex:1;">
                        <option value="">Grupo Muscular</option>
                        <option value="peito">Peito</option>
                        <option value="costas">Costas</option>
                        <option value="pernas">Pernas</option>
                        <option value="ombros">Ombros</option>
                        <option value="bracos">Braços</option>
                        <option value="abdomen">Abdômen</option>
                        <option value="cardio">Cardio</option>
                    </select>
                </div>
                <div class="form-row" style="margin-top:10px;">
                    <input type="text" name="equipment" placeholder="Equipamento (ex: Halteres)" style="flex:1;">
                    <select name="difficulty" style="flex:1;">
                        <option value="iniciante">Iniciante</option>
                        <option value="intermediario">Intermediário</option>
                        <option value="avancado">Avançado</option>
                    </select>
                </div>
                <div class="form-group" style="margin-top:10px;">
                    <input type="text" name="video_url" placeholder="Link do Vídeo (YouTube/Vimeo)">
                </div>
                <button class="btn btn-primary">Salvar na Biblioteca</button>
            </form>
        </div>

        <div class="card-box">
            <div class="table-responsive">
                <table style="width:100%; min-width:600px;">
                    <thead>
                        <tr style="background:#222;">
                            <th>Nome</th>
                            <th>Músculo</th>
                            <th>Equipamento</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(exercises.length > 0) { %>
                            <% exercises.forEach(e => { %>
                                <tr style="border-bottom:1px solid #333;">
                                    <td><%= e.name %></td>
                                    <td><%= e.muscle_group %></td>
                                    <td><%= e.equipment %></td>
                                    <td>
                                        <form action="/admin/exercises/delete/<%= e.id %>" method="POST" onsubmit="return confirm('Excluir este exercício?');">
                                            <button class="btn btn-outline btn-sm" style="color:#ff4d4d; border-color:#ff4d4d;"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4">Biblioteca vazia.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
