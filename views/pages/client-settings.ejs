<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/client/settings' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Configurações</span>
        </div>
        <div class="page-header">
            <h1>Minha <span class="text-neon">Conta</span></h1>
        </div>
        
        <div class="card-box">
            <h3 style="margin-bottom: 20px;">Segurança</h3>
            <form action="/auth/reset-password" method="GET"> <div style="margin-bottom: 15px;">
                    <label style="color:#888">Email</label>
                    <input type="text" value="<%= user.email %>" disabled class="form-control" style="width:100%; padding:10px; background:#111; border:1px solid #333; color:#666;">
                </div>
                <button type="button" class="btn btn-outline">Alterar Senha</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
