<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/client/settings' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Configurações</span>
        </div>

        <div class="page-header">
            <h1>Minha <span class="text-neon">Conta</span></h1>
            <p>Gerencie suas credenciais de acesso.</p>
        </div>

        <% if(messages && messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages && messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <div class="card-box" style="max-width: 600px;">
            <form action="/client/settings" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <h3 style="color:white; margin-bottom:20px; border-bottom:1px solid #333; padding-bottom:10px;">Acesso</h3>
                
                <div style="margin-bottom: 20px;">
                    <label style="color:#888; display:block; margin-bottom:5px;">E-mail</label>
                    <input type="email" name="email" value="<%= user.email %>" class="form-control" style="width:100%; padding:12px; background:#222; border:1px solid #444; color:white; border-radius:6px;">
                    <small style="color:#666">Alterar o e-mail requer confirmação da senha atual.</small>
                </div>

                <h3 style="color:white; margin-top:30px; margin-bottom:20px; border-bottom:1px solid #333; padding-bottom:10px;">Segurança</h3>

                <div style="margin-bottom: 15px;">
                    <label style="color:#888; display:block; margin-bottom:5px;">Senha Atual</label>
                    <input type="password" name="current_password" placeholder="Necessário para fazer alterações" style="width:100%; padding:12px; background:#222; border:1px solid #444; color:white; border-radius:6px;">
                </div>

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:15px; margin-bottom:20px;">
                    <div>
                        <label style="color:#888; display:block; margin-bottom:5px;">Nova Senha</label>
                        <input type="password" name="new_password" placeholder="Opcional" style="width:100%; padding:12px; background:#222; border:1px solid #444; color:white; border-radius:6px;">
                    </div>
                    <div>
                        <label style="color:#888; display:block; margin-bottom:5px;">Confirmar Nova</label>
                        <input type="password" name="confirm_password" placeholder="Repita a nova senha" style="width:100%; padding:12px; background:#222; border:1px solid #444; color:white; border-radius:6px;">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg" style="width:100%;">Salvar Alterações</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
