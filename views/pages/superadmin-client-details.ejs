<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 2rem;
            margin-top: 2rem;
        }
        @media (max-width: 900px) {
            .details-grid { grid-template-columns: 1fr; }
        }
        .profile-card-header {
            text-align: center;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 2rem;
        }
        .profile-avatar-lg {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--primary-color);
            margin-bottom: 1rem;
        }
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }
        .info-label { color: var(--text-muted); }
        .info-value { font-weight: 500; color: var(--text-light); }
        
        .trainer-assignment-box {
            background: rgba(var(--primary-rgb), 0.1);
            border: 1px solid var(--primary-color);
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { user: user, currentPage: 'superadmin-manage' }) %>

        <main class="dashboard-main">
            <header class="dashboard-header">
                <div class="header-welcome">
                    <h1>Gerenciar Aluno</h1>
                    <p class="text-muted">Detalhes e configurações de <%= targetUser.name %></p>
                </div>
                <div class="header-actions">
                    <a href="/superadmin/manage" class="btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </header>

            <div class="details-grid">
                <aside>
                    <div class="dashboard-card">
                        <div class="profile-card-header">
                            <img src="<%= targetUser.profile_image || '/images/default-profile.png' %>" alt="Profile" class="profile-avatar-lg">
                            <h3><%= targetUser.name %></h3>
                            <span class="badge badge-<%= targetUser.status === 'active' ? 'success' : 'danger' %>">
                                <%= targetUser.status === 'active' ? 'Ativo' : 'Inativo' %>
                            </span>
                            <p class="text-muted small mt-2">Cadastrado em: <%= new Date(targetUser.created_at).toLocaleDateString() %></p>
                        </div>

                        <div class="trainer-assignment-box">
                            <h4 style="color: var(--primary-color); margin-bottom: 1rem;">
                                <i class="fas fa-dumbbell"></i> Treinador Responsável
                            </h4>
                            
                            <form action="/superadmin/assign-trainer" method="POST">
                                <input type="hidden" name="user_id" value="<%= targetUser.id %>">
                                
                                <div class="form-group">
                                    <label class="form-label">Selecionar Treinador</label>
                                    <select name="trainer_id" class="form-input" required>
                                        <option value="">-- Sem Treinador --</option>
                                        <% trainers.forEach(trainer => { %>
                                            <option value="<%= trainer.id %>" <%= targetUser.trainer_id === trainer.id ? 'selected' : '' %>>
                                                <%= trainer.name %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <button type="submit" class="btn-primary w-100">
                                    <i class="fas fa-save"></i> Salvar Atribuição
                                </button>
                            </form>
                        </div>

                        <div class="mt-4">
                            <h4 class="mb-3">Ações da Conta</h4>
                            <form action="/superadmin/users/<%= targetUser.id %>/status" method="POST" class="mb-2">
                                <input type="hidden" name="status" value="<%= targetUser.status === 'active' ? 'inactive' : 'active' %>">
                                <button type="submit" class="btn-secondary w-100">
                                    <%= targetUser.status === 'active' ? 'Bloquear Acesso' : 'Ativar Acesso' %>
                                </button>
                            </form>
                            
                            <form action="/superadmin/users/<%= targetUser.id %>/delete" method="POST" onsubmit="return confirm('Tem certeza? Essa ação é irreversível.');">
                                <button type="submit" class="btn-danger w-100">
                                    Excluir Usuário
                                </button>
                            </form>
                        </div>
                    </div>
                </aside>

                <div class="content-col">
                    <div class="dashboard-card mb-4">
                        <h3><i class="fas fa-id-card"></i> Informações Pessoais</h3>
                        <div class="info-row">
                            <span class="info-label">Email</span>
                            <span class="info-value"><%= targetUser.email %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Telefone</span>
                            <span class="info-value"><%= clientProfile.phone || 'Não informado' %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Idade</span>
                            <span class="info-value"><%= clientProfile.age || '-' %> anos</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Gênero</span>
                            <span class="info-value"><%= clientProfile.gender_identity || 'Não informado' %></span>
                        </div>
                    </div>

                    <div class="dashboard-card">
                        <h3><i class="fas fa-heartbeat"></i> Perfil Físico (Anamnese)</h3>
                        
                        <div class="stats-grid" style="grid-template-columns: repeat(3, 1fr); margin: 1.5rem 0;">
                            <div class="stat-item text-center">
                                <h4 class="text-primary"><%= clientProfile.current_weight || '-' %> kg</h4>
                                <span class="text-muted small">Peso Atual</span>
                            </div>
                            <div class="stat-item text-center">
                                <h4 class="text-primary"><%= clientProfile.height || '-' %> cm</h4>
                                <span class="text-muted small">Altura</span>
                            </div>
                            <div class="stat-item text-center">
                                <h4 class="text-primary"><%= clientProfile.fitness_level || '-' %></h4>
                                <span class="text-muted small">Nível</span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="info-label d-block mb-1">Objetivo Principal</label>
                            <div class="p-2 bg-dark rounded"><%= clientProfile.fitness_goals || 'Não definido' %></div>
                        </div>
                        
                        <div class="mt-3">
                            <label class="info-label d-block mb-1">Lesões</label>
                            <div class="p-2 bg-dark rounded"><%= clientProfile.injuries || 'Nenhuma' %></div>
                        </div>

                        <div class="mt-3">
                            <label class="info-label d-block mb-1">Medicamentos</label>
                            <div class="p-2 bg-dark rounded"><%= clientProfile.medications || 'Nenhum' %></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
