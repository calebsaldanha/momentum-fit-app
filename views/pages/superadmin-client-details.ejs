<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { user: user, currentPage: 'superadmin-manage' }) %>

        <main class="dashboard-main">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gerenciar Aluno</h1>
                <a href="/superadmin/manage" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Voltar</a>
            </header>

            <div style="display: grid; grid-template-columns: 350px 1fr; gap: 2rem;">
                <div>
                    <div class="dashboard-card text-center">
                        <img src="<%= targetUser.profile_image || '/images/default-profile.png' %>" style="width:120px; height:120px; border-radius:50%; object-fit:cover; margin-bottom:1rem; border: 3px solid var(--primary-color);">
                        <h3><%= targetUser.name %></h3>
                        <p class="text-muted"><%= targetUser.email %></p>
                        <span class="badge badge-<%= targetUser.status %>"><%= targetUser.status === 'active' ? 'Ativo' : 'Inativo' %></span>

                        <div class="mt-4 text-start">
                            <h4 class="text-primary mb-3"><i class="fas fa-dumbbell"></i> Treinador</h4>
                            <form action="/superadmin/assign-trainer" method="POST">
                                <input type="hidden" name="user_id" value="<%= targetUser.id %>">
                                <div class="form-group">
                                    <select name="trainer_id" class="form-input">
                                        <option value="">-- Sem Treinador --</option>
                                        <% trainers.forEach(t => { %>
                                            <option value="<%= t.id %>" <%= targetUser.trainer_id === t.id ? 'selected' : '' %>>
                                                <%= t.name %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Salvar Atribuição</button>
                            </form>
                        </div>

                        <div class="mt-4 text-start">
                            <h4 class="mb-3">Ações</h4>
                            <form action="/superadmin/users/<%= targetUser.id %>/status" method="POST" class="mb-2">
                                <input type="hidden" name="status" value="<%= targetUser.status === 'active' ? 'inactive' : 'active' %>">
                                <button class="btn btn-secondary w-100"><%= targetUser.status === 'active' ? 'Bloquear' : 'Desbloquear' %></button>
                            </form>
                            <form action="/superadmin/users/<%= targetUser.id %>/delete" method="POST" onsubmit="return confirm('Tem certeza?');">
                                <button class="btn btn-danger w-100">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="dashboard-card">
                        <h3 class="mb-4"><i class="fas fa-file-medical"></i> Dados Físicos (Anamnese)</h3>
                        
                        <div class="stats-grid-modern" style="grid-template-columns: repeat(3, 1fr);">
                            <div class="text-center p-3" style="background: rgba(255,255,255,0.03); border-radius: 12px;">
                                <h2 class="text-primary m-0"><%= clientProfile.current_weight || '-' %></h2>
                                <small class="text-muted">Peso (kg)</small>
                            </div>
                            <div class="text-center p-3" style="background: rgba(255,255,255,0.03); border-radius: 12px;">
                                <h2 class="text-primary m-0"><%= clientProfile.height || '-' %></h2>
                                <small class="text-muted">Altura (cm)</small>
                            </div>
                            <div class="text-center p-3" style="background: rgba(255,255,255,0.03); border-radius: 12px;">
                                <h2 class="text-primary m-0"><%= clientProfile.fitness_level || '-' %></h2>
                                <small class="text-muted">Nível</small>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 mb-3">
                                <label class="text-muted small">Objetivo</label>
                                <div class="p-3 bg-dark rounded border border-secondary"><%= clientProfile.fitness_goals || 'Não informado' %></div>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="text-muted small">Lesões / Restrições</label>
                                <div class="p-3 bg-dark rounded border border-secondary"><%= clientProfile.injuries || 'Nenhuma' %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
