<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div class="page-header">
                <h1>Planos e Preços</h1>
            </div>
            <div class="content-grid">
                <% plans.forEach(p => { %>
                <div class="card-box" style="<%= !p.active ? 'opacity:0.5' : '' %>">
                    <h3><%= p.name %></h3>
                    <h2 class="text-neon">R$ <%= p.price %></h2>
                    <p class="text-muted"><%= p.active ? 'Ativo na Loja' : 'Indisponível' %></p>
                    <button class="btn btn-outline btn-full">Editar</button>
                </div>
                <% }) %>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
