<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/app/head') %>
    <title>Detalhes do Aluno | Momentum Fit</title>
</head>
<body>
    <div class="dashboard-wrapper">
        <%- include('../partials/sidebar') %>
        <div class="main-content">
            <div class="app-header">
                <div class="header-title">
                    <a href="/trainer/clients" style="color: #888; margin-right: 10px;"><i class="fas fa-arrow-left"></i></a>
                    Aluno: <%= client.name %>
                </div>
            </div>

            <div class="content-pad">
                <div class="grid-3">
                    <div class="card">
                        <div style="text-align: center; margin-bottom: 20px;">
                            <div class="user-avatar" style="width: 80px; height: 80px; font-size: 2rem; margin: 0 auto 15px;">
                                <%= client.name.charAt(0) %>
                            </div>
                            <h3><%= client.name %></h3>
                            <p style="color: var(--neon-primary);"><%= client.email %></p>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 10px;">
                            <a href="/trainer/program/<%= client.id %>" class="btn btn-primary btn-block">Prescrever Treino</a>
                            <button class="btn btn-outline btn-block">Enviar Mensagem</button>
                        </div>
                    </div>

                    <div class="card" style="grid-column: span 2;">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-clipboard-list"></i> Ficha de Anamnese</h3>
                        </div>
                        <div class="grid-2">
                            <div>
                                <label>Objetivo</label>
                                <div style="padding: 10px; background: #222; border-radius: 8px; margin-bottom: 15px;">
                                    <%= client.anamnesis.objective %>
                                </div>
                            </div>
                            <div>
                                <label>Experiência</label>
                                <div style="padding: 10px; background: #222; border-radius: 8px; margin-bottom: 15px;">
                                    <%= client.anamnesis.experience %>
                                </div>
                            </div>
                            <div style="grid-column: span 2;">
                                <label>Histórico de Lesões</label>
                                <div style="padding: 10px; background: rgba(239, 68, 68, 0.1); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.2); border-radius: 8px;">
                                    <%= client.anamnesis.injuries || 'Nenhuma relatada.' %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
