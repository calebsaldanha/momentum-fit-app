<%- include('../partials/header') %>

<div class="page-content-wrapper">
    
    <div style="margin-bottom: 1.5rem;">
        <a href="/client/workouts" class="text-muted" style="text-decoration: none; font-size: 0.9rem; display: inline-flex; align-items: center; gap: 5px;">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>

    <div class="dashboard-header">
        <div>
            <h2 class="text-neon" style="font-size: 1.5rem;"><%= workout.title %></h2>
            <p class="text-muted" style="font-size: 0.9rem;"><%= workout.description || 'Sem descrição.' %></p>
        </div>
        <button onclick="window.print()" class="btn btn-outline btn-sm desktop-only"><i class="fas fa-print"></i> Imprimir</button>
    </div>

    <div class="card-modern" style="padding: 0; overflow: hidden;">
        <% if (exercises && exercises.length > 0) { %>
            <div style="display: flex; flex-direction: column;">
                <% exercises.forEach((ex, index) => { %>
                    <div style="display: flex; flex-direction: column; gap: 1rem; padding: 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.05);">
                        
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <div style="width: 32px; height: 32px; background: rgba(212, 255, 0, 0.1); color: var(--primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 0.9rem;">
                                    <%= index + 1 %>
                                </div>
                                <h3 style="margin: 0; font-size: 1.1rem; color: white;"><%= ex.name %></h3>
                            </div>
                            
                            <% if (ex.video_url) { %>
                                <a href="<%= ex.video_url %>" target="_blank" style="color: #ef4444; font-size: 1.2rem;" title="Ver Vídeo">
                                    <i class="fab fa-youtube"></i>
                                </a>
                            <% } %>
                        </div>

                        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; background: rgba(255,255,255,0.02); padding: 10px; border-radius: 8px;">
                            <div style="text-align: center;">
                                <span style="display: block; font-size: 0.7rem; color: var(--text-muted);">SÉRIES</span>
                                <span style="font-weight: 600;"><%= ex.sets || '-' %></span>
                            </div>
                            <div style="text-align: center; border-left: 1px solid rgba(255,255,255,0.1); border-right: 1px solid rgba(255,255,255,0.1);">
                                <span style="display: block; font-size: 0.7rem; color: var(--text-muted);">REPS</span>
                                <span style="font-weight: 600;"><%= ex.reps || '-' %></span>
                            </div>
                            <div style="text-align: center;">
                                <span style="display: block; font-size: 0.7rem; color: var(--text-muted);">CARGA</span>
                                <span style="font-weight: 600;"><%= ex.weight ? ex.weight + 'kg' : '-' %></span>
                            </div>
                        </div>

                        <div style="display: flex; flex-direction: column; gap: 1rem;">
                            <% if (ex.notes) { %>
                                <div style="background: rgba(59, 130, 246, 0.1); padding: 10px; border-radius: 8px; border-left: 3px solid #3b82f6; font-size: 0.9rem; color: #dbeafe;">
                                    <i class="fas fa-info-circle" style="margin-right: 5px;"></i> <%= ex.notes %>
                                </div>
                            <% } %>

                            <% if (ex.image_url) { %>
                                <div style="position: relative; border-radius: 8px; overflow: hidden; max-width: 100%; border: 1px solid var(--border);">
                                    <img src="<%= ex.image_url %>" onclick="openModal(this.src)" style="width: 100%; height: 200px; object-fit: cover; cursor: zoom-in;" alt="Execução">
                                    <div style="position: absolute; bottom: 0; left: 0; right: 0; background: rgba(0,0,0,0.6); color: white; font-size: 0.7rem; padding: 4px; text-align: center; pointer-events: none;">
                                        <i class="fas fa-search"></i> Toque para ampliar
                                    </div>
                                </div>
                            <% } %>
                        </div>

                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p style="text-align: center; padding: 2rem; color: var(--text-muted);">Nenhum exercício cadastrado.</p>
        <% } %>
    </div>

    <div style="margin-top: 2rem; text-align: center;">
        <form action="/client/workouts/complete/<%= workout.id %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem; font-size: 1.1rem; border-radius: 12px;">
                <i class="fas fa-check"></i> Concluir Treino
            </button>
        </form>
    </div>
</div>

<div id="imageModal" style="display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.95); align-items: center; justify-content: center; flex-direction: column;">
    <span onclick="closeModal()" style="position: absolute; top: 20px; right: 20px; color: white; font-size: 40px; cursor: pointer; z-index: 2001;">&times;</span>
    <img id="modalImg" style="max-width: 100%; max-height: 90vh; object-fit: contain;">
</div>

<script>
    function openModal(src) {
        const modal = document.getElementById("imageModal");
        const img = document.getElementById("modalImg");
        img.src = src;
        modal.style.display = "flex";
    }
    function closeModal() {
        document.getElementById("imageModal").style.display = "none";
    }
</script>

<%- include('../partials/footer') %>
