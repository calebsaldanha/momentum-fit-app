<%- include('../partials/header.ejs', { title: 'Detalhes do Treino', bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item">Dashboard</a>
            <a href="/admin/clients" class="nav-item">Clientes</a>
            <a href="/workouts/create" class="nav-item">Criar Treino</a>
        </nav>
    </aside>
    <main class="dashboard-main">
        <section class="section">
            <div class="section-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                <div>
                    <h1><%= workout.title %></h1>
                    <p style="color: var(--c-text-secondary);">Criado em: <%= new Date(workout.created_at).toLocaleDateString('pt-BR') %></p>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <a href="/workouts/edit/<%= workout.id %>" class="btn btn-secondary">Editar Treino</a>
                    <a href="/admin/clients/<%= workout.client_id %>" class="btn btn-outline">Voltar ao Cliente</a>
                </div>
            </div>

            <div class="table-container">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th>Exercício</th>
                            <th>Séries</th>
                            <th>Reps</th>
                            <th>Descanso</th>
                            <th>Notas</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% JSON.parse(workout.exercises).forEach(ex => { %>
                        <tr>
                            <td><strong><%= ex.name %></strong></td>
                            <td><%= ex.sets %></td>
                            <td><%= ex.reps %></td>
                            <td><%= ex.rest %>s</td>
                            <td><%= ex.notes || '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
