<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <% 
       let sidebarPath = '/client/workouts';
       if(user.role === 'trainer') sidebarPath = '/trainer/clients';
       if(user.role.includes('admin')) sidebarPath = '/admin/users';
    %>
    <%- include('../partials/sidebar.ejs', { path: sidebarPath }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span class="text-muted">Treino</span>
        </div>

        <% if(messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <% if (user.role === 'admin' || user.role === 'superadmin' || user.role === 'trainer') { %>
            
            <div class="page-header" style="border-bottom: none; margin-bottom: 20px;">
                <div style="background: #222; padding: 20px; border-radius: 12px; border: 1px solid #333;">
                    <h3 style="color: var(--primary-color); margin-bottom: 15px;">Administrar Treino</h3>
                    
                    <form action="/workouts/<%= workout.id %>/update" method="POST" style="display: grid; gap: 15px; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div>
                            <label style="color: #888; font-size: 0.8rem;">Título</label>
                            <input type="text" name="title" value="<%= workout.title %>" class="form-control" style="width: 100%; padding: 8px; background: #111; border: 1px solid #444; color: white;">
                        </div>
                        <div>
                            <label style="color: #888; font-size: 0.8rem;">Dia da Semana</label>
                            <select name="day_of_week" class="form-control" style="width: 100%; padding: 8px; background: #111; border: 1px solid #444; color: white;">
                                <% ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado', 'Domingo'].forEach(day => { %>
                                    <option value="<%= day %>" <%= workout.day_of_week === day ? 'selected' : '' %>><%= day %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color: #888; font-size: 0.8rem;">Descrição / Foco</label>
                            <input type="text" name="description" value="<%= workout.description %>" class="form-control" style="width: 100%; padding: 8px; background: #111; border: 1px solid #444; color: white;">
                        </div>
                        <button class="btn btn-primary btn-sm" style="width: fit-content;">Salvar Alterações</button>
                    </form>
                </div>
            </div>

            <div class="card-box" style="margin-bottom: 30px; border: 1px dashed #444;">
                <h4 style="color: white; margin-bottom: 15px;"><i class="fas fa-plus-circle"></i> Adicionar Exercício da Biblioteca</h4>
                <form action="/workouts/<%= workout.id %>/add-exercise" method="POST" style="display: flex; gap: 10px; flex-wrap: wrap;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <select name="exercise_id" required style="flex: 2; min-width: 200px; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                        <option value="">Selecione um exercício...</option>
                        <% if(library) { library.forEach(ex => { %>
                            <option value="<%= ex.id %>"><%= ex.name %> (<%= ex.muscle_group %>)</option>
                        <% }) } %>
                    </select>
                    
                    <input type="number" name="sets" placeholder="Séries" value="3" style="width: 80px; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                    <input type="number" name="reps" placeholder="Reps" value="12" style="width: 80px; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                    <input type="text" name="load" placeholder="Kg" style="width: 80px; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                    
                    <button class="btn btn-outline" style="border-color: var(--primary-color); color: var(--primary-color);">Adicionar</button>
                </form>
            </div>

        <% } else { %>
            <div class="page-header">
                <h1><%= workout.title %></h1>
                <p class="text-neon"><%= workout.day_of_week %></p>
                <p class="text-muted"><%= workout.description || 'Siga a execução correta.' %></p>
            </div>
        <% } %>

        <div class="card-box">
            <h3 style="color: white; margin-bottom: 20px;">Lista de Exercícios</h3>
            
            <% if (exercises && exercises.length > 0) { %>
                <div class="workout-list" style="display: flex; flex-direction: column; gap: 15px;">
                    <% exercises.forEach(ex => { %>
                        <div style="background: #1a1a1a; padding: 20px; border-radius: 10px; border-left: 4px solid var(--primary-color); display: flex; flex-wrap: wrap; align-items: center; justify-content: space-between; gap: 15px;">
                            
                            <div style="flex: 1; min-width: 200px;">
                                <h4 style="color: white; margin-bottom: 5px; font-size: 1.1rem;"><%= ex.name %></h4>
                                <span class="badge-neon" style="font-size: 0.7rem; background: rgba(255,255,255,0.1); color: #ccc; border:none;"><%= ex.muscle_group || 'Geral' %></span>
                                <% if(ex.video_url) { %>
                                    <a href="<%= ex.video_url %>" target="_blank" style="font-size: 0.85rem; color: var(--primary-color); margin-left: 10px;"><i class="fas fa-play-circle"></i> Ver Vídeo</a>
                                <% } %>
                            </div>

                            <% if (user.role !== 'client') { %>
                                <form action="/workouts/<%= workout.id %>/update-exercise/<%= ex.id %>" method="POST" style="display: flex; gap: 10px; align-items: center; margin: 0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    
                                    <div style="text-align: center;">
                                        <label style="font-size: 0.6rem; color: #666; display: block;">Séries</label>
                                        <input type="number" name="sets" value="<%= ex.sets %>" style="width: 50px; padding: 5px; background: #333; border: none; color: white; text-align: center; border-radius: 4px;">
                                    </div>
                                    <div style="text-align: center;">
                                        <label style="font-size: 0.6rem; color: #666; display: block;">Reps</label>
                                        <input type="number" name="reps" value="<%= ex.reps %>" style="width: 50px; padding: 5px; background: #333; border: none; color: white; text-align: center; border-radius: 4px;">
                                    </div>
                                    <div style="text-align: center;">
                                        <label style="font-size: 0.6rem; color: #666; display: block;">Carga</label>
                                        <input type="text" name="load" value="<%= ex.load %>" style="width: 50px; padding: 5px; background: #333; border: none; color: white; text-align: center; border-radius: 4px;">
                                    </div>
                                    
                                    <button class="btn btn-sm btn-primary" title="Salvar Alterações"><i class="fas fa-save"></i></button>
                                </form>

                                <form action="/workouts/<%= workout.id %>/remove-exercise/<%= ex.id %>" method="POST" style="margin: 0;" onsubmit="return confirm('Remover este exercício?');">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn btn-sm btn-outline" style="border-color: #ff4d4d; color: #ff4d4d;"><i class="fas fa-trash"></i></button>
                                </form>
                            
                            <% } else { %>
                                <div style="display: flex; gap: 20px; text-align: center;">
                                    <div><span style="display: block; color: #888; font-size: 0.8rem;">Séries</span><strong style="color: white; font-size: 1.2rem;"><%= ex.sets %></strong></div>
                                    <div><span style="display: block; color: #888; font-size: 0.8rem;">Reps</span><strong style="color: white; font-size: 1.2rem;"><%= ex.reps %></strong></div>
                                    <div><span style="display: block; color: #888; font-size: 0.8rem;">Carga</span><strong style="color: var(--primary-color); font-size: 1.2rem;"><%= ex.load %>kg</strong></div>
                                </div>
                                <div style="display: flex; align-items: center;">
                                    <input type="checkbox" style="width: 20px; height: 20px; accent-color: var(--primary-color);">
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-muted" style="text-align: center; padding: 20px;">Nenhum exercício neste treino.</p>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
