<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <% if (user.role === 'client') { %>
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <a href="/client/dashboard" class="nav-item">Painel Geral</a>
            <a href="/client/workouts" class="nav-item active">Meus Treinos</a>
            <a href="/chat" class="nav-item">Chat</a>
            <a href="/client/profile" class="nav-item">Meu Perfil</a>
        </nav>
    </aside>
    <% } %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <div>
                    <h1><%= workout.title %></h1>
                    <p>Instrutor: <%= workout.trainer_name %></p>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <% if (user.role !== 'client') { %>
                        <a href="/workouts/<%= workout.id %>/edit" class="btn btn-secondary">Editar</a>
                    <% } %>
                    <a href="<%= user.role === 'client' ? '/client/workouts' : '/admin/dashboard' %>" class="btn btn-secondary">Voltar</a>
                </div>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Exercício</th>
                            <th>Séries x Reps</th>
                            <th>Notas</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (workout.exercises || []).forEach(ex => { %>
                        <tr>
                            <td><strong><%= ex.name %></strong></td>
                            <td><%= ex.sets %></td>
                            <td><%= ex.description || ex.notes || '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
