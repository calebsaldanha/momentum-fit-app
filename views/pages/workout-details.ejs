<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <% if (user.role === 'client') { %>
        <%- include('../partials/client-sidebar.ejs', { currentPage: 'client-workouts' }) %>
    <% } else { %>
        <%- include('../partials/admin-sidebar.ejs', { currentPage: 'admin-clients' }) %>
    <% } %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <div>
                    <h1><%= workout.title %></h1>
                    <p style="color: var(--c-text-secondary);">Instrutor: <%= workout.trainer_name %></p>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <% if (user.role !== 'client') { %>
                        <a href="/workouts/<%= workout.id %>/edit" class="btn btn-secondary">Editar Treino</a>
                        <a href="/admin/clients/<%= workout.client_id %>" class="btn btn-outline">Voltar ao Cliente</a>
                    <% } else { %>
                        <a href="/client/workouts" class="btn btn-secondary">Voltar aos Treinos</a>
                    <% } %>
                </div>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr><th>Exercício</th><th>Séries x Reps</th><th>Notas</th></tr>
                    </thead>
                    <tbody>
                        <% (workout.exercises || []).forEach(ex => { %>
                        <tr>
                            <td><strong><%= ex.name %></strong></td>
                            <td><%= ex.sets %></td>
                            <td><%= ex.description || ex.notes || '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
