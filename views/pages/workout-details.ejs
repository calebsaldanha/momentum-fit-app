<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <main class="dashboard-main" style="margin-left: 0; padding: 2rem;">
        <section class="section">
            <div class="section-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                <div>
                    <h1><%= workout.title %></h1>
                    <p style="color: var(--c-text-secondary);">Instrutor: <%= workout.trainer_name %></p>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <% if (user.role !== 'client') { %>
                        <a href="/workouts/<%= workout.id %>/edit" class="btn btn-secondary">Editar Treino</a>
                        <a href="/admin/clients/<%= workout.client_id %>" class="btn btn-outline">Voltar ao Cliente</a>
                    <% } else { %>
                        <a href="/client/dashboard" class="btn btn-outline">Voltar ao Início</a>
                    <% } %>
                </div>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Exercício</th>
                            <th>Séries x Reps</th>
                            <th>Notas</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (workout.exercises || []).forEach(ex => { %>
                        <tr>
                            <td><strong><%= ex.name %></strong></td>
                            <td><%= ex.sets %></td>
                            <td><%= ex.description || ex.notes || '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
