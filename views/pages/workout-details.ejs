<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <% if (user.role === 'client') { %>
        <%- include('../partials/client-sidebar.ejs') %>
    <% } else { %>
        <%- include('../partials/admin-sidebar.ejs') %>
    <% } %>
    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <div><h1><%= workout.title %></h1><p>Instrutor: <%= workout.trainer_name %></p></div>
                <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
            </div>
            <div class="table-container">
                <table>
                    <thead><tr><th>Exercício</th><th>Séries x Reps</th><th>Notas</th></tr></thead>
                    <tbody>
                        <% (workout.exercises || []).forEach(ex => { %>
                            <tr><td><strong><%= ex.name %></strong></td><td><%= ex.sets %></td><td><%= ex.description || '-' %></td></tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
