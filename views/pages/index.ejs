<%- include('../layouts/public/head') %>
<%- include('../layouts/public/header') %>

<section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-container">
        <div class="hero-content">
            <h1 class="hero-title text-gradient">
                <%= content ? content.hero_title : 'Treine com Inteligência' %>
            </h1>
            <p class="hero-subtitle">
                <%= content ? content.hero_subtitle : 'A evolução do seu treino começa aqui.' %>
            </p>
            
            <div class="hero-buttons">
                <% if (!user) { %>
                    <a href="/auth/register" class="btn btn-primary"><%= content ? content.cta_primary : 'Começar' %></a>
                    <a href="/plans" class="btn btn-outline"><%= content ? content.cta_secondary : 'Ver Planos' %></a>
                <% } else { %>
                    <% if (user.role === 'admin') { %>
                        <a href="/admin/dashboard" class="btn btn-primary">Ir para Admin</a>
                    <% } else if (user.role === 'trainer') { %>
                        <a href="/trainer/dashboard" class="btn btn-primary">Painel do Treinador</a>
                    <% } else { %>
                        <a href="/client/dashboard" class="btn btn-primary">Meu Treino</a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</section>

<section class="section-padding bg-subtle">
    <div class="container">
        <h2 class="section-title center">Por que Momentum?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="icon-box"><i class="fas fa-dumbbell"></i></div>
                <h3>Treinos Inteligentes</h3>
                <p>Prescrição baseada em dados e feedback real de performance.</p>
            </div>
            <div class="feature-card">
                <div class="icon-box"><i class="fas fa-robot"></i></div>
                <h3>IA Coach</h3>
                <p>Assistente virtual que ajusta cargas e tira dúvidas 24/7.</p>
            </div>
            <div class="feature-card">
                <div class="icon-box"><i class="fas fa-chart-line"></i></div>
                <h3>Evolução Visual</h3>
                <p>Acompanhe seu progresso com gráficos detalhados de carga e volume.</p>
            </div>
        </div>
    </div>
</section>

<%- include('../layouts/public/footer') %>
