<%- include('../partials/header.ejs', { title: 'Início', path: '/' }) %>

<main class="public-content">
    
    <section id="home" class="hero">
        <div class="hero-overlay"></div>
        <div class="container hero-container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Impulsione o Seu Progresso.<br>
                    <span class="text-gradient">A Sua Jornada Começa Agora.</span>
                </h1>
                <p class="hero-subtitle">
                    Conecte-se com personal trainers de elite para planos personalizados, dieta e acompanhamento contínuo via IA.
                </p>
                <div class="hero-buttons">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <a href="/client/dashboard" class="btn btn-primary btn-lg">Meu Dashboard</a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-lg">Começar Agora <i class="fas fa-arrow-right"></i></a>
                        <a href="#plans" class="btn btn-outline btn-lg">Ver Planos</a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <section id="how-it-works" class="section-padding bg-subtle">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Como Funciona</h2>
                <p style="color: #a0a0a0;">Sua evolução em 3 passos simples.</p>
            </div>
            <div class="steps-grid">
                <div class="step-item">
                    <span class="step-number">01</span>
                    <div class="step-content">
                        <h3>Escolha seu Plano</h3>
                        <p style="color: #888;">Comece gratuitamente ou escolha um plano pro para acesso a treinadores reais.</p>
                    </div>
                </div>
                <div class="step-item">
                    <span class="step-number">02</span>
                    <div class="step-content">
                        <h3>Defina Metas</h3>
                        <p style="color: #888;">Nossa IA analisa seu perfil e cria a base. Seu treinador refina a estratégia.</p>
                    </div>
                </div>
                <div class="step-item">
                    <span class="step-number">03</span>
                    <div class="step-content">
                        <h3>Treine & Evolua</h3>
                        <p style="color: #888;">App na mão. Treine, faça check-in e receba feedback em tempo real.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="section-padding">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Por que o Momentum?</h2>
                <p style="color: #a0a0a0;">Tecnologia e expertise humana unidas.</p>
            </div>
        
            <div class="features-grid">
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-robot"></i></div>
                    <h3>IA Coach</h3>
                    <p style="color: #888;">Análise de dados para ajustes de treino e insights sobre sua performance.</p>
                </div>
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-mobile-alt"></i></div>
                    <h3>App Intuitivo</h3>
                    <p style="color: #888;">Vídeos de execução, histórico de cargas e cronômetro integrado.</p>
                </div>
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-user-friends"></i></div>
                    <h3>Personal Real</h3>
                    <p style="color: #888;">Chat direto com treinadores verificados para correções de técnica e motivação.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="trainers" class="section-padding bg-subtle">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Treinadores em Destaque</h2>
                <p style="color: #a0a0a0;">Profissionais verificados prontos para te guiar.</p>
            </div>
            <div class="features-grid">
                <% const mockTrainers = [
                    { name: 'Ricardo Silva', spec: 'Hipertrofia', img: '/images/trainer1.jpg' },
                    { name: 'Ana Costa', spec: 'Emagrecimento', img: '/images/trainer2.jpg' },
                    { name: 'Carlos Mendes', spec: 'Funcional', img: '/images/trainer3.jpg' }
                ]; %>
                <% mockTrainers.forEach(trainer => { %>
                <div class="trainer-card">
                    <div class="trainer-img" style="display:flex; align-items:center; justify-content:center; color:#333;">
                        <i class="fas fa-user-ninja fa-3x"></i>
                    </div>
                    <div class="trainer-info">
                        <h3><%= trainer.name %></h3>
                        <div class="trainer-tags">
                            <span class="tag"><%= trainer.spec %></span>
                            <span class="tag">Online</span>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="section-padding">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Histórias de Sucesso</h2>
            </div>
            <div class="testimonials-scroller">
                <div class="testimonial-card">
                    <div class="user-info">
                        <h4>Lucas M.</h4>
                        <span>Plano Pro</span>
                    </div>
                    <p style="color: #ccc; margin-top: 10px; font-size: 0.9rem;">"A combinação da IA analisando meus dados com o toque humano do treinador mudou meu jogo."</p>
                </div>
                <div class="testimonial-card">
                    <div class="user-info">
                        <h4>Fernanda P.</h4>
                        <span>Plano Start</span>
                    </div>
                    <p style="color: #ccc; margin-top: 10px; font-size: 0.9rem;">"Comecei no gratuito para testar e a interface é incrível. Super fácil de usar."</p>
                </div>
                <div class="testimonial-card">
                    <div class="user-info">
                        <h4>João B.</h4>
                        <span>Plano Pro</span>
                    </div>
                    <p style="color: #ccc; margin-top: 10px; font-size: 0.9rem;">"Consegui perder 5kg em 2 meses seguindo o plano à risca. Recomendo!"</p>
                </div>
            </div>
        </div>
    </section>

    <section id="plans" class="section-padding bg-subtle">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Invista em Você</h2>
                <p style="color: #a0a0a0;">Comece hoje, evolua sempre.</p>
            </div>
            
            <div class="features-grid">
                
                <div class="feature-card">
                    <div class="plan-header">
                        <h3 class="plan-title">Start</h3>
                        <div class="plan-price">R$ 0<span>/mês</span></div>
                        <p class="plan-desc">Para quem quer começar a se movimentar com organização.</p>
                    </div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> Acesso ao App</li>
                        <li><i class="fas fa-check"></i> Biblioteca Básica</li>
                        <li><i class="fas fa-check"></i> Tracking de Peso</li>
                        <li class="muted"><i class="fas fa-times"></i> Coach IA</li>
                    </ul>
                    <a href="/auth/register?plan=free" class="btn btn-outline" style="width: 100%;">Começar Grátis</a>
                </div>

                <div class="feature-card plan-featured" style="border-color: var(--primary);">
                    <div class="badge-neon" style="position: absolute; top: -15px; left: 50%; transform: translateX(-50%);">Mais Popular</div>
                    <div class="plan-header">
                        <h3 class="plan-title" style="color: var(--primary);">Momentum Pro</h3>
                        <div class="plan-price">R$ 89,90<span>/mês</span></div>
                        <p class="plan-desc">A experiência completa com inteligência artificial.</p>
                    </div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> <strong>Tudo do Start</strong></li>
                        <li><i class="fas fa-check"></i> Coach IA Ilimitado</li>
                        <li><i class="fas fa-check"></i> Geração de Treinos</li>
                        <li><i class="fas fa-check"></i> Dieta Inteligente</li>
                    </ul>
                    <a href="/auth/register?plan=pro" class="btn btn-primary" style="width: 100%;">Assinar Pro</a>
                </div>

                <div class="feature-card">
                    <div class="plan-header">
                        <h3 class="plan-title">VIP Personal</h3>
                        <div class="plan-price">R$ 249,90<span>/mês</span></div>
                        <p class="plan-desc">Acompanhamento humano dedicado para resultados máximos.</p>
                    </div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> <strong>Tudo do Pro</strong></li>
                        <li><i class="fas fa-check"></i> Personal Trainer Real</li>
                        <li><i class="fas fa-check"></i> Chat Direto (WhatsApp)</li>
                        <li><i class="fas fa-check"></i> Ajustes Semanais</li>
                    </ul>
                    <button class="btn btn-outline" style="width: 100%; cursor: not-allowed;" disabled>Vagas Esgotadas</button>
                </div>

            </div>
        </div>
    </section>

</main>

<%- include('../partials/footer.ejs') %>
