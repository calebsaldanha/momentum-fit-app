<%- include('../partials/header.ejs') %>

<main class="public-content">
    
    <section id="home" class="hero">
        <div class="hero-overlay"></div>
        <div class="container hero-container">
            <div class="hero-content">
                <span class="badge-neon">Momentum Fit</span>
                <h1 class="hero-title">
                    Impulsione o Seu Progresso.<br>
                    <span class="text-gradient">A Sua Jornada Começa Agora.</span>
                </h1>
                <p class="hero-subtitle">
                    Conecte-se com personal trainers de elite para planos personalizados, dieta e acompanhamento contínuo via IA.
                </p>
                <div class="hero-buttons">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <% if (user.role === 'client') { %>
                            <a href="/client/dashboard" class="btn btn-primary btn-lg">Meu Dashboard</a>
                        <% } else if (user.role === 'trainer') { %>
                            <a href="/trainer/dashboard" class="btn btn-primary btn-lg">Painel do Treinador</a>
                        <% } else { %>
                            <a href="/admin/dashboard" class="btn btn-primary btn-lg">Admin</a>
                        <% } %>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-lg">Começar Agora <i class="fas fa-arrow-right"></i></a>
                        <a href="#plans" class="btn btn-outline btn-lg">Ver Planos</a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="section-padding bg-subtle">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Por que o Momentum?</h2>
                <p style="color: #a0a0a0;">Tecnologia e expertise humana unidas.</p>
            </div>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-robot"></i></div>
                    <h3>IA Coach</h3>
                    <p style="color: #888;">Análise de dados para ajustes de treino em tempo real.</p>
                </div>
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-mobile-alt"></i></div>
                    <h3>App Intuitivo</h3>
                    <p style="color: #888;">Treinos, vídeos e histórico na palma da mão.</p>
                </div>
                <div class="feature-card">
                    <div class="icon-box"><i class="fas fa-user-friends"></i></div>
                    <h3>Personal Real</h3>
                    <p style="color: #888;">Chat direto com seu treinador para correções e suporte.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="plans" class="section-padding">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Invista em Você</h2>
                <p style="color: #a0a0a0;">Planos flexíveis, cancele quando quiser.</p>
            </div>
            
            <div class="features-grid" style="align-items: center;">
                <div class="feature-card" style="border: 1px solid #333;">
                    <h3 style="font-size: 1.5rem; margin-bottom: 10px;">Mensal</h3>
                    <div style="font-size: 2.5rem; font-weight: 800; color: white; margin-bottom: 20px;">
                        R$ 89,90<span style="font-size: 1rem; color: #666; font-weight: 400;">/mês</span>
                    </div>
                    <ul style="margin-bottom: 30px; color: #ccc; padding-left: 20px; text-align: left;">
                        <li style="margin-bottom: 10px;">• Treino Personalizado</li>
                        <li style="margin-bottom: 10px;">• Chat com Treinador</li>
                        <li style="margin-bottom: 10px;">• App Mobile</li>
                    </ul>
                    <a href="/auth/register?plan=monthly" class="btn btn-outline" style="width: 100%;">Assinar Mensal</a>
                </div>

                <div class="feature-card plan-featured" style="border-color: var(--primary-color); transform: scale(1.05); background: #151515;">
                    <div style="position: absolute; top: -15px; left: 50%; transform: translateX(-50%); background: var(--primary-color); color: #000; padding: 5px 15px; border-radius: 20px; font-weight: 700; font-size: 0.8rem;">MAIS POPULAR</div>
                    <h3 style="font-size: 1.5rem; margin-bottom: 10px; color: var(--primary-color);">Trimestral</h3>
                    <div style="font-size: 2.5rem; font-weight: 800; color: white; margin-bottom: 20px;">
                        R$ 79,90<span style="font-size: 1rem; color: #666; font-weight: 400;">/mês</span>
                    </div>
                    <ul style="margin-bottom: 30px; color: #fff; padding-left: 20px; text-align: left;">
                        <li style="margin-bottom: 10px;">• <strong>Tudo do Mensal</strong></li>
                        <li style="margin-bottom: 10px;">• Avaliação por IA</li>
                        <li style="margin-bottom: 10px;">• Suporte Prioritário</li>
                    </ul>
                    <a href="/auth/register?plan=quarterly" class="btn btn-primary" style="width: 100%;">Assinar Agora</a>
                </div>

                 <div class="feature-card" style="border: 1px solid #333;">
                    <h3 style="font-size: 1.5rem; margin-bottom: 10px;">Anual</h3>
                    <div style="font-size: 2.5rem; font-weight: 800; color: white; margin-bottom: 20px;">
                        R$ 69,90<span style="font-size: 1rem; color: #666; font-weight: 400;">/mês</span>
                    </div>
                    <ul style="margin-bottom: 30px; color: #ccc; padding-left: 20px; text-align: left;">
                        <li style="margin-bottom: 10px;">• Economia Máxima</li>
                        <li style="margin-bottom: 10px;">• Nutrição (Beta)</li>
                        <li style="margin-bottom: 10px;">• Acesso Vitalício</li>
                    </ul>
                    <a href="/auth/register?plan=annual" class="btn btn-outline" style="width: 100%;">Assinar Anual</a>
                </div>
            </div>
        </div>
    </section>

</main>

<%- include('../partials/footer.ejs') %>
