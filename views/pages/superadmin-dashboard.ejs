<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/superadmin-sidebar.ejs', { currentPage: 'super-dashboard' }) %>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Aprovação de Personais</h1>
                <p>Personais aguardando liberação na plataforma.</p>
            </div>
            <% if (trainers && trainers.length > 0) { %>
                <div class="table-container">
                    <table>
                        <thead><tr><th>Nome</th><th>Email</th><th>Data Cadastro</th><th style="text-align: right;">Ações</th></tr></thead>
                        <tbody>
                            <% trainers.forEach(trainer => { %>
                            <tr>
                                <td><%= trainer.name %></td>
                                <td><%= trainer.email %></td>
                                <td><%= new Date(trainer.created_at).toLocaleDateString('pt-BR') %></td>
                                <td style="text-align: right;">
                                    <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                                        <form action="/superadmin/trainers/approve/<%= trainer.id %>" method="POST" style="margin:0;">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="btn btn-primary btn-sm">Aprovar</button>
                                        </form>
                                        <form action="/superadmin/trainers/reject/<%= trainer.id %>" method="POST" style="margin:0;">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="btn btn-secondary btn-sm">Rejeitar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state"><p>Tudo limpo! Nenhum personal pendente.</p></div>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
