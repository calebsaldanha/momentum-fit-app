<%- include('../partials/header', { title: 'Gestão Global', bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'superadmin-dashboard' }) %>

    <main class="dashboard-main">
        <div class="container">
            <h1 style="margin-bottom: 2rem;">Visão Global (Super Admin)</h1>

            <% if (stats.pendingTrainers > 0) { %>
                <div class="alert alert-warning" style="border-left: 4px solid #f59e0b; display: flex; justify-content: space-between; align-items: center;">
                    <span><strong><%= stats.pendingTrainers %></strong> personal(is) aguardando aprovação.</span>
                    <a href="/superadmin/manage" class="btn btn-sm btn-primary">Ver</a>
                </div>
            <% } %>
            
            <% if (stats.pendingClients > 0) { %>
                <div class="alert alert-warning" style="border-left: 4px solid #f59e0b; display: flex; justify-content: space-between; align-items: center; margin-top: 10px;">
                    <span><strong><%= stats.pendingClients %></strong> cliente(s) aguardando aprovação.</span>
                    <a href="/superadmin/manage" class="btn btn-sm btn-primary">Ver</a>
                </div>
            <% } %>

            <div class="stats-grid" style="margin-top: 2rem;">
                <div class="stat-card">
                    <h3>Total Clientes</h3>
                    <div class="number"><%= stats.clients %></div>
                </div>
                <div class="stat-card">
                    <h3>Total Personais</h3>
                    <div class="number"><%= stats.trainers %></div>
                </div>
            </div>
            
            <div style="margin-top: 3rem;">
                <h3>Acesso Rápido</h3>
                <div style="display: flex; gap: 10px; margin-top: 10px;">
                    <a href="/superadmin/manage" class="btn btn-secondary">Gerenciar Todos Usuários</a>
                    <a href="/articles/create" class="btn btn-secondary">Publicar Artigo</a>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
