<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/library' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Biblioteca</span>
        </div>

        <div class="page-header" style="display: flex; justify-content: space-between; align-items: center;">
            <h1>Biblioteca de <span class="text-neon">Exercícios</span></h1>
            <button class="btn btn-primary"><i class="fas fa-plus"></i> Novo Exercício</button>
        </div>

        <div class="card-box">
            <% if (exercises && exercises.length > 0) { %>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Grupo Muscular</th>
                                <th>Vídeo</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% exercises.forEach(ex => { %>
                                <tr>
                                    <td><%= ex.name %></td>
                                    <td><%= ex.muscle_group %></td>
                                    <td>
                                        <% if(ex.video_url) { %>
                                            <a href="<%= ex.video_url %>" target="_blank" class="text-neon"><i class="fas fa-play-circle"></i> Ver</a>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline"><i class="fas fa-edit"></i></button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-muted" style="text-align: center; padding: 20px;">Nenhum exercício encontrado. Adicione o primeiro!</p>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
