<%- include('../partials/header.ejs') %>
<div class="layout-wrapper">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <h1>Biblioteca de Exercícios</h1>
            <div class="card-box">
                <table class="data-table">
                    <thead><tr><th>Nome</th><th>Músculo</th><th>Ação</th></tr></thead>
                    <tbody>
                        <% if(exercises && exercises.length > 0) { %>
                            <% exercises.forEach(ex => { %>
                            <tr><td><%= ex.name %></td><td><%= ex.muscle_group %></td><td><button class="btn btn-sm btn-outline">+</button></td></tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3">Nenhum exercício cadastrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
