<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/app/head') %>
    <title>Meu Plano | Momentum Fit</title>
</head>
<body>
    <div class="dashboard-wrapper">
        <%- include('../partials/sidebar') %>
        <div class="main-content">
            <%- include('../partials/app-header', { title: 'Assinatura' }) %>

            <div class="content-pad">
                <div class="card" style="max-width: 600px; margin: 0 auto; border-top: 4px solid var(--neon-primary);">
                    <div style="text-align: center; padding: 40px 0;">
                        <span class="badge badge-neutral" style="font-size: 1rem; margin-bottom: 15px;">PLANO ATUAL</span>
                        <h1 style="font-size: 3rem; color: white; margin-bottom: 10px;"><%= plan.name %></h1>
                        <p style="font-size: 1.5rem; color: var(--neon-primary);">R$ <%= plan.price %> <span style="font-size: 0.9rem; color: #888;">/ mÃªs</span></p>
                    </div>
                    <ul style="margin: 0 auto 30px; max-width: 300px; list-style: none;">
                        <% plan.features.forEach(f => { %>
                            <li style="margin-bottom: 10px; color: #ccc;"><i class="fas fa-check" style="color: var(--neon-primary); margin-right: 10px;"></i> <%= f %></li>
                        <% }) %>
                    </ul>
                    <button class="btn btn-outline btn-block">Gerenciar Assinatura</button>
                    <button class="btn btn-primary btn-block" style="margin-top: 10px;">Fazer Upgrade</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
