<%- include('../partials/header.ejs', { title: 'Meus Treinos', bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <main class="dashboard-main" style="margin-left:0; padding: 2rem;">
        <section class="section">
            <h1>Meus Treinos</h1>
            <div class="workouts-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 2rem;">
                <% if (workouts.length > 0) { %>
                    <% workouts.forEach(workout => { %>
                        <div class="info-card">
                            <h3><%= workout.title %></h3>
                            <p style="color: var(--c-text-secondary); margin-bottom: 1rem;">
                                Instrutor: <%= workout.trainer_name %>
                            </p>
                            <a href="/workouts/<%= workout.id %>" class="btn btn-primary btn-sm">Ver Treino Completo</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Você ainda não possui treinos atribuídos.</p>
                <% } %>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
