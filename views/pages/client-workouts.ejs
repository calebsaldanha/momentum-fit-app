<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/app/head') %>
    <title>Meus Treinos | Momentum Fit</title>
</head>
<body>
    <div class="dashboard-wrapper">
        <%- include('../partials/sidebar') %>
        <div class="main-content">
            <%- include('../partials/app-header', { title: 'Biblioteca de Treinos' }) %>

            <div class="content-pad">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
                    <h1 style="font-size: 1.8rem;">Seus Programas</h1>
                    <div style="display: flex; gap: 10px;">
                        <input type="text" placeholder="Buscar treino..." style="width: 250px; padding: 10px;">
                    </div>
                </div>

                <div class="grid-3">
                    <% if (workouts && workouts.length > 0) { %>
                        <% workouts.forEach(w => { %>
                            <div class="card" style="display: flex; flex-direction: column; justify-content: space-between;">
                                <div>
                                    <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                                        <span class="badge badge-neutral"><%= w.category %></span>
                                        <% if(w.difficulty === 'Hard') { %>
                                            <span style="color: #ef4444; font-size: 0.8rem;"><i class="fas fa-fire"></i> Intenso</span>
                                        <% } else { %>
                                            <span style="color: var(--neon-primary); font-size: 0.8rem;"><i class="fas fa-bolt"></i> Normal</span>
                                        <% } %>
                                    </div>
                                    <h3 style="font-size: 1.4rem; margin-bottom: 10px;"><%= w.name %></h3>
                                    <p style="font-size: 0.9rem; margin-bottom: 20px;">Duração estimada: <%= w.duration %></p>
                                </div>
                                <a href="/client/workouts/<%= w.id %>" class="btn btn-outline btn-block">Ver Detalhes</a>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div style="grid-column: span 3; text-align: center; padding: 40px; background: rgba(255,255,255,0.02); border-radius: 12px;">
                            <i class="fas fa-dumbbell" style="font-size: 3rem; color: #333; margin-bottom: 15px;"></i>
                            <p>Nenhum treino disponível no momento.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
