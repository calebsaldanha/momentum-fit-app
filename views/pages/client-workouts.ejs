<%- include('../partials/header', { bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/client-sidebar') %>
    <main class="dashboard-main">
        <div class="container">
            <h1 style="margin-bottom: 2rem;">Meus Treinos</h1>
            <% if (workouts && workouts.length > 0) { %>
                <div class="workouts-grid">
                    <% workouts.forEach(w => { %>
                        <div class="workout-card">
                            <h3><%= w.title %></h3>
                            <a href="/workouts/<%= w.id %>" class="btn btn-secondary btn-sm">Acessar</a>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div style="text-align: center; padding: 4rem 2rem; background: var(--c-bg-card); border-radius: 12px; border: 1px dashed var(--c-border);">
                    <img src="/images/momentum-fit-icon.png" style="width: 80px; margin: 0 auto 20px; opacity: 0.5;">
                    <h3 style="color: var(--c-text-primary);">Nenhum treino disponível ainda</h3>
                    <p style="color: var(--c-text-secondary); max-width: 500px; margin: 0 auto;">
                        Seu treinador está elaborando um plano personalizado para seus objetivos. 
                        Você receberá uma notificação assim que o treino estiver pronto.
                    </p>
                </div>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
