<%- include('../partials/header.ejs') %>
<div class="layout-wrapper">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <h1>Meus Treinos</h1>
            <div class="content-grid">
                <% if(workouts && workouts.length > 0) { %>
                    <% workouts.forEach(w => { %>
                    <div class="card-box">
                        <h3><%= w.title %></h3>
                        <p class="text-muted"><%= w.day_of_week || 'Flexível' %></p>
                        <a href="/client/workout/<%= w.id %>" class="btn btn-primary btn-full">Começar</a>
                    </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">Nenhum treino disponível.</p>
                <% } %>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
