<%- include('../partials/header.ejs', { title: 'Meus Treinos', bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/client-sidebar.ejs') %>
    
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Meus Treinos</h1>
            </div>

            <% if (typeof workouts !== 'undefined' && workouts.length > 0) { %>
                <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
                    <% workouts.forEach(w => { %>
                        <div class="card" style="border: 1px solid var(--c-border); border-radius: 8px; overflow: hidden; background: var(--c-bg-card); transition: transform 0.2s;">
                            <div style="height: 8px; background: var(--c-accent-primary);"></div>
                            <div style="padding: 20px;">
                                <h3 style="margin-top: 0; font-size: 1.2rem; color: var(--c-text-primary);"><%= w.title %></h3>
                                <p style="color: var(--c-text-secondary); font-size: 0.9rem; margin-bottom: 20px;">
                                    <i class="far fa-calendar-alt"></i> Criado em <%= new Date(w.created_at).toLocaleDateString('pt-BR') %>
                                </p>
                                
                                <% if(w.trainer_name) { %>
                                    <p style="font-size:0.85rem; color: #666; margin-bottom:15px;">
                                        Treinador: <%= w.trainer_name %>
                                    </p>
                                <% } %>

                                <a href="/workouts/<%= w.id %>" class="btn btn-primary btn-sm" style="width: 100%; justify-content: center;">
                                    Acessar Treino <i class="fas fa-arrow-right" style="margin-left:5px;"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div style="text-align: center; padding: 4rem 2rem; background: var(--c-bg-card); border-radius: 12px; border: 1px dashed var(--c-border);">
                    <i class="fas fa-dumbbell" style="font-size: 3rem; color: var(--c-text-secondary); margin-bottom: 20px; opacity: 0.5;"></i>
                    <h3 style="color: var(--c-text-primary);">Nenhum treino disponível ainda</h3>
                    <p style="color: var(--c-text-secondary); max-width: 500px; margin: 0 auto;">
                        Seu treinador está elaborando um plano personalizado para seus objetivos. 
                        Você receberá uma notificação assim que o treino estiver pronto.
                    </p>
                </div>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
