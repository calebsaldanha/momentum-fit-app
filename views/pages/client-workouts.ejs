<%- include('../partials/header.ejs', { title: 'Meus Treinos', currentPage: '/client/workouts' }) %>

<div class="page-header">
    <div class="container">
        <h1>Meus Treinos</h1>
        <p>Acesse sua rotina e registre seu progresso.</p>
    </div>
</div>

<div class="content-grid">
    <% if (workouts && workouts.length > 0) { %>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
            <% workouts.forEach(workout => { %>
                <div class="card-box">
                    <h3 style="color: white; margin-bottom: 10px;"><%= workout.title || 'Treino Sem Título' %></h3>
                    <p style="color: #888; font-size: 0.9rem; margin-bottom: 15px;">
                        <%= workout.description || 'Sem descrição.' %>
                    </p>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: auto;">
                        <span style="font-size: 0.8rem; color: #666;">
                            <i class="fas fa-calendar"></i> <%= new Date(workout.created_at).toLocaleDateString('pt-BR') %>
                        </span>
                        <a href="/client/workouts/<%= workout.id %>" class="btn btn-sm btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="card-box" style="text-align: center; padding: 40px;">
            <i class="fas fa-dumbbell" style="font-size: 3rem; color: #333; margin-bottom: 20px;"></i>
            <h3>Nenhum treino encontrado</h3>
            <p style="color: #888;">Seu treinador ainda não atribuiu treinos para você.</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>
