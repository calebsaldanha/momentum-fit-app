<%- include('../partials/header.ejs', { title: 'Meus Treinos', currentPage: 'workouts' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'workouts' }) %>

    <main class="dashboard-main">
        <div class="page-header">
            <h1 class="page-title">Meus Treinos</h1>
            <p class="text-muted">Biblioteca completa dos seus planos de exerc√≠cio.</p>
        </div>

        <% if (workouts && workouts.length > 0) { %>
            <div class="grid-cols-2">
                <% workouts.forEach(workout => { %>
                    <div class="card-modern">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1rem;">
                            <span style="background: rgba(255,255,255,0.1); padding: 4px 10px; border-radius: 20px; font-size: 0.8rem; color: var(--text-secondary);">
                                <%= workout.difficulty_level || 'Geral' %>
                            </span>
                            <i class="fas fa-ellipsis-h text-muted" style="cursor: pointer;"></i>
                        </div>
                        
                        <h3 style="font-size: 1.4rem; margin-bottom: 0.5rem;"><%= workout.title %></h3>
                        <p class="text-muted" style="font-size: 0.9rem; flex: 1;">
                            Criado por: <%= workout.trainer_name %>
                        </p>

                        <div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
                            <a href="/client/workouts/<%= workout.id %>" class="btn btn-primary btn-full">
                                <i class="fas fa-play"></i> Ver Detalhes
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="card-modern text-center" style="padding: 4rem;">
                <i class="fas fa-dumbbell text-muted" style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;"></i>
                <h3>Nenhum treino encontrado</h3>
                <p class="text-muted">Aguarde seu treinador criar seu primeiro plano.</p>
            </div>
        <% } %>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
