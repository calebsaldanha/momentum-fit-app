<%- include('../partials/header.ejs') %>

<div class="page-content-wrapper">
    <div class="page-header" style="margin-bottom: 2rem;">
        <h2 class="text-neon"><i class="fas fa-dumbbell"></i> Meus Treinos</h2>
        <p class="text-muted">Sua rotina personalizada de exercícios.</p>
    </div>

    <% if (typeof workouts !== 'undefined' && workouts.length > 0) { %>
        <div class="workouts-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
            <% workouts.forEach(workout => { %>
                <div class="workout-card card-modern" style="display: flex; flex-direction: column; height: 100%;">
                    <div class="card-header" style="margin-bottom: 1rem;">
                        <h3 style="margin: 0; color: white;"><%= workout.name %></h3>
                        <span class="badge" style="background: var(--bg-hover); padding: 4px 8px; border-radius: 4px; font-size: 0.8rem; margin-top: 5px; display: inline-block;">
                            <%= workout.difficulty || 'Geral' %>
                        </span>
                    </div>
                    <p class="text-muted" style="flex: 1;"><%= workout.description || 'Sem descrição.' %></p>
                    <a href="/client/workouts/<%= workout.id %>" class="btn btn-outline" style="width: 100%; margin-top: 1rem; text-align: center;">
                        Ver Detalhes <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state card-modern" style="text-align: center; padding: 4rem 2rem;">
            <div style="font-size: 3rem; color: var(--text-muted); margin-bottom: 1rem;"><i class="fas fa-clipboard-list"></i></div>
            <h3>Nenhum treino encontrado</h3>
            <p class="text-muted">Seu treinador ainda não atribuiu treinos para você.</p>
            <a href="/chat" class="btn btn-primary" style="margin-top: 1rem;">Solicitar Treino</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>
