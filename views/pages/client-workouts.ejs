<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/client/workouts' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span>Treinos</span>
        </div>

        <div class="page-header">
            <h1>Meus <span class="text-neon">Treinos</span></h1>
            <p>Sua ficha atualizada.</p>
        </div>

        <% if (workouts && workouts.length > 0) { %>
            <div style="display: grid; gap: 20px;">
                <% workouts.forEach(workout => { %>
                    <div class="card-box">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <h3 style="color: white; margin-bottom: 5px;"><%= workout.title %></h3>
                                <span class="badge-neon" style="font-size: 0.8rem;"><%= workout.day_of_week %></span>
                            </div>
                            <a href="/workouts/<%= workout.id %>" class="btn btn-primary btn-sm">Ver Detalhes</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="card-box" style="text-align: center;">
                <p class="text-muted">Nenhum treino atribu√≠do ainda.</p>
            </div>
        <% } %>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
