<%- include('../partials/header.ejs', { title: 'Contato', path: '/contact' }) %>

<main class="public-content">
    <section class="hero" style="min-height: 100vh; align-items: center; padding-top: 100px;">
        <div class="hero-overlay"></div>
        <div class="container" style="position: relative; z-index: 2; width: 100%;">
            <div class="section-header center">
                <h1 class="section-title">Fale Conosco</h1>
                <p style="color: #ccc;">Estamos prontos para ajudar você a alcançar seus objetivos.</p>
            </div>

            <div class="contact-wrapper">
                <div class="contact-info-box" style="display: flex; flex-direction: column; justify-content: center;">
                    <h3 style="color:white; margin-bottom:20px;">Canais de Atendimento</h3>
                    <ul style="list-style:none; padding:0;">
                        <li style="margin-bottom:20px; display:flex; align-items:center; gap:15px; color:#ccc;">
                            <div class="icon-box" style="margin-bottom: 0; width: 50px; height: 50px;">
                                <i class="fas fa-envelope" style="color:var(--primary)"></i>
                            </div>
                            <div>
                                <strong style="display:block; color:white;">Email</strong>
                                <a href="mailto:admin@momentumfitness.com.br" style="color: #ccc; text-decoration: none;">admin@momentumfitness.com.br</a>
                            </div>
                        </li>
                    </ul>
                    <p style="color: #888; margin-top: 20px; font-size: 0.9rem;">
                        Nosso tempo médio de resposta é de 24 horas úteis.
                    </p>
                </div>

                <div class="contact-form-box">
                    <form onsubmit="event.preventDefault(); alert('Mensagem enviada! Em breve entraremos em contato.');">
                        <div class="form-group" style="margin-bottom:15px;">
                            <label style="color:#ccc; display:block; margin-bottom:5px;">Nome</label>
                            <input type="text" class="form-control" style="width:100%; padding:12px; background:#222; border:1px solid #333; color:white; border-radius:8px;" required>
                        </div>
                        <div class="form-group" style="margin-bottom:15px;">
                            <label style="color:#ccc; display:block; margin-bottom:5px;">Email</label>
                            <input type="email" class="form-control" style="width:100%; padding:12px; background:#222; border:1px solid #333; color:white; border-radius:8px;" required>
                        </div>
                        <div class="form-group" style="margin-bottom:20px;">
                            <label style="color:#ccc; display:block; margin-bottom:5px;">Mensagem</label>
                            <textarea rows="4" class="form-control" style="width:100%; padding:12px; background:#222; border:1px solid #333; color:white; border-radius:8px;" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width:100%;">Enviar Mensagem</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs') %>
