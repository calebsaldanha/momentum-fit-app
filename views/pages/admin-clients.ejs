<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'clients' }) %>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Meus Alunos</h1>
                <p>Gerencie o progresso e os treinos.</p>
            </div>
            
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Status</th>
                            <th>Nível</th>
                            <th style="text-align: right;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (clients.length > 0) { %>
                            <% clients.forEach(c => { %>
                                <tr>
                                    <td>
                                        <div style="font-weight: bold;"><%= c.name %></div>
                                        <div style="font-size: 0.8rem; color: #888;"><%= c.email %></div>
                                    </td>
                                    <td>
                                        <% if (c.status === 'active') { %>
                                            <span style="color: var(--c-success);">Ativo</span>
                                        <% } else { %>
                                            <span style="color: #f59e0b;">Pendente</span>
                                        <% } %>
                                    </td>
                                    <td><%= c.fitness_level || '-' %></td>
                                    <td style="text-align: right;">
                                        <a href="/admin/clients/<%= c.id %>" class="btn btn-secondary btn-sm" style="background: var(--c-accent-primary); color: black; border: none;">Ver Perfil</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" style="text-align: center;">Nenhum aluno atribuído.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
