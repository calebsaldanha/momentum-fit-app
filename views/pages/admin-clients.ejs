<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/header', { title: 'Meus Alunos', bodyClass: 'dashboard-body' }) %>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { currentPage: 'clients' }) %>
        
        <main class="dashboard-main">
            <header class="mb-4">
                <h1>Meus Alunos</h1>
                <p class="text-muted">Acompanhe o progresso e prescreva treinos.</p>
            </header>
            
            <div class="dashboard-card">
                <% if (clients && clients.length > 0) { %>
                    <div class="table-responsive">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Status</th>
                                    <th>Nível</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% clients.forEach(c => { %>
                                    <tr>
                                        <td>
                                            <div class="user-info-flex">
                                                <img src="<%= c.profile_image || '/images/default-profile.png' %>" class="user-avatar-sm">
                                                <div>
                                                    <div class="fw-bold"><%= c.name %></div>
                                                    <small class="text-muted"><%= c.email %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-<%= c.status === 'active' ? 'active' : 'pending' %>">
                                                <%= c.status === 'active' ? 'Ativo' : 'Pendente' %>
                                            </span>
                                        </td>
                                        <td><%= c.fitness_level || '-' %></td>
                                        <td class="text-end">
                                            <a href="/workouts/create?client_id=<%= c.id %>" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Treino</a>
                                            <a href="/admin/clients/<%= c.id %>" class="btn btn-sm btn-secondary"><i class="fas fa-user"></i> Perfil</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <p class="text-muted">Você ainda não tem alunos atribuídos.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>
