<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/users' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Usuários</span>
        </div>

        <div class="page-header">
            <h1>Todos os <span class="text-neon">Usuários</span></h1>
        </div>

        <div class="card-box">
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Tipo</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof users !== 'undefined' && users.length > 0) { %>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td><%= u.name %></td>
                                    <td><%= u.email %></td>
                                    <td>
                                        <span style="padding: 4px 8px; border-radius: 4px; background: rgba(255,255,255,0.1); font-size: 0.8rem;">
                                            <%= u.role.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline">Editar</button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" style="text-align:center;">Nenhum usuário encontrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer.ejs') %>
