<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div class="page-header">
                <h1>Base de Usuários</h1>
                <p class="text-muted">Gerencie o acesso de clientes e treinadores.</p>
            </div>
            <div class="card-box">
                <div class="table-responsive">
                    <table class="data-table">
                        <thead><tr><th>Nome</th><th>Email</th><th>Tipo</th><th>Status</th><th>Ação</th></tr></thead>
                        <tbody>
                            <% users.forEach(u => { %>
                            <tr>
                                <td><%= u.name %></td>
                                <td><%= u.email %></td>
                                <td><span class="badge"><%= u.role %></span></td>
                                <td><%= u.is_active ? 'Ativo' : 'Inativo' %></td>
                                <td><button class="btn btn-sm btn-outline"><i class="fas fa-cog"></i></button></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
