<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <% if (user.role === 'superadmin') { %>
                <a href="/superadmin/dashboard" class="nav-item" style="color: var(--c-accent-primary);"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Voltar Super Admin</a>
                <div style="height: 1px; background: #eee; margin: 0.5rem 1rem;"></div>
            <% } %>
            <a href="/admin/dashboard" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Dashboard</a>
            <a href="/admin/clients" class="nav-item active"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Clientes</a>
            <a href="/workouts/create" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Criar Treino</a>
            <a href="/chat" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Chat</a>
        </nav>
        
        <div class="sidebar-footer">
            <form action="/auth/logout" method="POST" style="margin: 0;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn-logout-sidebar">Sair</button>
            </form>
        </div>
    </aside>

    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Gerenciar Clientes</h1>
                <p>Lista completa de alunos ativos na plataforma.</p>
            </div>
        
            <% if (clients && clients.length > 0) { %>
                <div class="clients-grid">
                    <% clients.forEach(client => { %>
                        <div class="client-card">
                             <div class="client-card-header">
                                <h3><%= client.name %></h3>
                                <p style="font-size: 0.9rem; color: var(--c-text-secondary); margin:0;"><%= client.email %></p>
                             </div>
                            <div class="client-card-info">
                                <p><strong>NÃ­vel:</strong> <%= client.fitness_level || 'NÃ£o informado' %></p>
                                <p><strong>Cadastro:</strong> <%= new Date(client.created_at).toLocaleDateString('pt-BR') %></p>
                            </div>
                            <div class="client-card-footer">
                                 <a href="/admin/clients/<%= client.id %>" class="btn btn-primary btn-sm" style="width: 100%;">Ver Detalhes</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state" style="text-align: center; padding: 3rem;">
                    <p>Nenhum cliente cadastrado ainda.</p>
                </div>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
