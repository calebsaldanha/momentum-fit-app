<%- include('../partials/header', { bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/admin-sidebar') %>
    <main class="dashboard-main">
        <div class="container">
            <h1>Gerenciar Clientes</h1>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Status</th>
                            <th>Treinador</th>
                            <th>Nível</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (clients.length > 0) { %>
                            <% clients.forEach(c => { %>
                                <tr>
                                    <td>
                                        <div style="font-weight: bold;"><%= c.name %></div>
                                        <div style="font-size: 0.8rem; color: #888;"><%= c.email %></div>
                                    </td>
                                    <td>
                                        <% if (c.status === 'pending_approval') { %>
                                            <span style="color: #f59e0b; font-weight: bold;">[Pendente]</span>
                                        <% } else if (c.status === 'active') { %>
                                            <span style="color: var(--c-success);">[Ativo]</span>
                                        <% } else { %>
                                            <span style="color: var(--c-error);">[Inativo]</span>
                                        <% } %>
                                    </td>
                                    <td><%= c.trainer_name || '---' %></td>
                                    <td><%= c.fitness_level || '---' %></td>
                                    <td style="display: flex; gap: 10px;">
                                        <a href="/admin/clients/<%= c.id %>" class="btn btn-secondary btn-sm" style="background: var(--c-accent-primary); color: black; border: none;">Ver Detalhes</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" style="text-align: center;">Nenhum cliente encontrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
