<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/header', { title: 'Meus Alunos' }) %>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { currentPage: 'clients' }) %>
        
        <main class="dashboard-main">
            <header class="page-header">
                <div>
                    <h1>Meus Alunos</h1>
                    <p>Acompanhe o progresso e gerencie treinos.</p>
                </div>
            </header>
            
            <div class="card-modern">
                <% if (clients && clients.length > 0) { %>
                    <div class="table-container">
                        <table class="table-modern">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Status</th>
                                    <th>Última Atividade</th>
                                    <th style="text-align: right;">Prescrição</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% clients.forEach(c => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="<%= c.profile_image || '/images/default-profile.png' %>" class="avatar-ring">
                                                <span class="fw-bold"><%= c.name %></span>
                                            </div>
                                        </td>
                                        <td><span class="badge badge-active">Ativo</span></td>
                                        <td class="text-muted">--</td>
                                        <td style="text-align: right;">
                                            <a href="/workouts/create?client_id=<%= c.id %>" class="btn btn-primary btn-sm">
                                                <i class="fas fa-plus"></i> Criar Treino
                                            </a>
                                            <a href="/admin/clients/<%= c.id %>" class="btn btn-ghost btn-sm">Perfil</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <p class="text-muted">Você ainda não possui alunos atribuídos.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>
