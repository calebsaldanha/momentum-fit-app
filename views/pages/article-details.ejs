<%- include('../partials/header.ejs') %>

<main style="padding-top: 120px;">
    <section>
        <div class="container" style="max-width: 800px;">
            <div class="article-header" style="text-align: center; margin-bottom: 3rem;">
                <p style="font-size: 1rem; color: var(--c-accent-primary); font-weight: 600; margin-bottom: 0.5rem;"><%= article.category %></p>
                <h1 style="font-size: 2.8rem; margin-bottom: 1rem;"><%= article.title %></h1>
                <p>Por <strong><%= article.author_name %></strong> em <%= new Date(article.created_at).toLocaleDateString('pt-BR') %></p>
            </div>

            <div class="article-content" style="font-size: 1.1rem; line-height: 1.8;">
                <%- article.content.replace(/\n/g, '<br>') %>
            </div>

            <div style="text-align: center; margin-top: 3rem;">
                <a href="/articles" class="btn btn-secondary">Voltar para todos os artigos</a>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs') %>
