<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/financial' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Financeiro</span>
        </div>
        <div class="page-header">
            <h1>Gestão <span class="text-neon">Financeira</span></h1>
        </div>

        <% if(messages.success) { %> <div class="alert alert-success" style="color: #bef202; margin-bottom: 20px;"><%= messages.success %></div> <% } %>

        <div class="card-box">
            <form action="/trainer/financial" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <h3 style="margin-bottom: 20px;">Configuração de Recebimento (PIX)</h3>
                
                <div style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
                    <div>
                        <label style="color: #888;">Valor Mensalidade (R$)</label>
                        <input type="number" step="0.01" name="price_monthly" value="<%= data.price_monthly || 0 %>" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                    </div>
                    <div>
                        <label style="color: #888;">Tipo de Chave PIX</label>
                        <select name="pix_key_type" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                            <option value="cpf" <%= data.pix_key_type === 'cpf' ? 'selected' : '' %>>CPF</option>
                            <option value="email" <%= data.pix_key_type === 'email' ? 'selected' : '' %>>E-mail</option>
                            <option value="phone" <%= data.pix_key_type === 'phone' ? 'selected' : '' %>>Telefone</option>
                            <option value="random" <%= data.pix_key_type === 'random' ? 'selected' : '' %>>Chave Aleatória</option>
                        </select>
                    </div>
                    <div style="grid-column: 1 / -1;">
                        <label style="color: #888;">Chave PIX</label>
                        <input type="text" name="pix_key" value="<%= data.pix_key || '' %>" placeholder="Digite sua chave..." style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Salvar Dados de Recebimento</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
