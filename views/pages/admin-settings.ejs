<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div class="page-header">
                <h1>Configurações Globais</h1>
                <p class="text-muted">Parâmetros do sistema.</p>
            </div>

            <div class="card-box" style="max-width: 600px;">
                <form>
                    <div class="form-group" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <label style="margin:0;">Modo Manutenção</label>
                        <input type="checkbox" <%= config.maintenance ? 'checked' : '' %>>
                    </div>
                    <div class="form-group" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <label style="margin:0;">Permitir Novos Cadastros</label>
                        <input type="checkbox" <%= config.allow_registrations ? 'checked' : '' %>>
                    </div>
                    <div class="form-group">
                        <label>E-mail de Suporte</label>
                        <input type="email" class="form-input" value="suporte@momentumfit.com">
                    </div>
                    <button class="btn btn-primary">Salvar Alterações</button>
                </form>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
