<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div class="page-header">
                <h1>Configurações do Sistema</h1>
            </div>
            <div class="card-box" style="max-width: 600px;">
                <form>
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <label>Modo Manutenção</label>
                        <input type="checkbox" <%= config.maintenance ? 'checked' : '' %>>
                    </div>
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <label>Permitir Cadastros</label>
                        <input type="checkbox" <%= config.registrations ? 'checked' : '' %>>
                    </div>
                    <button class="btn btn-primary" style="margin-top: 20px;">Salvar Alterações</button>
                </form>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
