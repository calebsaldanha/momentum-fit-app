<%- include('../partials/header') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar', { path: '/admin/settings' }) %>
    <main class="dashboard-main">
        <div class="page-header"><h1>Configurações</h1></div>
        <% if (messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        
        <div class="features-grid">
            <div class="card-box">
                <h3>Geral</h3>
                <form action="/admin/settings/general" method="POST">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    <label>Chave Pix</label>
                    <input type="text" name="pix_key" value="<%= settings.pix_key || '' %>" style="width:100%; padding:10px; margin:10px 0;">
                    <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
            <div class="card-box">
                <h3>Senha</h3>
                <form action="/admin/settings/password" method="POST">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    <label>Nova Senha</label>
                    <input type="password" name="new_password" style="width:100%; padding:10px; margin:10px 0;">
                    <button class="btn btn-outline">Alterar</button>
                </form>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
