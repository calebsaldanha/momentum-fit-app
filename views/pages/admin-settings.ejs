<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/settings' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Sistema</span>
        </div>
        <div class="page-header">
            <h1>Configurações <span class="text-neon">Globais</span></h1>
        </div>
        <div class="card-box">
            <form>
                <h3>Parâmetros do Sistema</h3>
                <div style="margin-bottom: 20px;">
                    <label>Taxa da Plataforma (%)</label>
                    <input type="number" value="15" style="width: 100px; padding: 8px; background: #222; border: 1px solid #444; color: white; border-radius: 4px;">
                </div>
                <div style="margin-bottom: 20px;">
                    <label>Manutenção do Sistema</label>
                    <div style="margin-top: 5px;">
                        <input type="radio" name="maintenance" value="off" checked> Online &nbsp;
                        <input type="radio" name="maintenance" value="on"> Modo Manutenção
                    </div>
                </div>
                <button class="btn btn-primary">Salvar Alterações</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
