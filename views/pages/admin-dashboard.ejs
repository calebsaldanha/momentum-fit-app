<%- include('../partials/header.ejs', { title: 'Painel do Treinador', bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'dashboard' }) %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <h1>Visão Geral</h1>
                <p style="color: #888;">Bem-vindo ao seu painel, <%= user.name.split(' ')[0] %>.</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-users"></i></div>
                    <div class="stat-info">
                        <h3><%= stats.totalClients %></h3>
                        <p>Alunos Ativos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-dumbbell"></i></div>
                    <div class="stat-info">
                        <h3><%= stats.totalWorkouts %></h3>
                        <p>Treinos Criados</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                    <div class="stat-info">
                        <h3><%= stats.weeklyCheckins %></h3>
                        <p>Check-ins (Semana)</p>
                    </div>
                </div>
            </div>

            <div class="content-card" style="margin-top: 2rem;">
                <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; border-bottom: 1px solid rgba(255,255,255,0.05); padding-bottom: 1rem;">
                    <h3 style="margin: 0;">Alunos Recentes</h3>
                    <a href="/admin/clients" class="btn btn-sm btn-secondary">Ver Todos</a>
                </div>
                
                <% if (recentClients && recentClients.length > 0) { %>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Aluno</th>
                                <th>Email</th>
                                <th style="text-align: right;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentClients.forEach(client => { %>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <div class="user-avatar-sm"><%= client.name.charAt(0) %></div>
                                            <span style="font-weight: 500;"><%= client.name %></span>
                                        </div>
                                    </td>
                                    <td style="color: #aaa;"><%= client.email %></td>
                                    <td style="text-align: right;">
                                        <a href="/admin/clients/<%= client.id %>" class="action-btn"><i class="fas fa-arrow-right"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div style="padding: 2rem; text-align: center; color: #666;">
                        Nenhum aluno cadastrado recentemente.
                    </div>
                <% } %>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
