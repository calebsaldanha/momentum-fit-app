<%- include("../partials/header.ejs", { title, bodyClass: "dashboard-body" }) %>

<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <% if (user.role === 'superadmin') { %>
                <a href="/superadmin/dashboard" class="nav-item" style="color: var(--c-accent-dark); background: #eaff0040; border-left-color: var(--c-accent-primary);">
                    <span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Voltar Super Admin
                </a>
                <div style="height: 1px; background: #e2e8f0; margin: 0.5rem 1rem;"></div>
            <% } %>
            <a href="/admin/dashboard" class="nav-item active"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Dashboard</a>
            <a href="/admin/clients" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Clientes</a>
            <a href="/workouts/create" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Criar Treino</a>
            <a href="/chat" class="nav-item"><span><img src="/images/momentum-fit-icon.png" class="icon-sm"></span> Chat</a>
        </nav>
    </aside>

    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Painel do Treinador</h1>
                <p>Acompanhe o progresso e gerencie seus alunos.</p>
            </div>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon"><img src="/images/momentum-fit-icon.png" style="width: 30px;"></div>
                    <div class="stat-info">
                        <h3><%= stats.totalClients %></h3>
                        <p>Clientes Ativos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><img src="/images/momentum-fit-icon.png" style="width: 30px;"></div>
                    <div class="stat-info">
                        <h3><%= stats.totalWorkouts %></h3>
                        <p>Treinos Criados</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><img src="/images/momentum-fit-icon.png" style="width: 30px;"></div>
                    <div class="stat-info">
                        <h3><%= stats.weeklyCheckins %></h3>
                        <p>Check-ins (Semana)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="section-header">
                <h2>Alunos Recentes</h2>
                <a href="/admin/clients" class="btn btn-secondary btn-sm">Ver Todos</a>
            </div>
            <% if (recentClients && recentClients.length > 0) { %>
                <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                    <% recentClients.forEach(client => { %>
                        <div class="recent-client-item">
                            <div>
                                <strong><%= client.name %></strong>
                                <span style="color: var(--c-text-secondary); font-size: 0.9rem;"> - <%= client.email %></span>
                            </div>
                            <a href="/admin/clients/<%= client.id %>" class="btn btn-primary btn-sm">Ver Perfil</a>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Nenhum aluno cadastrado recentemente.</p>
            <% } %>
        </div>
    </main>
</div>
<%- include("../partials/footer.ejs") %>
