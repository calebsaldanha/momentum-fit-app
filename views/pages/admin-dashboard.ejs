<%- include('../partials/header.ejs') %>

<div class="page-header">
    <h1>Administração</h1>
    <p>Visão geral do sistema Momentum Fit.</p>
</div>

<div class="content-grid">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
        <div class="card-box" style="text-align: center;">
            <i class="fas fa-users" style="font-size: 2.5rem; color: var(--primary-color); margin-bottom: 10px;"></i>
            <h2 style="font-size: 2.5rem; color: white; margin: 0;"><%= stats.users %></h2>
            <p style="color: #888;">Usuários Totais</p>
        </div>

        <div class="card-box" style="text-align: center;">
            <i class="fas fa-dumbbell" style="font-size: 2.5rem; color: var(--primary-color); margin-bottom: 10px;"></i>
            <h2 style="font-size: 2.5rem; color: white; margin: 0;"><%= stats.trainers %></h2>
            <p style="color: #888;">Treinadores</p>
        </div>
    </div>

    <div class="card-box">
        <h3>Ações Rápidas</h3>
        <div style="display: flex; gap: 15px; margin-top: 15px; flex-wrap: wrap;">
            <a href="/admin/clients" class="btn btn-outline">Gerenciar Usuários</a>
            <a href="/auth/register" class="btn btn-primary">Registrar Novo Usuário</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
