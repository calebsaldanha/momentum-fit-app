<%- include('../partials/header') %>

<div class="page-content-wrapper">
    <div class="dashboard-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 class="text-neon">Painel do Treinador</h2>
            <p class="text-muted">Gerencie seus alunos e conteúdos.</p>
        </div>
        <a href="/admin/clients" class="btn btn-primary"><i class="fas fa-plus"></i> Novo Aluno</a>
    </div>

    <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1.5rem;">
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: var(--primary);"><i class="fas fa-users"></i></div>
            <h3><%= typeof clientCount !== 'undefined' ? clientCount : 0 %></h3>
            <p>Alunos Ativos</p>
        </div>
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: #f59e0b;"><i class="fas fa-file-alt"></i></div>
            <h3><%= typeof pendingForms !== 'undefined' ? pendingForms : 0 %></h3>
            <p>Fichas Pendentes</p>
        </div>
    </div>

    <div class="recent-section" style="margin-top: 3rem;">
        <h3 style="margin-bottom: 1.5rem; border-bottom: 1px solid var(--border); padding-bottom: 10px;">Ações Recentes</h3>
        <div class="card-modern">
            <p class="text-muted" style="text-align: center; padding: 2rem;">Nenhuma atividade recente.</p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
