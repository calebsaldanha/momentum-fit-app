<%- include('../partials/header.ejs') %>

<div class="page-content-wrapper">
    <div class="dashboard-header">
        <div>
            <h2 class="text-neon">Dashboard Administrativo</h2>
            <p class="text-muted">Visão geral da plataforma Momentum Fit.</p>
        </div>
        <div style="display: flex; gap: 10px;">
            <a href="/admin/users/create" class="btn btn-primary"><i class="fas fa-plus"></i> Novo Usuário</a>
        </div>
    </div>

    <div class="stats-grid">
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: var(--primary);"><i class="fas fa-users"></i></div>
            <h3><%= stats && stats.totalUsers ? stats.totalUsers : 0 %></h3>
            <p>Total de Usuários</p>
        </div>
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: #3b82f6;"><i class="fas fa-user-tie"></i></div>
            <h3><%= stats && stats.totalTrainers ? stats.totalTrainers : 0 %></h3>
            <p>Treinadores</p>
        </div>
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: #ef4444;"><i class="fas fa-dumbbell"></i></div>
            <h3><%= stats && stats.activeWorkouts ? stats.activeWorkouts : 0 %></h3>
            <p>Treinos Ativos</p>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
        <div class="card-modern">
            <div class="list-header">
                <h3>Gestão Rápida</h3>
            </div>
            
            <div class="actions-grid">
                <a href="/admin/users" class="action-card" style="background: rgba(255,255,255,0.03); padding: 1rem; border-radius: 12px;">
                    <div class="action-icon-box" style="background: var(--bg-hover); color: white;">
                        <i class="fas fa-users-cog"></i>
                    </div>
                    <div>
                        <h4 style="margin: 0;">Usuários</h4>
                        <span class="text-muted" style="font-size: 0.8rem;">Gerenciar contas</span>
                    </div>
                </a>

                <a href="/admin/trainers" class="action-card" style="background: rgba(255,255,255,0.03); padding: 1rem; border-radius: 12px;">
                    <div class="action-icon-box" style="background: var(--bg-hover); color: white;">
                        <i class="fas fa-certificate"></i>
                    </div>
                    <div>
                        <h4 style="margin: 0;">Treinadores</h4>
                        <span class="text-muted" style="font-size: 0.8rem;">Aprovações e Performance</span>
                    </div>
                </a>

                 <a href="/articles/manage" class="action-card" style="background: rgba(255,255,255,0.03); padding: 1rem; border-radius: 12px;">
                    <div class="action-icon-box" style="background: var(--bg-hover); color: white;">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <div>
                        <h4 style="margin: 0;">Conteúdo</h4>
                        <span class="text-muted" style="font-size: 0.8rem;">Gerenciar Blog/Artigos</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
