<%- include('../partials/header.ejs', { title: 'Login' }) %>

<style>
    /* Força o background na página inteira */
    body {
        background: url('/images/hero-bg.png') no-repeat center center fixed !important;
        background-size: cover !important;
    }
    /* Overlay escuro para leitura */
    body::before {
        content: '';
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: -1;
    }
    
    /* Container que ocupa exatamente a altura disponível abaixo do header */
    .auth-container {
        /* 100vh (tela inteira) - 70px (altura do header/spacer) */
        min-height: calc(100vh - 70px); 
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        /* Removemos o margin-top: 80px que causava o problema */
        margin-top: 0; 
    }

    .auth-card {
        background: rgba(15, 15, 15, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        padding: 40px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.6); /* Sombra mais forte para destaque */
        backdrop-filter: blur(10px);
        animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div style="text-align: center; margin-bottom: 30px;">
            <h1 style="color: white; font-size: 2rem; margin-bottom: 10px;">Bem-vindo</h1>
            <p style="color: #888;">Faça login para acessar sua conta.</p>
        </div>

        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-error" style="background: rgba(255,70,70,0.1); color: #ff6b6b; padding: 10px; border-radius: 6px; margin-bottom: 20px; border: 1px solid rgba(255,70,70,0.2); font-size: 0.9rem;">
                <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
            </div>
        <% } %>

        <form action="/auth/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; color: #ccc; margin-bottom: 8px; font-size: 0.9rem;">E-mail</label>
                <div style="position: relative;">
                    <i class="fas fa-envelope" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="email" name="email" required placeholder="seu@email.com" style="width: 100%; padding: 12px 12px 12px 45px; background: #050505; border: 1px solid #333; color: white; border-radius: 8px; outline: none; font-size: 1rem;">
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; color: #ccc; margin-bottom: 8px; font-size: 0.9rem;">Senha</label>
                <div style="position: relative;">
                    <i class="fas fa-lock" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="password" name="password" required placeholder="••••••••" style="width: 100%; padding: 12px 12px 12px 45px; background: #050505; border: 1px solid #333; color: white; border-radius: 8px; outline: none; font-size: 1rem;">
                </div>
                <div style="text-align: right; margin-top: 10px;">
                    <a href="/auth/forgot-password" style="color: #888; font-size: 0.85rem; text-decoration: none; transition: 0.3s;">Esqueceu a senha?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-full" style="width: 100%; padding: 14px; font-weight: 700; text-transform: uppercase; font-size: 1rem; cursor: pointer;">Entrar</button>
        </form>

        <p style="text-align: center; margin-top: 30px; color: #666; font-size: 0.9rem;">
            Não tem conta? <a href="/auth/register" style="color: var(--primary-color); font-weight: 600; text-decoration: none;">Cadastre-se</a>
        </p>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
