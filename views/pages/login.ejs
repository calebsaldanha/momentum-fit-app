<%- include('../partials/header.ejs', { title: 'Entrar' }) %>

<div class="container-center" style="min-height: calc(100vh - 80px); display: flex; align-items: center; justify-content: center; padding: 1rem;">
    <div style="width: 100%; max-width: 400px;">
        
        <div class="text-center" style="margin-bottom: 2rem;">
            <h1 class="text-neon" style="margin-bottom: 0.5rem;">Bem-vindo(a)</h1>
            <p class="text-muted">Faça login para continuar seus treinos.</p>
        </div>

        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <span><%= messages.error %></span>
            </div>
        <% } %>

        <form action="/auth/login" method="POST" class="card-modern">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; color: var(--text-secondary); margin-bottom: 0.5rem; font-size: 0.9rem;">E-mail</label>
                <input type="email" name="email" class="input-modern" required placeholder="seu@email.com">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; color: var(--text-secondary); margin-bottom: 0.5rem; font-size: 0.9rem;">Senha</label>
                <input type="password" name="password" class="input-modern" required placeholder="••••••••">
            </div>

            <button type="submit" class="btn btn-primary btn-full" style="padding: 0.8rem; font-size: 1rem;">ENTRAR</button>
            
            <div style="text-align: center; margin-top: 1rem;">
                <a href="/auth/forgot-password" style="font-size: 0.85rem; color: var(--text-secondary); text-decoration: none;">Esqueceu a senha?</a>
            </div>
        </form>

        <div class="text-center" style="margin-top: 2rem;">
            <p class="text-muted">Não tem uma conta? <a href="/auth/register" class="text-neon" style="text-decoration: none; font-weight: 600;">Cadastre-se</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
