<%- include('../partials/header.ejs', { title: 'Entrar' }) %>

<div class="auth-wrapper">
    <div class="auth-container">
        
        <div class="auth-header">
            <h1 class="auth-title">Bem-vindo(a)</h1>
            <p class="auth-subtitle">Faça login para continuar sua evolução.</p>
        </div>

        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <span><%= messages.error %></span>
            </div>
        <% } %>
        <% if (typeof messages !== 'undefined' && messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <span><%= messages.success %></span>
            </div>
        <% } %>

        <form action="/auth/login" method="POST" class="auth-form">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
    
            <div class="form-group">
                <label for="email" class="form-label">E-mail</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="email" id="email" name="email" class="form-input" required placeholder="seu@email.com" autocomplete="email">
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Senha</label>
                <div class="input-wrapper">
                    <i class="fas fa-lock input-icon"></i>
                    <input type="password" id="password" name="password" class="form-input" required placeholder="••••••••" autocomplete="current-password">
                </div>
                <div class="forgot-link-wrapper">
                    <a href="/auth/forgot-password" class="forgot-link">Esqueceu a senha?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-full btn-lg">
                ENTRAR <i class="fas fa-arrow-right" style="margin-left: 8px;"></i>
            </button>
        </form>

        <div class="auth-footer-text">
            <p>Não tem uma conta? <a href="/auth/register" class="link-neon">Cadastre-se</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
