<%- include('../partials/header.ejs') %>
<main class="public-main" style="background: url('/images/auth-bg.png') center/cover; display: flex; align-items: center; justify-content: center; min-height: 80vh;">
    <div class="card-box" style="width: 100%; max-width: 400px; background: rgba(0,0,0,0.8); backdrop-filter: blur(10px);">
        <h2 style="text-align: center; margin-bottom: 20px;">Entrar</h2>
        <% if(error) { %> <div style="color: #ff4d4d; background: rgba(255,0,0,0.1); padding: 10px; border-radius: 4px; margin-bottom: 10px;"><%= error %></div> <% } %>
        <% if(success) { %> <div style="color: #bef202; background: rgba(190,242,2,0.1); padding: 10px; border-radius: 4px; margin-bottom: 10px;"><%= success %></div> <% } %>
        
        <form action="/auth/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-input" required>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" name="password" class="form-input" required>
            </div>
            <button class="btn btn-primary btn-full">Acessar</button>
        </form>
        <p style="text-align: center; margin-top: 15px;">
            <a href="/auth/register" style="color: #888;">Criar conta</a>
        </p>
    </div>
</main>
<%- include('../partials/footer.ejs') %>
