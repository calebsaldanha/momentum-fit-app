<%- include('../partials/header.ejs', { title: 'Login' }) %>

<div class="auth-main-wrapper">
    <div class="auth-overlay"></div>
    
    <div class="auth-card">
        <h2>MOMENTUM <span class="text-neon">FIT</span></h2>
        <p>Bem-vindo(a) de volta</p>
      
        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="auth-msg auth-msg-error"><%= messages.error %></div>
        <% } %>
        <% if (typeof messages !== 'undefined' && messages.success) { %>
            <div class="auth-msg auth-msg-success"><%= messages.success %></div>
        <% } %>

        <form action="/auth/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required placeholder="seu@email.com">
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password" name="password" required placeholder="Sua senha">
            </div>

            <a href="/auth/forgot-password" class="forgot-pass">Esqueceu a senha?</a>

            <button type="submit" class="btn btn-primary btn-full">ENTRAR</button>
        </form>

        <p style="margin-top: 2rem; margin-bottom: 0;">
            NÃ£o tem uma conta? <a href="/auth/register" class="auth-link">Cadastre-se</a>
        </p>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
