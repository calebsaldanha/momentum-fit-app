<%- include('../partials/header.ejs', { title: 'Meu Perfil', bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/client-sidebar.ejs', { currentPage: 'profile' }) %>
    <main class="dashboard-main">
        
        <% if (user.status === 'pending_approval') { %>
            <div style="background: rgba(245, 158, 11, 0.15); border: 1px solid #f59e0b; color: #f59e0b; padding: 20px; border-radius: 8px; margin-bottom: 30px; text-align: center;">
                <h3 style="margin: 0 0 10px 0;">Perfil em Análise</h3>
                <p style="margin: 0;">Seus dados foram recebidos! Aguarde a aprovação do seu treinador.</p>
            </div>
        <% } %>

        <section class="section">
            <div class="section-header">
                <h1>Meu Perfil</h1>
                <% if (typeof success !== 'undefined' && success) { %>
                    <div style="background: #d1fae5; color: #065f46; padding: 10px; border-radius: 6px; margin-top: 10px;"><%= success %></div>
                <% } %>
            </div>

            <div style="background: #222; padding: 15px; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid var(--c-accent-primary); display: inline-block;">
                <h3 style="margin: 0; font-size: 0.9rem; color: #ccc;">IMC Calculado</h3>
                <div style="display: flex; align-items: baseline; gap: 5px;">
                    <span style="font-size: 2rem; font-weight: 800; color: white;"><%= typeof imc !== 'undefined' ? imc : '--' %></span>
                    <span style="color: #666;">kg/m²</span>
                </div>
            </div>

            <form method="POST" action="/client/profile" class="dashboard-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 20px;">1. Dados Pessoais</h3>
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" name="name" value="<%= profile.name || user.name %>" required>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="text" name="phone" value="<%= profile.phone %>">
                    </div>
                    <div class="form-group">
                        <label>Idade</label>
                        <input type="number" name="age" value="<%= profile.age %>">
                    </div>
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 20px;">2. Corpo & Objetivos</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label>Peso (kg)</label>
                        <input type="text" name="weight" value="<%= profile.weight %>">
                        <small style="color:#666; font-size:0.8rem;">Ex: 70.5 ou 70,5</small>
                    </div>
                    <div class="form-group">
                        <label>Altura (m)</label>
                        <input type="text" name="height" value="<%= profile.height %>">
                        <small style="color:#666; font-size:0.8rem;">Ex: 1.75 ou 175</small>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Objetivo Principal</label>
                    <input type="text" name="main_goal" value="<%= profile.main_goal %>">
                </div>
                <div class="form-group">
                    <label>Objetivos Secundários</label>
                    <input type="text" name="secondary_goals" value="<%= profile.secondary_goals %>">
                </div>
                
                <div class="form-group">
                    <label>Nível de Atividade</label>
                    <select name="fitness_level">
                        <option value="sedentary" <%= profile.fitness_level === 'sedentary' ? 'selected' : '' %>>Sedentário</option>
                        <option value="beginner" <%= profile.fitness_level === 'beginner' ? 'selected' : '' %>>Iniciante</option>
                        <option value="intermediate" <%= profile.fitness_level === 'intermediate' ? 'selected' : '' %>>Intermediário</option>
                        <option value="advanced" <%= profile.fitness_level === 'advanced' ? 'selected' : '' %>>Avançado</option>
                    </select>
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 20px;">3. Saúde & Rotina</h3>
                <div class="form-group">
                    <label>Condições Médicas</label>
                    <textarea name="medical_conditions" rows="2"><%= profile.medical_conditions %></textarea>
                    <small style="color:#666; font-size:0.8rem;">Descreva doenças ou restrições.</small>
                </div>
                <div class="form-group">
                    <label>Medicamentos</label>
                    <textarea name="medications" rows="1"><%= profile.medications %></textarea>
                </div>
                <div class="form-group">
                    <label>Lesões</label>
                    <textarea name="injuries" rows="1"><%= profile.injuries %></textarea>
                </div>
                <div class="form-group">
                    <label>Alergias</label>
                    <textarea name="allergies" rows="1"><%= profile.allergies %></textarea>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label>Sono (Horas/dia)</label>
                        <input type="text" name="sleep_hours" value="<%= profile.sleep_hours %>">
                    </div>
                    <div class="form-group">
                        <label>Dieta (Resumo)</label>
                        <input type="text" name="diet_description" value="<%= profile.diet_description %>">
                    </div>
                </div>

                <div class="form-actions" style="margin-top: 2rem;">
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
