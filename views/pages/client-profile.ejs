<%- include('../partials/header.ejs', { title: 'Meu Perfil', currentPage: 'profile' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'profile' }) %>

    <main class="dashboard-main">
        <div class="page-header">
            <h1 class="page-title">Meu Perfil</h1>
            <p class="text-muted">Gerencie suas informações e preferências.</p>
        </div>

        <form action="/client/profile" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div class="card-modern" style="margin-bottom: 2rem;">
                <h3 class="text-neon" style="border-bottom: 1px solid var(--border); padding-bottom: 10px; margin-bottom: 20px;">
                    <i class="fas fa-id-card"></i> Dados Pessoais
                </h3>
                <div class="grid-cols-2">
                    <div class="form-group">
                        <label class="form-label">Nome Completo</label>
                        <input type="text" value="<%= user.name %>" class="input-modern" disabled style="opacity: 0.7; cursor: not-allowed;">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" value="<%= user.email %>" class="input-modern" disabled style="opacity: 0.7; cursor: not-allowed;">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Telefone</label>
                        <input type="text" name="phone" value="<%= profile.phone || '' %>" class="input-modern" placeholder="(XX) XXXXX-XXXX">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Idade</label>
                        <input type="number" name="age" value="<%= profile.age || '' %>" class="input-modern">
                    </div>
                </div>
            </div>

            <div class="card-modern" style="margin-bottom: 2rem;">
                <h3 class="text-neon" style="border-bottom: 1px solid var(--border); padding-bottom: 10px; margin-bottom: 20px;">
                    <i class="fas fa-ruler-combined"></i> Dados Físicos
                </h3>
                <div class="grid-cols-3">
                    <div class="form-group">
                        <label class="form-label">Peso (kg)</label>
                        <input type="number" step="0.1" name="weight" value="<%= profile.current_weight || profile.weight || '' %>" class="input-modern">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Altura (m)</label>
                        <input type="number" step="0.01" name="height" value="<%= profile.height || '' %>" class="input-modern">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Gordura Corporal (%)</label>
                        <input type="number" step="0.1" name="body_fat" value="<%= profile.body_fat || '' %>" class="input-modern">
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 1rem; justify-content: flex-end;">
                <a href="/client/initial-form" class="btn btn-primary" style="background: transparent; border: 1px solid var(--primary); color: var(--primary);">
                    Refazer Anamnese Completa
                </a>
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </div>
        </form>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
