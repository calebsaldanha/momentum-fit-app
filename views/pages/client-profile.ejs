<%- include('../partials/header.ejs', { title: 'Meu Perfil', bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'profile' }) %>
    <main class="dashboard-main">
        
        <% if (user.status === 'pending_approval') { %>
            <div style="background: rgba(245, 158, 11, 0.15); border: 1px solid #f59e0b; color: #f59e0b; padding: 20px; border-radius: 8px; margin-bottom: 30px; text-align: center;">
                <h3 style="margin: 0 0 10px 0;">Perfil em Análise</h3>
                <p style="margin: 0;">Seus dados foram recebidos! Aguarde a aprovação do seu treinador.</p>
            </div>
        <% } %>

        <section class="section">
            <div class="section-header">
                <h1>Meu Perfil Completo</h1>
                <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
                    <div style="background: #d1fae5; color: #065f46; padding: 10px; border-radius: 6px; margin-top: 10px;"><%= success %></div>
                <% } %>
                <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
                    <div style="background: #fee2e2; color: #991b1b; padding: 10px; border-radius: 6px; margin-top: 10px;"><%= error %></div>
                <% } %>
            </div>

            <div style="background: #222; padding: 15px; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid var(--c-accent-primary); display: inline-block;">
                <h3 style="margin: 0; font-size: 0.9rem; color: #ccc;">IMC Calculado</h3>
                <div style="display: flex; align-items: baseline; gap: 5px;">
                    <span style="font-size: 2rem; font-weight: 800; color: white;"><%= typeof imc !== 'undefined' ? imc : '--' %></span>
                    <span style="color: #666;">kg/m²</span>
                </div>
            </div>

            <form method="POST" action="/client/profile?_csrf=<%= csrfToken %>" class="dashboard-form">
                
                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 20px;">1. Dados Pessoais</h3>
                
                <div class="form-group">
                    <label>Nome Completo</label>
                    <input type="text" name="name" value="<%= profile.name || user.name %>" required>
                </div>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <div class="form-group">
                        <label>Telefone (WhatsApp)</label>
                        <input type="text" name="phone" value="<%= profile.phone %>">
                    </div>
                    <div class="form-group">
                        <label>Idade</label>
                        <input type="number" name="age" value="<%= profile.age %>">
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 1rem;">
                    <div class="form-group">
                        <label>Identidade de Gênero</label>
                        <select name="gender_identity">
                            <option value="">Selecione...</option>
                            <option value="M" <%= profile.gender_identity === 'M' ? 'selected' : '' %>>Masculino</option>
                            <option value="F" <%= profile.gender_identity === 'F' ? 'selected' : '' %>>Feminino</option>
                            <option value="NB" <%= profile.gender_identity === 'NB' ? 'selected' : '' %>>Não-binário</option>
                            <option value="O" <%= profile.gender_identity === 'O' ? 'selected' : '' %>>Outro</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sexo Biológico</label>
                        <select name="sex_assigned_at_birth">
                            <option value="">Selecione...</option>
                            <option value="M" <%= profile.sex_assigned_at_birth === 'M' ? 'selected' : '' %>>Masculino</option>
                            <option value="F" <%= profile.sex_assigned_at_birth === 'F' ? 'selected' : '' %>>Feminino</option>
                        </select>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1rem;">
                    <label>Uso de Hormônios?</label>
                    <select name="hormonal_treatment" onchange="document.getElementById('hormonal-details-group').style.display = this.value === 'true' ? 'block' : 'none'">
                        <option value="false" <%= profile.hormonal_treatment === false ? 'selected' : '' %>>Não</option>
                        <option value="true" <%= profile.hormonal_treatment === true ? 'selected' : '' %>>Sim</option>
                    </select>
                </div>
                <div class="form-group" id="hormonal-details-group" style="display: <%= profile.hormonal_treatment === true ? 'block' : 'none' %>; margin-top: 10px;">
                    <label>Quais e dosagens?</label>
                    <input type="text" name="hormonal_details" value="<%= profile.hormonal_details %>">
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 30px;">2. Corpo & Medidas</h3>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem;">
                    <div class="form-group">
                        <label>Peso (kg)</label>
                        <input type="text" name="weight" value="<%= profile.weight %>">
                    </div>
                    <div class="form-group">
                        <label>Altura (m)</label>
                        <input type="text" name="height" value="<%= profile.height %>">
                    </div>
                    <div class="form-group">
                        <label>Gordura Corporal (%)</label>
                        <input type="text" name="body_fat" value="<%= profile.body_fat %>">
                    </div>
                </div>

                <h4 style="color: #888; font-size: 0.9rem; margin-top: 15px; margin-bottom: 5px;">Circunferências (cm)</h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); gap: 1rem;">
                    <div class="form-group"><label>Cintura</label><input type="text" name="measure_waist" value="<%= profile.measure_waist %>"></div>
                    <div class="form-group"><label>Quadril</label><input type="text" name="measure_hip" value="<%= profile.measure_hip %>"></div>
                    <div class="form-group"><label>Braço</label><input type="text" name="measure_arm" value="<%= profile.measure_arm %>"></div>
                    <div class="form-group"><label>Perna</label><input type="text" name="measure_leg" value="<%= profile.measure_leg %>"></div>
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 30px;">3. Objetivos</h3>
                
                <div class="form-group">
                    <label>Objetivo Principal</label>
                    <input type="text" name="main_goal" value="<%= profile.main_goal %>">
                </div>
                <div class="form-group">
                    <label>Objetivos Secundários</label>
                    <input type="text" name="secondary_goals" value="<%= profile.secondary_goals %>">
                </div>
                <div class="form-group">
                    <label>Evento ou Prazo Específico</label>
                    <input type="text" name="specific_event" value="<%= profile.specific_event %>">
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 30px;">4. Histórico de Saúde</h3>
                
                <div class="form-group">
                    <label>Condições Médicas</label>
                    <textarea name="medical_conditions" rows="2"><%= profile.medical_conditions %></textarea>
                </div>
                <div class="form-group">
                    <label>Medicamentos</label>
                    <textarea name="medications" rows="2"><%= profile.medications %></textarea>
                </div>
                <div class="form-group">
                    <label>Lesões e Dores</label>
                    <textarea name="injuries" rows="2"><%= profile.injuries %></textarea>
                </div>
                <div class="form-group">
                    <label>Cirurgias Prévias</label>
                    <textarea name="surgeries" rows="2"><%= profile.surgeries %></textarea>
                </div>
                <div class="form-group">
                    <label>Alergias</label>
                    <input type="text" name="allergies" value="<%= profile.allergies %>">
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 30px;">5. Rotina de Treino</h3>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <div class="form-group">
                        <label>Nível de Experiência</label>
                        <select name="fitness_level">
                            <option value="sedentary" <%= profile.fitness_level === 'sedentary' ? 'selected' : '' %>>Sedentário</option>
                            <option value="beginner" <%= profile.fitness_level === 'beginner' ? 'selected' : '' %>>Iniciante</option>
                            <option value="intermediate" <%= profile.fitness_level === 'intermediate' ? 'selected' : '' %>>Intermediário</option>
                            <option value="advanced" <%= profile.fitness_level === 'advanced' ? 'selected' : '' %>>Avançado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Dias Disponíveis</label>
                        <select name="training_days">
                            <% for(let i=1; i<=7; i++) { %>
                                <option value="<%= i %>" <%= profile.training_days == i ? 'selected' : '' %>><%= i %> dias</option>
                            <% } %>
                        </select>
                    </div>
                </div>
                
                <div class="form-group" style="margin-top: 1rem;">
                    <label>Local de Treino Preferido</label>
                    <select name="workout_preference">
                        <option value="gym" <%= profile.workout_preference === 'gym' ? 'selected' : '' %>>Academia Completa</option>
                        <option value="home_basic" <%= profile.workout_preference === 'home_basic' ? 'selected' : '' %>>Em Casa (Pesos livres/Elásticos)</option>
                        <option value="home_bodyweight" <%= profile.workout_preference === 'home_bodyweight' ? 'selected' : '' %>>Em Casa (Peso do corpo)</option>
                        <option value="park" <%= profile.workout_preference === 'park' ? 'selected' : '' %>>Ao Ar Livre / Parque</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Tempo Disponível (diário)</label>
                    <input type="text" name="availability" value="<%= profile.availability %>">
                </div>
                <div class="form-group">
                    <label>Equipamentos Disponíveis</label>
                    <input type="text" name="equipment" value="<%= profile.equipment %>" placeholder="Caso treine em casa">
                </div>

                <h3 style="color: var(--c-accent-primary); border-bottom: 1px solid #333; padding-bottom: 10px; margin-top: 30px;">6. Estilo de Vida</h3>
                
                <div class="form-group">
                    <label>Sono (Horas/dia)</label>
                    <input type="text" name="sleep_hours" value="<%= profile.sleep_hours %>">
                </div>
                <div class="form-group">
                    <label>Descrição da Dieta</label>
                    <textarea name="diet_description" rows="3"><%= profile.diet_description %></textarea>
                </div>
                <div class="form-group">
                    <label>Maiores Dificuldades</label>
                    <textarea name="challenges" rows="3"><%= profile.challenges %></textarea>
                </div>

                <div class="form-actions" style="margin-top: 2rem; border-top: 1px solid #333; padding-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="width: 100%; font-size: 1.1rem; padding: 12px;">Salvar Todas as Alterações</button>
                </div>
            </form>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
