<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:30px;">
                <h1>Conteúdo / Blog</h1>
                <a href="/articles/create" class="btn btn-primary">Novo Artigo</a>
            </div>
            <div class="card-box">
                <table class="data-table">
                    <thead><tr><th>Título</th><th>Categoria</th><th>Views</th><th>Ações</th></tr></thead>
                    <tbody>
                        <% articles.forEach(a => { %>
                        <tr>
                            <td><%= a.title %></td>
                            <td><%= a.category %></td>
                            <td><%= a.views %></td>
                            <td><a href="/articles/<%= a.id %>" class="btn btn-sm btn-outline">Ver</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
