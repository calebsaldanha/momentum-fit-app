<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/content' }) %>
    <main class="dashboard-main">
        <div class="page-header" style="display: flex; justify-content: space-between;">
            <div>
                <h1>Gestão de <span class="text-neon">Conteúdo</span></h1>
                <p>Artigos e publicações do blog.</p>
            </div>
            <a href="/articles/create" class="btn btn-primary"><i class="fas fa-plus"></i> Novo Artigo</a>
        </div>

        <div class="card-box">
            <div class="table-responsive">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="color: #888; text-align: left;">
                            <th style="padding: 10px;">Título</th>
                            <th style="padding: 10px;">Categoria</th>
                            <th style="padding: 10px;">Status</th>
                            <th style="padding: 10px;">Data</th>
                            <th style="padding: 10px; text-align: right;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (articles && articles.length > 0) { %>
                            <% articles.forEach(a => { %>
                                <tr style="border-bottom: 1px solid #333;">
                                    <td style="padding: 10px; color: white;"><%= a.title %></td>
                                    <td style="padding: 10px; color: #ccc;"><%= a.category %></td>
                                    <td style="padding: 10px;"><span style="color: <%= a.status === 'published' ? '#bef202' : 'orange' %>"><%= a.status %></span></td>
                                    <td style="padding: 10px; color: #ccc;"><%= new Date(a.created_at).toLocaleDateString() %></td>
                                    <td style="padding: 10px; text-align: right;">
                                        <a href="/articles/<%= a.id %>" class="btn btn-sm btn-outline"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" style="padding: 20px; text-align: center; color: #666;">Nenhum artigo encontrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
