<%- include('../partials/header.ejs', { bodyClass: 'auth-body' }) %>

<main class="auth-main">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Recuperar Senha</h2>
            <p>Insira seu e-mail para receber as instruÃ§Ãµes.</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error" style="background: #fee2e2; color: #ef4444; padding: 10px; border-radius: 6px; margin-bottom: 15px;">
                <%= error %>
            </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success" style="background: #dcfce7; color: #166534; padding: 10px; border-radius: 6px; margin-bottom: 15px;">
                <%= success %>
            </div>
        <% } %>

        <form class="auth-form" method="POST" action="/auth/forgot-password">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
                <label for="email">E-mail Cadastrado</label>
                <input type="email" id="email" name="email" required placeholder="seu@email.com">
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">Enviar Link</button>
        </form>

        <div style="text-align: center; margin-top: 1.5rem;">
            <p style="font-size: 0.9rem;"><a href="/auth/login" style="color: var(--c-accent-primary); font-weight: 600;">Voltar para o Login</a></p>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>
