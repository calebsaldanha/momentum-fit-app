<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/profile' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Perfil</span>
        </div>

        <div class="page-header">
            <h1>Perfil <span class="text-neon">Profissional</span></h1>
        </div>

        <% if(messages.success) { %> <div class="alert alert-success" style="color: #bef202; margin-bottom: 20px;"><%= messages.success %></div> <% } %>

        <div class="card-box">
            <form action="/trainer/profile" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <h3 style="color: white; margin-bottom: 20px; border-bottom: 1px solid #333; padding-bottom: 10px;">Dados Pessoais</h3>
                <div style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); margin-bottom: 30px;">
                    <div>
                        <label style="display: block; color: #888;">Nome Completo</label>
                        <input type="text" name="name" value="<%= trainer.name %>" class="form-control" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                    </div>
                    <div>
                        <label style="display: block; color: #888;">Email (Fixo)</label>
                        <input type="text" value="<%= trainer.email %>" disabled class="form-control" style="width: 100%; padding: 10px; background: #151515; border: 1px solid #333; color: #666; border-radius: 5px;">
                    </div>
                    <div>
                        <label style="display: block; color: #888;">Telefone / WhatsApp</label>
                        <input type="text" name="phone" value="<%= trainer.phone || '' %>" placeholder="(00) 00000-0000" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                    </div>
                </div>

                <h3 style="color: white; margin-bottom: 20px; border-bottom: 1px solid #333; padding-bottom: 10px;">Carreira</h3>
                <div style="display: grid; gap: 20px; margin-bottom: 30px;">
                    <div>
                        <label style="display: block; color: #888;">Especialidades</label>
                        <input type="text" name="specialties" value="<%= trainer.specialties || '' %>" placeholder="Ex: Hipertrofia, Funcional..." style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;">
                    </div>
                    <div>
                        <label style="display: block; color: #888;">Formação Acadêmica</label>
                        <textarea name="education" rows="2" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;"><%= trainer.education || '' %></textarea>
                    </div>
                    <div>
                        <label style="display: block; color: #888;">Experiência</label>
                        <textarea name="experience" rows="2" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;"><%= trainer.experience || '' %></textarea>
                    </div>
                    <div>
                        <label style="display: block; color: #888;">Sobre (Bio)</label>
                        <textarea name="bio" rows="4" style="width: 100%; padding: 10px; background: #222; border: 1px solid #444; color: white; border-radius: 5px;"><%= trainer.bio || '' %></textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
