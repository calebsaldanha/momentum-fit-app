<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/profile' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Perfil</span>
        </div>

        <div class="page-header">
            <h1>Meu Perfil <span class="text-neon">Profissional</span></h1>
        </div>

        <div class="card-box">
            <form>
                <div style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));">
                    <div>
                        <label style="display: block; color: #888; margin-bottom: 8px;">Nome de Exibição</label>
                        <input type="text" class="form-control" value="<%= user.name %>" style="width: 100%; padding: 12px; background: #222; border: 1px solid #333; color: white; border-radius: 8px;">
                    </div>
                    <div>
                        <label style="display: block; color: #888; margin-bottom: 8px;">Especialidades</label>
                        <input type="text" class="form-control" value="<%= trainerData.specialties || '' %>" placeholder="Ex: Hipertrofia, Yoga..." style="width: 100%; padding: 12px; background: #222; border: 1px solid #333; color: white; border-radius: 8px;">
                    </div>
                    <div style="grid-column: 1 / -1;">
                        <label style="display: block; color: #888; margin-bottom: 8px;">Biografia</label>
                        <textarea rows="4" style="width: 100%; padding: 12px; background: #222; border: 1px solid #333; color: white; border-radius: 8px;"><%= trainerData.bio || '' %></textarea>
                    </div>
                </div>
                <div style="margin-top: 30px;">
                    <button type="button" class="btn btn-primary">Salvar Perfil</button>
                </div>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
