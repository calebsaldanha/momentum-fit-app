<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <div class="page-header">
                <h1>Auditoria de IA</h1>
                <p class="text-muted">Logs de consumo de tokens e custos.</p>
            </div>

            <div class="card-box">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Ação</th>
                            <th>Usuário</th>
                            <th>Tokens</th>
                            <th>Custo Est.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% logs.forEach(log => { %>
                        <tr>
                            <td><%= log.time %></td>
                            <td><%= log.action %></td>
                            <td><%= log.user %></td>
                            <td><%= log.tokens %></td>
                            <td>$<%= log.cost %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
