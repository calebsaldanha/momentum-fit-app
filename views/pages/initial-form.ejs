<%- include('../partials/header.ejs', { title: 'Avaliação Inicial' }) %>

<div class="container-center" style="align-items: flex-start; padding-top: 2rem;">
    <div style="width: 100%; max-width: 800px;">
        <div style="text-align: center; margin-bottom: 2rem;">
            <h1 class="text-neon">Ficha de Anamnese</h1>
            <p class="text-muted">Vamos personalizar seu plano.</p>
        </div>

        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>

        <form action="/client/initial-form" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

            <div class="card-modern">
                <h3 style="border-bottom: 1px solid var(--border-subtle); padding-bottom: 10px; margin-bottom: 20px;">1. Dados Pessoais</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div><label class="text-muted">Idade</label><input type="number" name="age" class="input-modern" required value="<%= profile?.age || '' %>"></div>
                    <div><label class="text-muted">Telefone</label><input type="text" name="phone" class="input-modern" required value="<%= profile?.phone || '' %>"></div>
                </div>
                <div><label class="text-muted">Identidade de Gênero</label>
                    <select name="gender_identity" class="select-modern">
                        <option value="">Selecione...</option>
                        <option value="M" <%= profile?.gender_identity === 'M' ? 'selected' : '' %>>Masculino</option>
                        <option value="F" <%= profile?.gender_identity === 'F' ? 'selected' : '' %>>Feminino</option>
                        <option value="NB" <%= profile?.gender_identity === 'NB' ? 'selected' : '' %>>Não-binário</option>
                    </select>
                </div>
            </div>

            <div class="card-modern">
                <h3 style="border-bottom: 1px solid var(--border-subtle); padding-bottom: 10px; margin-bottom: 20px;">2. Corpo</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div><label class="text-muted">Peso (kg)</label><input type="text" name="weight" class="input-modern" required value="<%= profile?.current_weight || profile?.weight || '' %>"></div>
                    <div><label class="text-muted">Altura (m)</label><input type="text" name="height" class="input-modern" required value="<%= profile?.height || '' %>"></div>
                </div>
            </div>

            <div class="card-modern">
                <h3 style="border-bottom: 1px solid var(--border-subtle); padding-bottom: 10px; margin-bottom: 20px;">3. Treino</h3>
                <label class="text-muted">Objetivo Principal</label>
                <input type="text" name="main_goal" class="input-modern" required placeholder="Ex: Hipertrofia" value="<%= profile?.fitness_goals || profile?.main_goal || '' %>">
                
                <label class="text-muted">Nível de Experiência</label>
                <select name="fitness_level" class="select-modern" required>
                    <option value="beginner" <%= profile?.fitness_level === 'beginner' ? 'selected' : '' %>>Iniciante</option>
                    <option value="intermediate" <%= profile?.fitness_level === 'intermediate' ? 'selected' : '' %>>Intermediário</option>
                    <option value="advanced" <%= profile?.fitness_level === 'advanced' ? 'selected' : '' %>>Avançado</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary btn-full" style="padding: 1rem; font-size: 1.1rem;">Salvar Ficha</button>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
