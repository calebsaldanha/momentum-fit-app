<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item"><span></span> Dashboard</a>
            <a href="/admin/clients" class="nav-item"><span></span> Clientes</a>
            <a href="/chat" class="nav-item"><span></span> Chat</a>
        </nav>
    </aside>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header">
                <h1>Editar Treino</h1>
                <p>Editando treino de: <strong><%= clients.find(c => c.id == workout.client_id)?.name || 'Cliente' %></strong></p>
            </div>
            
            <form id="editWorkoutForm" class="dashboard-form" style="max-width: 800px;">
                <input type="hidden" id="client_id" value="<%= workout.client_id %>">
                
                <div class="form-group">
                    <label for="title">Título do Treino *</label>
                    <input type="text" id="title" name="title" required value="<%= workout.title %>">
                </div>
                
                <div class="form-group">
                    <label for="description">Descrição</label>
                    <textarea id="description" name="description" rows="3"><%= workout.description %></textarea>
                </div>
                
                <h3 style="margin: 2rem 0 1rem;">Exercícios</h3>
                <div id="exercisesContainer"></div>
                
                <button type="button" class="btn btn-outline" id="addExerciseBtn" style="margin-top: 1rem; width: 100%; border-style: dashed;">
                    + Adicionar Exercício
                </button>
                
                <div class="form-actions" style="margin-top: 2rem; display: flex; justify-content: flex-end; gap: 1rem;">
                    <a href="/admin/clients/<%= workout.client_id %>" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    function addExercise(data = {}) {
        const container = document.getElementById('exercisesContainer');
        const count = container.children.length + 1;
        const exerciseHTML = `
            <div class="exercise-item" style="border: 1px solid var(--c-border); background: var(--c-bg-card); border-radius: var(--radius); padding: 1.5rem; margin-top: 1.5rem; position: relative;">
                <h4 style="margin-bottom: 1rem; color: var(--c-accent-primary);">Exercício ${count}</h4>
                <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group"><label>Nome *</label><input type="text" class="exercise-name" required value="${data.name || ''}"></div>
                    <div class="form-group"><label>Séries x Reps *</label><input type="text" class="exercise-sets" required value="${data.sets || ''}"></div>
                </div>
                <div class="form-group"><label>Obs</label><textarea class="exercise-description" rows="2">${data.description || ''}</textarea></div>
                <button type="button" class="btn btn-secondary btn-sm remove-exercise" style="border-color: var(--c-error); color: var(--c-error);">Remover</button>
            </div>`;
        container.insertAdjacentHTML('beforeend', exerciseHTML);
    }

    const existingExercises = <%- JSON.stringify(workout.exercises || []) %>;
    if (existingExercises.length > 0) {
        existingExercises.forEach(ex => addExercise(ex));
    } else {
        addExercise();
    }
    
    document.getElementById('addExerciseBtn').addEventListener('click', () => addExercise());
    
    document.getElementById('exercisesContainer').addEventListener('click', function(e) { 
        if (e.target && e.target.classList.contains('remove-exercise')) { 
            e.target.closest('.exercise-item').remove(); 
        } 
    });
    
    document.getElementById('editWorkoutForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const exercises = [];
        document.querySelectorAll('.exercise-item').forEach(item => {
            const name = item.querySelector('.exercise-name').value;
            const sets = item.querySelector('.exercise-sets').value;
            if (name && sets) { 
                exercises.push({ name, sets, description: item.querySelector('.exercise-description').value });
            }
        });

        if (exercises.length === 0) { alert('Adicione pelo menos um exercício.'); return; }

        const formData = { 
            client_id: document.getElementById('client_id').value,
            title: document.getElementById('title').value, 
            description: document.getElementById('description').value, 
            exercises 
        };

        const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';
        try {
            const response = await fetch('/workouts/<%= workout.id %>/edit', { 
                method: 'POST', 
                headers: { 'Content-Type': 'application/json', 'CSRF-Token': csrfToken }, 
                body: JSON.stringify(formData) 
            });
            const result = await response.json();
            if (response.ok && result.success) { 
                alert('Treino atualizado com sucesso!');
                window.location.href = `/admin/clients/${result.clientId}`; 
            } else { 
                throw new Error(result.message);
            }
        } catch (error) { 
            alert('Erro: ' + error.message);
        }
    });
});
</script>
<%- include('../partials/footer.ejs') %>
