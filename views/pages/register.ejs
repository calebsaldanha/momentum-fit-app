<%- include('../partials/header.ejs', { title: 'Cadastro', path: '/auth/register' }) %>

<main class="public-content">
    <section class="hero" style="min-height: 100vh; align-items: center; justify-content: center; padding: 100px 20px;">
        <div class="hero-overlay"></div>
        
        <div class="container" style="position: relative; z-index: 2; max-width: 500px; width: 100%;">
            <div class="feature-card" style="padding: 40px; background: rgba(10, 10, 10, 0.95); border: 1px solid #333;">
                
                <div class="text-center" style="text-align: center; margin-bottom: 30px;">
                    <h2 style="color: white; font-size: 2rem; font-weight: 700;">Criar Conta</h2>
                    <p style="color: #888;">Comece sua jornada hoje mesmo</p>
                </div>

                <% if (typeof errors !== 'undefined') { %>
                    <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger"><%= error.msg %></div>
                    <% }); %>
                <% } %>

                <form action="/auth/register" method="POST">
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label style="color: #ccc; margin-bottom: 8px; display: block;">Nome Completo</label>
                        <input type="text" name="name" class="form-control" placeholder="Seu nome" required 
                               style="width: 100%; padding: 12px; background: #222; border: 1px solid #444; border-radius: 8px; color: white;">
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <label style="color: #ccc; margin-bottom: 8px; display: block;">Email</label>
                        <input type="email" name="email" class="form-control" placeholder="seu@email.com" required 
                               style="width: 100%; padding: 12px; background: #222; border: 1px solid #444; border-radius: 8px; color: white;">
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <label style="color: #ccc; margin-bottom: 8px; display: block;">Tipo de Conta</label>
                        <select name="role" class="form-control" required style="width: 100%; padding: 12px; background: #222; border: 1px solid #444; border-radius: 8px; color: white;">
                            <option value="client">Aluno</option>
                            <option value="trainer">Personal Trainer</option>
                        </select>
                    </div>

                    <div class="form-group" style="margin-bottom: 25px;">
                        <label style="color: #ccc; margin-bottom: 8px; display: block;">Senha</label>
                        <input type="password" name="password" class="form-control" placeholder="Mínimo 6 caracteres" required 
                               style="width: 100%; padding: 12px; background: #222; border: 1px solid #444; border-radius: 8px; color: white;">
                    </div>

                    <button type="submit" class="btn btn-primary w-100" style="padding: 12px; font-weight: 600; font-size: 1rem;">
                        Criar Conta Grátis
                    </button>
                </form>

                <div style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #333;">
                    <p style="color: #888;">Já tem conta? <a href="/auth/login" style="color: var(--primary); text-decoration: none; font-weight: 500;">Entrar</a></p>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs') %>
