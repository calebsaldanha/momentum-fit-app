<%- include('../partials/header') %>

<main class="auth-wrapper">
    <div class="auth-card">
        <div style="text-align: center; margin-bottom: 30px;">
            <img src="/images/momentum-fit-icon.png" alt="Logo" style="width: 60px; margin-bottom: 10px;">
            <h2 style="color: white; font-weight: 700;">Crie sua conta</h2>
            <p class="text-muted">Junte-se ao time e transforme sua rotina.</p>
        </div>

        <% if (messages.error) { %>
            <div class="alert alert-danger" style="margin-bottom: 20px;">
                <i class="fas fa-exclamation-triangle"></i> <%= messages.error %>
            </div>
        <% } %>

        <form action="/auth/register" method="POST" id="registerForm">
            <input type="hidden" name="plan" value="<%= typeof plan !== 'undefined' ? plan : '' %>">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Nome Completo</label>
                <div style="position: relative;">
                    <i class="fas fa-user" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="text" name="name" required class="form-control" placeholder="Ex: Caleb Saldanha" 
                        style="width: 100%; padding: 12px 12px 12px 45px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Email</label>
                <div style="position: relative;">
                    <i class="fas fa-envelope" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="email" name="email" required class="form-control" placeholder="seu@email.com" 
                        style="width: 100%; padding: 12px 12px 12px 45px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Tipo de Conta</label>
                <div style="position: relative;">
                    <i class="fas fa-users" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <select name="role" class="form-control" 
                        style="width: 100%; padding: 12px 12px 12px 45px; background: #222; border: 1px solid #444; color: white; border-radius: 6px; appearance: none;">
                        <option value="client">Aluno (Quero treinar)</option>
                        <option value="trainer">Personal Trainer (Quero dar aulas)</option>
                    </select>
                    <i class="fas fa-chevron-down" style="position: absolute; right: 15px; top: 14px; color: #666; pointer-events: none;"></i>
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Senha</label>
                <div style="position: relative;">
                    <i class="fas fa-lock" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="password" name="password" id="password" required class="form-control" placeholder="Mínimo 6 caracteres" 
                        style="width: 100%; padding: 12px 12px 12px 45px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                </div>
                <small id="passwordHelp" style="color: #ff6b6b; display: none; margin-top: 5px; font-size: 0.8rem;">A senha deve ter pelo menos 6 caracteres.</small>
            </div>

            <div class="form-group" style="margin-bottom: 25px;">
                <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Confirmar Senha</label>
                <div style="position: relative;">
                    <i class="fas fa-lock" style="position: absolute; left: 15px; top: 14px; color: #666;"></i>
                    <input type="password" name="confirm_password" id="confirm_password" required class="form-control" placeholder="Repita a senha" 
                        style="width: 100%; padding: 12px 12px 12px 45px; background: #222; border: 1px solid #444; color: white; border-radius: 6px;">
                </div>
                <small id="confirmHelp" style="color: #ff6b6b; display: none; margin-top: 5px; font-size: 0.8rem;">As senhas não coincidem.</small>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 14px; font-weight: bold; font-size: 1.1rem; text-transform: uppercase;">
                Cadastrar <i class="fas fa-arrow-right"></i>
            </button>
        </form>

        <div style="text-align: center; margin-top: 30px;">
            <p style="color: #888;">Já tem conta?</p>
            <a href="/auth/login" class="btn btn-outline" style="width: 100%; margin-top: 10px; border: 1px solid #444; color: white; padding: 10px; border-radius: 6px; display: inline-block;">Fazer Login</a>
        </div>
    </div>
</main>

<script>
    const form = document.getElementById('registerForm');
    const pass = document.getElementById('password');
    const confirm = document.getElementById('confirm_password');
    const passHelp = document.getElementById('passwordHelp');
    const confirmHelp = document.getElementById('confirmHelp');

    form.addEventListener('submit', function(e) {
        let valid = true;
        
        // Validação Tamanho
        if (pass.value.length < 6) {
            passHelp.style.display = 'block';
            pass.style.borderColor = '#ff6b6b';
            valid = false;
        } else {
            passHelp.style.display = 'none';
            pass.style.borderColor = '#444';
        }

        // Validação Igualdade
        if (pass.value !== confirm.value) {
            confirmHelp.style.display = 'block';
            confirm.style.borderColor = '#ff6b6b';
            valid = false;
        } else {
            confirmHelp.style.display = 'none';
            confirm.style.borderColor = '#444';
        }

        if (!valid) e.preventDefault();
    });
</script>

<%- include('../partials/footer') %>
