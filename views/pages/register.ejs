<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - Momentum Fit</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    
    <%- include('../partials/header') %>

    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-header text-center">
                <img src="/images/momentum-fit-logo-completo.png" alt="Momentum Fit" class="auth-logo">
                <h2>Crie sua conta</h2>
                <p>Junte-se ao time e transforme sua rotina.</p>
            </div>

            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
                </div>
            <% } %>

            <form action="/auth/register" method="POST" id="registerForm">
                <input type="hidden" name="plan" value="<%= plan %>">

                <div class="form-group">
                    <label>Nome Completo</label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input type="text" name="name" required placeholder="Ex: Caleb Saldanha">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>E-mail</label>
                    <div class="input-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="email" required placeholder="seu@email.com">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Tipo de Conta</label>
                    <div class="input-icon">
                        <i class="fas fa-users"></i>
                        <select name="role">
                            <option value="client">Aluno (Quero treinar)</option>
                            <option value="trainer">Personal Trainer (Quero dar aulas)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group half">
                        <label>Senha</label>
                        <div class="input-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" id="password" required placeholder="Min. 6 carac.">
                        </div>
                    </div>

                    <div class="form-group half">
                        <label>Confirmar</label>
                        <div class="input-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="confirm_password" id="confirm_password" required placeholder="Repita">
                        </div>
                    </div>
                </div>
                
                <small id="passwordHelp" class="validation-error" style="display: none;">A senha deve ter pelo menos 6 caracteres.</small>
                <small id="confirmHelp" class="validation-error" style="display: none;">As senhas não coincidem.</small>

                <button type="submit" class="btn btn-primary btn-block" style="width: 100%; margin-top: 20px;">
                    Criar Conta <i class="fas fa-arrow-right"></i>
                </button>
            </form>
            
            <div class="auth-footer-link">
                Já tem uma conta? <a href="/auth/login">Fazer Login</a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        const form = document.getElementById('registerForm');
        const pass = document.getElementById('password');
        const confirm = document.getElementById('confirm_password');
        const passHelp = document.getElementById('passwordHelp');
        const confirmHelp = document.getElementById('confirmHelp');

        form.addEventListener('submit', function(e) {
            let valid = true;
            
            if (pass.value.length < 6) {
                passHelp.style.display = 'block';
                pass.style.borderColor = 'red';
                valid = false;
            } else {
                passHelp.style.display = 'none';
                pass.style.borderColor = '#444';
            }

            if (pass.value !== confirm.value) {
                confirmHelp.style.display = 'block';
                confirm.style.borderColor = 'red';
                valid = false;
            } else {
                confirmHelp.style.display = 'none';
                confirm.style.borderColor = '#444';
            }

            if (!valid) e.preventDefault();
        });
    </script>
</body>
</html>
