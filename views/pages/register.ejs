<%- include('../partials/header.ejs') %>

<main class="page-content" style="display: flex; align-items: center; justify-content: center; min-height: 80vh;">
    <div class="card-box" style="width: 100%; max-width: 500px; padding: 40px;">
        <div style="text-align: center; margin-bottom: 30px;">
            <h1 style="color: white; font-size: 2rem; margin-bottom: 10px;">Criar Conta</h1>
            <p class="text-muted">Comece sua transformação hoje.</p>
        </div>

        <% if(messages.error) { %>
            <div class="alert alert-danger" style="background: rgba(255,0,0,0.1); color: #ff4d4d; padding: 10px; border-radius: 5px; margin-bottom: 20px; border: 1px solid #ff4d4d;">
                <%= messages.error %>
            </div>
        <% } %>

        <form action="/auth/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div style="margin-bottom: 20px;">
                <label style="display: block; color: #aaa; margin-bottom: 8px;">Nome Completo</label>
                <input type="text" name="name" required class="form-control" style="width: 100%; padding: 12px; background: #0a0a0a; border: 1px solid #333; color: white; border-radius: 8px;">
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; color: #aaa; margin-bottom: 8px;">Email</label>
                <input type="email" name="email" required class="form-control" style="width: 100%; padding: 12px; background: #0a0a0a; border: 1px solid #333; color: white; border-radius: 8px;">
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; color: #aaa; margin-bottom: 8px;">Senha</label>
                <input type="password" name="password" required class="form-control" style="width: 100%; padding: 12px; background: #0a0a0a; border: 1px solid #333; color: white; border-radius: 8px;">
            </div>

            <div style="margin-bottom: 30px;">
                <label style="display: block; color: #aaa; margin-bottom: 8px;">Tipo de Conta</label>
                <select name="role" required style="width: 100%; padding: 12px; background: #0a0a0a; border: 1px solid #333; color: white; border-radius: 8px;">
                    <option value="client">Aluno (Quero treinar)</option>
                    <option value="trainer">Personal Trainer (Sou profissional)</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 14px;">Criar Conta</button>
        </form>

        <div style="text-align: center; margin-top: 20px;">
            <a href="/auth/login" class="text-neon" style="font-size: 0.9rem;">Já tem conta? Faça Login</a>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>
