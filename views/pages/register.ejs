<%- include('../layouts/public/head') %>
<%- include('../layouts/public/header') %>

<section class="hero" style="min-height: 100vh; align-items: center; justify-content: center; padding-top: 120px; padding-bottom: 40px;">
    <div class="hero-overlay"></div>
    
    <div class="container hero-container" style="display: flex; justify-content: center;">
        <div class="feature-card" style="max-width: 450px; width: 100%; border-top: 4px solid var(--primary);">
            <div class="center" style="margin-bottom: 20px;">
                <h2 style="color: white; margin-bottom: 10px;">Criar Conta</h2>
                <p style="color: #888; font-size: 0.9rem;">Comece sua jornada no Momentum Fit.</p>
            </div>

            <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                <div class="alert alert-danger" style="background: rgba(255, 107, 107, 0.1); color: #ff6b6b; padding: 10px; border-radius: 5px; margin-bottom: 15px; font-size: 0.9rem;"><%= error_msg %></div>
            <% } %>

            <form action="/auth/register" method="POST">
                <div style="margin-bottom: 15px;">
                    <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Nome Completo</label>
                    <input type="text" name="name" required 
                           style="width: 100%; padding: 12px; background: #050505; border: 1px solid #333; color: white; border-radius: 6px;">
                </div>

                <div style="margin-bottom: 15px;">
                    <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">E-mail</label>
                    <input type="email" name="email" required 
                           style="width: 100%; padding: 12px; background: #050505; border: 1px solid #333; color: white; border-radius: 6px;">
                </div>
                
                <div style="margin-bottom: 15px;">
                    <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Senha</label>
                    <input type="password" name="password" required minlength="6"
                           style="width: 100%; padding: 12px; background: #050505; border: 1px solid #333; color: white; border-radius: 6px;">
                </div>

                <div style="margin-bottom: 15px;">
                    <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Confirmar Senha</label>
                    <input type="password" name="confirm_password" required minlength="6"
                           style="width: 100%; padding: 12px; background: #050505; border: 1px solid #333; color: white; border-radius: 6px;">
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="color: #ccc; font-size: 0.9rem; margin-bottom: 5px; display: block;">Eu sou:</label>
                    <select name="role" class="w-100" style="padding: 12px; background: #050505; border: 1px solid #333; color: white; border-radius: 6px;">
                        <option value="client">Aluno</option>
                        <option value="trainer">Personal Trainer</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Criar Conta</button>
            </form>

            <div class="center" style="margin-top: 20px; font-size: 0.9rem;">
                <p style="color: #666;">
                    JÃ¡ possui uma conta? <a href="/auth/login" style="color: white; text-decoration: underline;">Fazer Login</a>
                </p>
            </div>
        </div>
    </div>
</section>

<%- include('../layouts/public/footer') %>
