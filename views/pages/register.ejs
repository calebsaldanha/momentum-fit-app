<%- include('../partials/header.ejs') %>
<main class="public-main" style="background: url('/images/auth-bg.png') center/cover; display: flex; align-items: center; justify-content: center; min-height: 80vh;">
    <div class="card-box" style="width: 100%; max-width: 400px; background: rgba(0,0,0,0.8); backdrop-filter: blur(10px);">
        <h2 style="text-align: center; margin-bottom: 20px;">Criar Conta</h2>
        <form action="/auth/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" name="name" class="form-input" placeholder="Seu Nome" required>
            <input type="email" name="email" class="form-input" placeholder="Seu Email" required>
            <input type="password" name="password" class="form-input" placeholder="Senha" required>
            
            <div style="margin: 10px 0;">
                <label style="color: #aaa; font-size: 0.9rem;">Sou:</label>
                <select name="role" class="form-input">
                    <option value="client">Aluno</option>
                    <option value="trainer">Personal Trainer</option>
                </select>
            </div>

            <button class="btn btn-primary btn-full">Cadastrar</button>
        </form>
        <p style="text-align: center; margin-top: 15px;">
            <a href="/auth/login" style="color: #888;">JÃ¡ tenho conta</a>
        </p>
    </div>
</main>
<%- include('../partials/footer.ejs') %>
