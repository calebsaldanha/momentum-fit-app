<%- include('../partials/header.ejs') %>

<main class="page-content">
    <section class="section-padding">
        <div class="container">
            <div class="section-header center">
                <h2 class="section-title">Nossos <span class="text-neon">Planos</span></h2>
                <p class="section-desc">Escolha a melhor opção para transformar seu corpo.</p>
            </div>

            <div class="features-grid">
                <% if (typeof plans !== 'undefined' && plans.length > 0) { %>
                    <% plans.forEach(plan => { %>
                        <div class="card-box" style="text-align: center; border: 1px solid <%= plan.name.includes('Básico') ? 'var(--primary-color)' : '#333' %>;">
                            <h3 style="font-size: 1.5rem; margin-bottom: 10px; color: white;"><%= plan.name %></h3>
                            <p class="text-neon" style="font-size: 2.5rem; font-weight: 800; margin: 15px 0;">
                                R$ <%= plan.price %>
                            </p>
                            <p class="text-muted" style="margin-bottom: 20px;"><%= plan.description %></p>
                            
                            <ul style="text-align: left; margin-bottom: 30px; list-style: none; padding: 0;">
                                <% if (plan.features && Array.isArray(plan.features)) { %>
                                    <% plan.features.forEach(feature => { %>
                                        <li style="margin-bottom: 8px; color: #ccc;">
                                            <i class="fas fa-check text-neon" style="margin-right: 8px;"></i> <%= feature %>
                                        </li>
                                    <% }) %>
                                <% } else { %>
                                    <li style="margin-bottom: 8px; color: #ccc;"><i class="fas fa-check text-neon"></i> Acesso total</li>
                                <% } %>
                            </ul>

                            <a href="/auth/register?plan=<%= plan.id %>" class="btn btn-primary btn-lg" style="width: 100%;">Assinar Agora</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="text-align: center; color: #666; width: 100%;">Planos sendo atualizados. Volte em breve.</p>
                <% } %>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs') %>
