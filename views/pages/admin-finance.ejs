<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/finance' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Financeiro</span>
        </div>

        <div class="page-header">
            <h1>Relatório <span class="text-neon">Financeiro</span></h1>
            <p>Visão geral de receitas e transações.</p>
        </div>

        <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div class="card-box">
                <h3 class="text-muted">Receita Total</h3>
                <p style="font-size: 2rem; font-weight: bold;">R$ <%= typeof revenue !== 'undefined' ? revenue.total : '0,00' %></p>
            </div>
            <div class="card-box">
                <h3 class="text-muted">Este Mês</h3>
                <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);">R$ <%= typeof revenue !== 'undefined' ? revenue.month : '0,00' %></p>
            </div>
        </div>

        <div class="card-box">
            <h3 style="margin-bottom: 20px; color: white;">Transações Recentes</h3>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Usuário</th>
                            <th>Valor</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 20px;">Nenhuma transação recente encontrada.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer.ejs') %>
