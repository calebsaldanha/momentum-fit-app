<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="page-header">
            <h1>Meu Plano & Financeiro</h1>
        </div>

        <div class="card-box" style="margin-bottom: 30px;">
            <h3 style="margin-bottom: 20px; color: var(--primary-color);">Assinatura Atual</h3>
            <% if (subscription) { %>
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
                    <div>
                        <h2 style="color: white; font-size: 2rem;"><%= subscription.plan_name %></h2>
                        <p style="color: #888;">Valor: R$ <%= subscription.price %>/mês</p>
                    </div>
                    <div style="text-align: right;">
                        <span style="display: block; color: var(--primary-color); font-weight: 700;">ATIVO</span>
                        <span style="color: #666; font-size: 0.9rem;">Renova dia <%= subscription.payment_due_day %></span>
                    </div>
                </div>
                <hr style="border-color: #333; margin: 20px 0;">
                <button class="btn btn-outline btn-sm" style="color: #ff6b6b; border-color: #ff6b6b;">Cancelar Assinatura</button>
            <% } else { %>
                <p style="color: #ccc; margin-bottom: 20px;">Você não possui uma assinatura ativa no momento.</p>
                <a href="/plans" class="btn btn-primary">Ver Planos Disponíveis</a>
            <% } %>
        </div>

        <h3 style="color: white; margin-bottom: 15px;">Histórico de Transações</h3>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof transactions !== 'undefined' && transactions.length > 0) { %>
                        <% transactions.forEach(t => { %>
                            <tr>
                                <td><%= new Date(t.created_at).toLocaleDateString() %></td>
                                <td><%= t.description %></td>
                                <td>R$ <%= t.amount %></td>
                                <td><span style="color: var(--primary-color);"><%= t.status %></span></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center; color: #666;">Nenhuma transação encontrada.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
