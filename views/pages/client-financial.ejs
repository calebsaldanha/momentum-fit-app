<%- include('../partials/header') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar') %>
    
    <main class="main-content">
        <div class="page-header">
            <h1>Minha Assinatura</h1>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>

        <div class="financial-section">
            <div class="card current-plan">
                <h3>Plano Atual</h3>
                <% if (subscription) { %>
                    <div class="plan-status <%= subscription.status %>">
                        <%= subscription.status === 'active' ? 'Ativo' : 'Pendente/Inativo' %>
                    </div>
                    <h2><%= subscription.plan_name %></h2>
                    <p class="price">R$ <%= subscription.price %>/mês</p>
                    <p>Início: <%= new Date(subscription.start_date).toLocaleDateString() %></p>
                    
                    <div style="margin-top: 20px;">
                        <a href="/client/plans" class="btn-secondary">Trocar de Plano</a>
                    </div>

                <% } else { %>
                    <p>Nenhuma assinatura ativa.</p>
                    <a href="/client/plans" class="btn-primary">Escolher Plano</a>
                <% } %>
            </div>

            <div class="card payment-history">
                <h3>Histórico de Pagamentos</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Plano</th>
                            <th>Valor</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (payments && payments.length > 0) { %>
                            <% payments.forEach(pay => { %>
                                <tr>
                                    <td><%= new Date(pay.created_at).toLocaleDateString() %></td>
                                    <td><%= pay.plan_name %></td>
                                    <td>R$ <%= pay.amount %></td>
                                    <td><span class="badge <%= pay.status %>"><%= pay.status %></span></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4">Nenhum pagamento registrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
