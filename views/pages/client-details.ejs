<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/admin-sidebar.ejs', { currentPage: 'clients' }) %>
    <main class="dashboard-main">
        <section class="section">
            <div class="section-header" style="display: flex; justify-content: space-between; align-items: flex-start;">
                <div>
                    <h1><%= clientProfile.name %></h1>
                    <p><%= clientProfile.email %></p>
                </div>
                <a href="/workouts/create?clientId=<%= clientProfile.id %>" class="btn btn-primary">Novo Treino</a>
            </div>

            <div class="client-info-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-top: 2rem;">
                <div class="info-card">
                    <h4>Perfil Físico</h4>
                    <p><strong>Idade:</strong> <%= clientProfile.age || '-' %></p>
                    <p><strong>Peso:</strong> <%= clientProfile.weight %>kg | <strong>Altura:</strong> <%= clientProfile.height %>cm</p>
                    <p><strong>Nível:</strong> <%= clientProfile.fitness_level %></p>
                </div>
                <div class="info-card">
                    <h4>Objetivos</h4>
                    <p><%= clientProfile.goals || 'Não informado.' %></p>
                </div>
            </div>

            <h3 style="margin-top: 3rem; color: var(--c-accent-primary);">Histórico de Treinos</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr><th>Título</th><th>Data</th><th>Ações</th></tr>
                    </thead>
                    <tbody>
                        <% if (workouts.length > 0) { %>
                            <% workouts.forEach(workout => { %>
                            <tr>
                                <td><strong><%= workout.title %></strong></td>
                                <td><%= new Date(workout.created_at).toLocaleDateString('pt-BR') %></td>
                                <td>
                                    <div style="display: flex; gap: 0.5rem;">
                                        <a href="/workouts/<%= workout.id %>" class="btn btn-secondary btn-sm">Ver</a>
                                        <form action="/admin/workouts/<%= workout.id %>/delete" method="POST" onsubmit="return confirm('Excluir treino?')">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="btn btn-sm" style="background: var(--c-error);">Excluir</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" style="text-align: center; padding: 2rem;">Nenhum treino.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
