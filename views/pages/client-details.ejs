<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item">Dashboard</a>
            <a href="/admin/clients" class="nav-item active">Clientes</a>
            <a href="/workouts/create" class="nav-item">Criar Treino</a>
        </nav>
    </aside>
    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <h1><%= clientProfile.name %></h1>
                <a href="/workouts/create?clientId=<%= clientProfile.id %>" class="btn btn-primary">Novo Treino</a>
            </div>

            <div class="table-container" style="margin-top: 2rem;">
                <h3>Histórico de Treinos</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Data</th>
                            <th>Treinador</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% workouts.forEach(workout => { %>
                        <tr>
                            <td><%= workout.title %></td>
                            <td><%= new Date(workout.created_at).toLocaleDateString('pt-BR') %></td>
                            <td><%= workout.trainer_name %></td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <a href="/workouts/edit/<%= workout.id %>" class="btn btn-secondary btn-sm">Editar</a>
                                    <form action="/admin/workouts/<%= workout.id %>/delete" method="POST" onsubmit="return confirm('Excluir este treino?')">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn btn-error btn-sm" style="background: var(--c-error);">Excluir</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
