<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item">Dashboard</a>
            <a href="/admin/clients" class="nav-item active">Clientes</a>
            <a href="/workouts/create" class="nav-item">Criar Treino</a>
        </nav>
    </aside>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header" style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
                <div>
                    <h1><%= clientProfile.name %></h1>
                    <p>Email: <%= clientProfile.email %></p>
                </div>
                <a href="/workouts/create?clientId=<%= clientProfile.id %>" class="btn btn-primary">Novo Treino</a>
            </div>

            <div class="client-info-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
                <div class="info-card">
                    <h4>Informações Básicas</h4>
                    <p><strong>Idade:</strong> <%= clientProfile.age || '-' %></p>
                    <p><strong>Peso:</strong> <%= clientProfile.weight ? clientProfile.weight + 'kg' : '-' %></p>
                    <p><strong>Altura:</strong> <%= clientProfile.height ? clientProfile.height + 'cm' : '-' %></p>
                    <p><strong>Nível:</strong> <%= clientProfile.fitness_level || '-' %></p>
                </div>
                <div class="info-card">
                    <h4>Rotina e Equipamento</h4>
                    <p><strong>Dias/Semana:</strong> <%= clientProfile.training_days || '-' %></p>
                    <p><strong>Duração:</strong> <%= clientProfile.training_duration || '-' %></p>
                    <p><strong>Local:</strong> <%= clientProfile.equipment || '-' %></p>
                    <p><strong>Atividade:</strong> <%= clientProfile.activity_level || '-' %></p>
                </div>
                <div class="info-card">
                    <h4>Saúde e Condições</h4>
                    <p><%= clientProfile.medical_conditions || 'Nenhuma condição informada.' %></p>
                </div>
            </div>

            <div class="table-container" style="margin-top: 3rem;">
                <h3 style="margin-bottom: 1.5rem; color: var(--c-accent-primary);">Histórico de Treinos</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Data</th>
                            <th>Treinador</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (workouts.length > 0) { %>
                            <% workouts.forEach(workout => { %>
                            <tr>
                                <td><strong><%= workout.title %></strong></td>
                                <td><%= new Date(workout.created_at).toLocaleDateString('pt-BR') %></td>
                                <td><%= workout.trainer_name %></td>
                                <td>
                                    <form action="/admin/workouts/<%= workout.id %>/delete" method="POST" onsubmit="return confirm('Excluir este treino?')">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn btn-sm" style="background: var(--c-error); color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer;">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" style="text-align: center; padding: 2rem;">Nenhum treino registrado.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
