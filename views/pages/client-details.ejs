<%- include('../partials/header', { title: 'Detalhes do Aluno', bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar', { currentPage: 'clients' }) %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <h1>Perfil do Aluno</h1>
                <a href="/admin/clients" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="content-card" style="margin-bottom: 2rem;">
                <div style="display: flex; gap: 1.5rem; align-items: flex-start; flex-wrap: wrap;">
                    <div class="user-avatar-large" style="margin: 0; width: 80px; height: 80px; font-size: 2rem;">
                        <% if (client && client.name) { %>
                            <%= client.name.charAt(0) %>
                        <% } else { %>
                            <i class="fas fa-user"></i>
                        <% } %>
                    </div>
                    <div style="flex: 1;">
                        <h2 style="margin-top: 0; margin-bottom: 0.5rem; color: white;">
                            <%= client ? client.name : 'Aluno não encontrado' %>
                        </h2>
                        <p style="color: #888; margin-bottom: 1rem;">
                            <%= client ? client.email : '--' %>
                        </p>
                        
                        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                            <span class="user-role-badge">
                                <i class="fas fa-bullseye" style="margin-right: 5px;"></i>
                                <%= (client && client.goal) ? client.goal : 'Objetivo não definido' %>
                            </span>
                            <span class="user-role-badge" style="background: rgba(255,255,255,0.1);">
                                <i class="fas fa-layer-group" style="margin-right: 5px;"></i>
                                <%= (client && client.fitness_level) ? client.fitness_level : 'Nível não definido' %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <h3 style="margin-bottom: 1rem; color: #ccc; font-size: 1.1rem;">Estatísticas</h3>
            <div class="stats-grid" style="margin-bottom: 2rem;">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                    <div class="stat-info">
                        <h3><%= (typeof stats !== 'undefined' && stats.completed_workouts) ? stats.completed_workouts : 0 %></h3>
                        <p>Treinos Concluídos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-fire"></i></div>
                    <div class="stat-info">
                        <h3><%= (typeof stats !== 'undefined' && stats.streak) ? stats.streak : 0 %></h3>
                        <p>Sequência (Dias)</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-dumbbell"></i></div>
                    <div class="stat-info">
                        <h3><%= (typeof workouts !== 'undefined') ? workouts.length : 0 %></h3>
                        <p>Planos Ativos</p>
                    </div>
                </div>
            </div>

            <div class="section-header" style="border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 1rem; margin-bottom: 1rem;">
                <h3 style="margin: 0;">Planos de Treino</h3>
                <% if (client) { %>
                    <a href="/workouts/create?client_id=<%= client.id %>" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Novo Treino
                    </a>
                <% } %>
            </div>

            <div class="workouts-list">
                <% if (typeof workouts !== 'undefined' && workouts.length > 0) { %>
                    <% workouts.forEach(workout => { %>
                        <div class="content-card" style="display: flex; justify-content: space-between; align-items: center; padding: 1.2rem; margin-bottom: 1rem; transition: transform 0.2s;">
                            <div>
                                <h4 style="margin: 0 0 0.4rem 0; font-size: 1.1rem; color: white;"><%= workout.title %></h4>
                                <span style="font-size: 0.85rem; color: #666;">
                                    <i class="far fa-calendar-alt"></i> Criado em: <%= new Date(workout.created_at).toLocaleDateString('pt-BR') %>
                                </span>
                            </div>
                            <div style="display: flex; gap: 0.8rem;">
                                <a href="/workouts/<%= workout.id %>" class="btn btn-sm btn-outline" title="Visualizar">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/workouts/edit/<%= workout.id %>" class="btn btn-sm btn-secondary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="text-align: center; padding: 3rem; background: rgba(255,255,255,0.02); border: 1px dashed rgba(255,255,255,0.1); border-radius: 12px; color: #666;">
                        <i class="fas fa-dumbbell" style="font-size: 2rem; margin-bottom: 1rem; display: block; opacity: 0.5;"></i>
                        <p>Nenhum treino atribuído a este aluno ainda.</p>
                        <% if (client) { %>
                            <a href="/workouts/create?client_id=<%= client.id %>" style="color: var(--c-accent-primary); text-decoration: none; font-weight: 600;">Criar primeiro treino</a>
                        <% } %>
                    </div>
                <% } %>
            </div>

        </section>
    </main>
</div>

<%- include('../partials/footer') %>
