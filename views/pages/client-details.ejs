<%- include('../partials/header', { title: 'Detalhes do Aluno', bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'clients' }) %>
    
    <main class="dashboard-main">
        <div class="section-header">
            <a href="javascript:history.back()" class="btn-back"><i class="fas fa-arrow-left"></i> Voltar</a>
            <h1>Perfil de <%= client.name %></h1>
        </div>

        <div class="profile-grid">
            <div class="profile-card">
                <div class="text-center">
                    <div class="avatar-large" style="margin: 0 auto 1rem;">
                        <% if (client.profile_image) { %>
                            <img src="<%= client.profile_image %>" alt="<%= client.name %>">
                        <% } else { %>
                            <i class="fas fa-user"></i>
                        <% } %>
                    </div>
                    <h2><%= client.name %></h2>
                    <p class="text-muted"><%= client.email %></p>
                    <span class="status-badge status-<%= client.status || 'active' %>">
                        <%= client.status === 'active' ? 'Ativo' : 'Inativo' %>
                    </span>
                </div>
                
                <div class="info-list" style="margin-top: 2rem;">
                    <div class="info-item">
                        <strong>Objetivo:</strong>
                        <span><%= client.goal || '-' %></span>
                    </div>
                    <div class="info-item">
                        <strong>Nível:</strong>
                        <span><%= client.fitness_level || '-' %></span>
                    </div>
                </div>

                <% if (user.role === 'superadmin') { %>
                    <hr style="margin: 20px 0;">
                    <h4 style="color: var(--c-error);">Zona de Admin</h4>
                    <form action="/superadmin/users/<%= client.id %>/change-password" method="POST" onsubmit="return confirm('Tem certeza que deseja alterar a senha deste usuário?');">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label style="font-size: 0.9rem;">Definir Nova Senha</label>
                            <div style="display: flex; gap: 10px;">
                                <input type="text" name="new_password" placeholder="Nova senha" required style="padding: 5px;">
                                <button type="submit" class="btn btn-sm btn-secondary">Salvar</button>
                            </div>
                        </div>
                    </form>
                <% } %>
            </div>

            <div class="profile-content">
                <div class="card">
                    <h3>Estatísticas Rápidas</h3>
                    <div class="stats-row">
                        <div class="stat-box">
                            <span class="stat-number">0</span>
                            <span class="stat-label">Treinos Completos</span>
                        </div>
                        <div class="stat-box">
                            <span class="stat-number">0</span>
                            <span class="stat-label">Dias Consecutivos</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
