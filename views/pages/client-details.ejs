<%- include('../partials/header', { bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/admin-sidebar') %>
    <main class="dashboard-main">
        <div class="container">
            <div style="margin-bottom: 2rem;">
                <a href="/admin/clients" style="color: #888; font-size: 0.9rem;">&larr; Voltar</a>
                <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-top: 10px;">
                    <div>
                        <h1 style="margin-bottom: 5px;"><%= clientProfile.name %></h1>
                        <span class="user-badge"><%= clientProfile.email %></span>
                        <% if (clientProfile.status === 'pending_approval') { %>
                             <span style="background: #f59e0b; color: black; padding: 2px 8px; border-radius: 4px; font-weight: bold; margin-left: 10px;">PENDENTE</span>
                        <% } %>
                    </div>
                    <% if (user.role === 'superadmin') { %>
                        <form action="/admin/clients/<%= clientProfile.user_id %>/delete" method="POST" onsubmit="return confirm('Tem certeza?');" style="margin: 0;">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit" class="btn btn-secondary btn-sm">Excluir</button>
                        </form>
                    <% } %>
                </div>
            </div>

            <div style="background: var(--c-bg-card); padding: 20px; border-radius: 12px; border: 1px solid var(--c-border); margin-bottom: 30px;">
                <% if (user.role === 'superadmin') { %>
                    <div style="display: flex; align-items: center; justify-content: space-between;">
                        <div><h4 style="margin: 0;">Treinador Responsável</h4><p style="margin: 0; color: #888;">Selecione quem fará o acompanhamento.</p></div>
                        <form action="/admin/clients/<%= clientProfile.user_id %>/assign" method="POST" style="display: flex; gap: 10px; margin: 0;">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <select name="trainer_id" style="padding: 10px; border-radius: 8px; background: #222; color: white;">
                                <option value="">-- Selecione --</option>
                                <% allTrainers.forEach(t => { %>
                                    <option value="<%= t.id %>" <%= clientProfile.assigned_trainer_id === t.id ? 'selected' : '' %>><%= t.name %></option>
                                <% }) %>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
                        </form>
                    </div>
                <% } else { %>
                    <h4 style="margin: 0 0 10px 0;">Treinador Responsável</h4>
                    <p style="color: var(--c-accent-primary); font-weight: bold;">
                        <% const t = allTrainers.find(x => x.id === clientProfile.assigned_trainer_id); %><%= t ? t.name : 'Não atribuído' %>
                    </p>
                <% } %>
            </div>

            <h3 style="border-bottom: 1px solid var(--c-border); padding-bottom: 10px; margin-bottom: 20px;">Ficha Completa</h3>
            <div class="client-info-grid">
                <div class="info-card">
                    <h4>1. Dados Pessoais</h4>
                    <p><strong>Idade:</strong> <%= clientProfile.age %> anos</p>
                    <p><strong>Telefone:</strong> <%= clientProfile.phone %></p>
                    <p><strong>Gênero:</strong> <%= clientProfile.gender_identity %></p>
                    <p><strong>Sexo:</strong> <%= clientProfile.sex_assigned_at_birth %></p>
                    <% if (clientProfile.hormonal_treatment) { %>
                        <div style="margin-top: 10px; padding: 10px; background: rgba(245, 158, 11, 0.1);"><strong>⚠ Hormônios:</strong> <%= clientProfile.hormonal_details %></div>
                    <% } %>
                </div>
                <div class="info-card">
                    <h4>2. Medidas & Corpo</h4>
                    <p><strong>Peso:</strong> <%= clientProfile.weight %> kg</p>
                    <p><strong>Altura:</strong> <%= clientProfile.height %> m</p>
                    <p><strong>IMC:</strong> <strong style="color: var(--c-accent-primary); font-size: 1.2rem;"><%= imc %></strong></p>
                    <p><strong>Gordura:</strong> <%= clientProfile.body_fat %>%</p>
                    <hr style="border-color:#333">
                    <p><strong>Medidas:</strong> Cintura: <%= clientProfile.measure_waist %> | Quadril: <%= clientProfile.measure_hip %> | Braço: <%= clientProfile.measure_arm %> | Perna: <%= clientProfile.measure_leg %></p>
                </div>
                <div class="info-card">
                    <h4>3. Saúde</h4>
                    <p><strong>Condições:</strong> <%= clientProfile.medical_conditions %></p>
                    <p><strong>Medicamentos:</strong> <%= clientProfile.medications %></p>
                    <p><strong>Cirurgias:</strong> <%= clientProfile.surgeries %></p>
                    <p><strong>Lesões:</strong> <%= clientProfile.injuries %></p>
                    <p><strong>Alergias:</strong> <%= clientProfile.allergies %></p>
                </div>
                <div class="info-card">
                    <h4>4. Rotina & Objetivos</h4>
                    <p><strong>Obj. Principal:</strong> <%= clientProfile.main_goal %></p>
                    <p><strong>Obj. Secundário:</strong> <%= clientProfile.secondary_goals %></p>
                    <p><strong>Evento:</strong> <%= clientProfile.specific_event %></p>
                    <p><strong>Sono:</strong> <%= clientProfile.sleep_hours %></p>
                    <p><strong>Dieta:</strong> <%= clientProfile.diet_description %></p>
                    <p><strong>Nível:</strong> <%= clientProfile.fitness_level %></p>
                    <p><strong>Disponibilidade:</strong> <%= clientProfile.availability %></p>
                </div>
            </div>

            <div style="display: flex; justify-content: space-between; margin-top: 3rem;">
                <h3>Treinos</h3>
                <a href="/workouts/create?client_id=<%= clientProfile.user_id %>" class="btn btn-primary btn-sm">Novo Treino</a>
            </div>
            <div class="table-container">
                <table>
                    <thead><tr><th>Título</th><th>Data</th><th>Ações</th></tr></thead>
                    <tbody>
                        <% if (workouts.length > 0) { workouts.forEach(w => { %>
                            <tr>
                                <td><%= w.title %></td>
                                <td><%= new Date(w.created_at).toLocaleDateString('pt-BR') %></td>
                                <td><a href="/workouts/<%= w.id %>" class="btn-text">Ver</a></td>
                            </tr>
                        <% })} else { %> <tr><td colspan="3" style="text-align:center;">Sem treinos.</td></tr> <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
