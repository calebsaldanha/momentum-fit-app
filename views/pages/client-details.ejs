<%- include('../partials/header', { title: 'Detalhes do Aluno', bodyClass: 'dashboard-body' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar', { currentPage: 'clients' }) %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <h1>Perfil do Aluno</h1>
                <a href="/admin/clients" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="content-card" style="margin-bottom: 2rem;">
                <div style="display: flex; gap: 1.5rem; align-items: center;">
                    <div class="user-avatar-large" style="margin: 0;">
                        <%= (typeof client !== 'undefined' && client.name) ? client.name.charAt(0) : '?' %>
                    </div>
                    <div>
                        <h2 style="margin: 0; color: white;">
                            <%= (typeof client !== 'undefined' && client.name) ? client.name : 'Aluno não encontrado' %>
                        </h2>
                        <p style="color: #888; margin: 0.5rem 0;">
                            <%= (typeof client !== 'undefined' && client.email) ? client.email : '--' %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-info">
                        <h3><%= (typeof stats !== 'undefined' && stats.completed_workouts) ? stats.completed_workouts : 0 %></h3>
                        <p>Treinos Concluídos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h3><%= (typeof workouts !== 'undefined') ? workouts.length : 0 %></h3>
                        <p>Planos Ativos</p>
                    </div>
                </div>
            </div>

            <div style="margin-top: 2rem;">
                <h3 style="color: white; margin-bottom: 1rem;">Treinos Atribuídos</h3>
                <% if (typeof workouts !== 'undefined' && workouts.length > 0) { %>
                    <% workouts.forEach(workout => { %>
                        <div class="content-card" style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong style="color: white; font-size: 1.1rem;"><%= workout.title %></strong>
                                <p style="color: #666; margin: 0; font-size: 0.9rem;">Criado em: <%= new Date(workout.created_at).toLocaleDateString() %></p>
                            </div>
                            <a href="/workouts/<%= workout.id %>" class="btn btn-sm btn-primary">Ver</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="color: #666;">Nenhum treino encontrado.</p>
                    <% if (typeof client !== 'undefined') { %>
                        <a href="/workouts/create?client_id=<%= client.id %>" class="btn btn-primary btn-sm">Criar Treino</a>
                    <% } %>
                <% } %>
            </div>
        </section>
    </main>
</div>

<%- include('../partials/footer') %>
