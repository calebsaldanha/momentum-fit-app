<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <% if (user.role === 'superadmin') { %>
                <a href="/superadmin/dashboard" class="nav-item"><span></span> Painel Super Admin</a>
                <div style="height: 1px; background: #e2e8f0; margin: 0.5rem 1rem;"></div>
            <% } %>
            <a href="/admin/dashboard" class="nav-item"><span></span> Dashboard</a>
            <a href="/admin/clients" class="nav-item active"><span></span> Clientes</a>
            <a href="/workouts/create" class="nav-item"><span></span> Criar Treino</a>
            <% if (user.role === 'superadmin') { %>
                <a href="/articles/create" class="nav-item"><span></span> Criar Artigo</a>
            <% } %>
            <a href="/chat" class="nav-item"><span></span> Chat</a>
        </nav>
        <div class="sidebar-footer">
            <form action="/auth/logout" method="POST" style="margin: 0;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn-logout-sidebar">Sair</button>
            </form>
        </div>
    </aside>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header section-header-inline">
                <div><h1><%= clientProfile.name %></h1><p>Email: <%= clientProfile.email %></p></div>
                <a href="/workouts/create?clientId=<%= clientProfile.id %>" class="btn btn-primary">Criar Novo Treino</a>
            </div>
            
            <% if (user.role === 'superadmin') { %>
            <div class="info-card" style="margin-bottom: 2rem; background: rgba(190, 242, 2, 0.05); border-color: var(--c-accent-primary);">
                <form method="POST" action="/admin/clients/<%= clientProfile.id %>/assign" style="display: flex; align-items: flex-end; gap: 1rem; flex-wrap: wrap;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div style="flex: 1; min-width: 250px;">
                        <label for="trainer_id" style="font-weight: 600; display: block; margin-bottom: 0.5rem; color: var(--c-accent-primary);">Atribuir Personal Trainer</label>
                        <select name="trainer_id" id="trainer_id">
                            <option value="">Selecione um personal</option>
                            <% allTrainers.forEach(trainer => { %>
                                <option value="<%= trainer.id %>" <%= clientProfile.assigned_trainer_id == trainer.id ? 'selected' : '' %>><%= trainer.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" style="margin-bottom: 4px;">Salvar Atribuição</button>
                </form>
            </div>
            <% } %>
      
            <div class="client-info-grid">
                <div class="info-card">
                    <h4>Informações Básicas</h4>
                    <p><strong>Idade:</strong> <%= clientProfile.age || '-' %></p>
                    <p><strong>Peso:</strong> <%= clientProfile.weight ? clientProfile.weight + 'kg' : '-' %></p>
                    <p><strong>Altura:</strong> <%= clientProfile.height ? clientProfile.height + 'cm' : '-' %></p>
                    <p><strong>Nível:</strong> <%= clientProfile.fitness_level || '-' %></p>
                </div>
                <div class="info-card">
                    <h4>Rotina e Equipamento</h4>
                    <p><strong>Dias/Semana:</strong> <%= clientProfile.training_days || '-' %></p>
                    <p><strong>Duração:</strong> <%= clientProfile.training_duration || '-' %></p>
                    <p><strong>Local:</strong> <%= clientProfile.equipment || '-' %></p>
                    <p><strong>Atividade:</strong> <%= clientProfile.activity_level || '-' %></p>
                </div>
                <div class="info-card">
                    <h4>Saúde e Condições</h4>
                    <p><%= clientProfile.medical_conditions || 'Nenhuma condição informada.' %></p>
                </div>
                <div class="info-card" style="grid-column: 1 / -1;">
                    <h4>Objetivos Principais</h4>
                    <p style="font-size: 1rem; color: white;"><%= clientProfile.goals || 'Nenhum objetivo detalhado.' %></p>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
