<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/users' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Detalhes</span>
        </div>

        <div class="page-header">
            <a href="/admin/users" class="text-muted"><i class="fas fa-arrow-left"></i> Voltar</a>
            <h1>Detalhes: <span class="text-neon"><%= targetUser.name %></span></h1>
        </div>

        <% if(messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <div style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));">
            <div class="card-box">
                <h3>Dados da Conta</h3>
                <p><strong>ID:</strong> <%= targetUser.id %></p>
                <p><strong>Email:</strong> <%= targetUser.email %></p>
                <p><strong>Role:</strong> <span class="badge-neon"><%= targetUser.role.toUpperCase() %></span></p>
                <p><strong>Status:</strong> <span style="color: <%= targetUser.active ? '#bef202' : 'red' %>"><%= targetUser.active ? 'Ativo' : 'Bloqueado' %></span></p>
                <p><strong>Criado em:</strong> <%= new Date(targetUser.created_at).toLocaleDateString() %></p>

                <form action="/admin/users/<%= targetUser.id %>/toggle-status" method="POST" style="margin-top: 20px;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-outline" style="width: 100%; border-color: <%= targetUser.active ? 'red' : 'green' %>; color: <%= targetUser.active ? 'red' : 'green' %>;">
                        <%= targetUser.active ? 'Suspender Usuário' : 'Ativar Usuário' %>
                    </button>
                </form>
            </div>

            <div class="card-box">
                <h3>Informações do Perfil</h3>
                <% if (targetUser.role === 'client') { %>
                    <% if (details && Object.keys(details).length > 0) { %>
                        <p><strong>Objetivo:</strong> <%= details.goal || '-' %></p>
                        <p><strong>Peso:</strong> <%= details.weight || '-' %> kg</p>
                        <p><strong>Altura:</strong> <%= details.height || '-' %> cm</p>
                        <p><strong>Histórico Médico:</strong> <%= details.medical_history || '-' %></p>
                    <% } else { %>
                        <p class="text-muted">Perfil ainda não preenchido pelo aluno.</p>
                    <% } %>
                <% } else if (targetUser.role === 'trainer') { %>
                    <% if (details && Object.keys(details).length > 0) { %>
                        <p><strong>Especialidades:</strong> <%= details.specialties || '-' %></p>
                        <p><strong>Bio:</strong> <%= details.bio || '-' %></p>
                        <p><strong>Aprovação:</strong> <%= details.is_approved ? 'Aprovado' : 'Pendente' %></p>
                    <% } else { %>
                        <p class="text-muted">Perfil ainda não preenchido pelo treinador.</p>
                    <% } %>
                <% } else { %>
                    <p class="text-muted">Usuário administrativo. Sem perfil adicional.</p>
                <% } %>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
