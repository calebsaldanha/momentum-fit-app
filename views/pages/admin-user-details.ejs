<%- include('../partials/header.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/users' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span class="text-muted">Detalhes</span>
        </div>

        <div class="page-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
            <div style="display: flex; align-items: center; gap: 15px;">
                <a href="/admin/users" class="btn btn-sm btn-outline"><i class="fas fa-arrow-left"></i></a>
                <div>
                    <h1 style="margin: 0; font-size: 1.8rem;"><%= targetUser.name %></h1>
                    <div style="display: flex; gap: 10px; margin-top: 5px;">
                        <span class="badge-neon" style="font-size: 0.7rem;"><%= targetUser.role.toUpperCase() %></span>
                        <span style="color: <%= targetUser.active ? '#bef202' : '#ff4d4d' %>; font-size: 0.85rem;">
                            <%= targetUser.active ? '● Ativo' : '● Suspenso' %>
                        </span>
                    </div>
                </div>
            </div>
            
            <div style="display: flex; gap: 10px;">
                <form action="/admin/users/<%= targetUser.id %>/toggle-status" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-outline"><%= targetUser.active ? 'Suspender' : 'Ativar' %></button>
                </form>
                <form action="/admin/users/<%= targetUser.id %>/delete" method="POST" onsubmit="return confirm('ATENÇÃO: Isso apagará TODOS os dados deste usuário. Continuar?');">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary" style="background: #ff4d4d; color: white; border: none;">Excluir</button>
                </form>
            </div>
        </div>

        <% if(messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <% if (targetUser.role === 'client') { %>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Treinos</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: white;"><%= bi.totalWorkouts || 0 %></p>
                </div>
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Assiduidade</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);"><%= bi.attendanceRate %>%</p>
                </div>
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Plano</h3>
                    <p style="font-size: 1.2rem; font-weight: bold; color: white; margin-top: 10px;">
                        <%= activePlan ? activePlan.plan_name : 'Nenhum' %>
                    </p>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; margin-bottom: 30px;">
                <div class="card-box">
                    <h3 style="color: var(--primary-color); border-bottom: 1px solid #333; padding-bottom: 10px; margin-bottom: 20px;">Ficha de Anamnese</h3>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div><label style="color:#666; font-size:0.8rem">Email</label><p style="color:white"><%= targetUser.email %></p></div>
                        <div><label style="color:#666; font-size:0.8rem">Telefone</label><p style="color:white"><%= targetUser.phone || '-' %></p></div>
                        <div><label style="color:#666; font-size:0.8rem">Nascimento</label><p style="color:white"><%= targetUser.birth_date ? new Date(targetUser.birth_date).toLocaleDateString() : '-' %></p></div>
                        
                        <div><label style="color:#666; font-size:0.8rem">Peso</label><p style="color:white"><%= details.weight ? details.weight + ' kg' : '-' %></p></div>
                        <div><label style="color:#666; font-size:0.8rem">Altura</label><p style="color:white"><%= details.height ? details.height + ' cm' : '-' %></p></div>
                        
                        <div><label style="color:#666; font-size:0.8rem">Objetivo Principal</label><p style="color:var(--primary-color)"><%= details.goal || '-' %></p></div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Descrição do Objetivo</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.goal_description || 'Não informado.' %></p>
                        </div>

                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Histórico Médico / Doenças</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.medical_history || 'Nenhum.' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Medicamentos em uso</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.medications || 'Nenhum.' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Lesões Passadas/Atuais</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.injuries || 'Nenhuma.' %></p>
                        </div>

                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Nível de Atividade (Sedentário/Ativo)</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.activity_level || '-' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Equipamentos Disponíveis</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.available_equipment || 'Academia Completa (Padrão)' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color:#666; font-size:0.8rem">Outras Limitações</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.limitations || '-' %></p>
                        </div>
                    </div>
                </div>

                <div class="card-box" style="height: fit-content;">
                    <h3 style="color: white; margin-bottom: 20px;">Treinador Responsável</h3>
                    <div style="background: rgba(190, 242, 2, 0.05); padding: 15px; border-radius: 8px; border: 1px solid var(--primary-color); margin-bottom: 20px; text-align: center;">
                        <h4 style="color: white;"><%= details.trainerName || 'Nenhum Atribuído' %></h4>
                    </div>

                    <form action="/admin/users/<%= targetUser.id %>/assign-trainer" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label style="color: #888;">Atribuir / Trocar</label>
                        <select name="trainer_id" class="form-control" style="width: 100%; margin-bottom: 15px; background: #222; border: 1px solid #444; padding: 10px; color: white;">
                            <option value="none">-- Sem Treinador --</option>
                            <% if(allTrainers && allTrainers.length > 0) { %>
                                <% allTrainers.forEach(t => { %>
                                    <option value="<%= t.id %>" <%= targetUser.trainer_id === t.id ? 'selected' : '' %>>
                                        <%= t.name %> <%= t.is_approved ? '' : '(Pendente)' %>
                                    </option>
                                <% }) %>
                            <% } else { %>
                                <option disabled>Nenhum treinador cadastrado</option>
                            <% } %>
                        </select>
                        <button class="btn btn-primary" style="width: 100%;">Salvar Vínculo</button>
                    </form>
                </div>
            </div>

            <div class="card-box">
                <h3 style="color: white; margin-bottom: 15px;">Histórico Financeiro</h3>
                <div class="table-responsive">
                    <table style="width: 100%;">
                        <thead><tr><th>Data</th><th>Valor</th><th>Status</th><th>Método</th></tr></thead>
                        <tbody>
                            <% if (financialHistory && financialHistory.length > 0) { %>
                                <% financialHistory.forEach(pay => { %>
                                    <tr>
                                        <td><%= new Date(pay.payment_date || pay.created_at).toLocaleDateString() %></td>
                                        <td>R$ <%= pay.amount %></td>
                                        <td><%= pay.status %></td>
                                        <td>PIX</td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="4" style="text-align: center; padding: 15px;">Nenhum pagamento.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        <% } else if (targetUser.role === 'trainer') { %>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
                <div class="card-box"><h3>Alunos</h3><p style="font-size: 2rem; font-weight: bold;"><%= bi.activeStudents %></p></div>
                <div class="card-box"><h3>Status</h3><p style="font-size: 1.5rem; color: <%= details.is_approved ? '#bef202' : 'orange' %>;"><%= details.is_approved ? 'Aprovado' : 'Pendente' %></p></div>
            </div>
            <div class="card-box">
                <h3>Dados Profissionais</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div><label style="color:#888">Chave PIX</label><p><%= details.pix_key || '-' %></p></div>
                    <div style="grid-column: 1 / -1;"><label style="color:#888">Bio</label><p class="bg-dark p-2 rounded"><%= details.bio || '-' %></p></div>
                    <div style="grid-column: 1 / -1;"><label style="color:#888">Formação</label><p class="bg-dark p-2 rounded"><%= details.education || '-' %></p></div>
                </div>
            </div>
        <% } else { %>
            <div class="card-box"><p>Usuário Administrador.</p></div>
        <% } %>

    </main>
</div>
<%- include('../partials/footer.ejs') %>
