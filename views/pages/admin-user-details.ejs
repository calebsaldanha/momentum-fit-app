<%- include('../partials/header.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/users' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span class="text-muted">Detalhes</span>
        </div>

        <div class="page-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
            <div style="display: flex; align-items: center; gap: 15px;">
                <a href="/admin/users" class="btn btn-sm btn-outline"><i class="fas fa-arrow-left"></i></a>
                <div>
                    <h1 style="margin: 0; font-size: 1.8rem;"><%= targetUser.name %></h1>
                    <div style="display: flex; gap: 10px; margin-top: 5px;">
                        <span class="badge-neon" style="font-size: 0.7rem;"><%= targetUser.role.toUpperCase() %></span>
                        <span style="color: <%= targetUser.active ? '#bef202' : '#ff4d4d' %>; font-size: 0.85rem;">
                            <%= targetUser.active ? '● Ativo' : '● Suspenso' %>
                        </span>
                    </div>
                </div>
            </div>
            
            <div style="display: flex; gap: 10px;">
                <form action="/admin/users/<%= targetUser.id %>/toggle-status" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-outline"><%= targetUser.active ? 'Suspender' : 'Ativar' %></button>
                </form>
                <form action="/admin/users/<%= targetUser.id %>/delete" method="POST" onsubmit="return confirm('ATENÇÃO: Isso apagará TODOS os dados deste usuário. Continuar?');">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary" style="background: #ff4d4d; color: white; border: none;">Excluir</button>
                </form>
            </div>
        </div>

        <% if(messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <% if (targetUser.role === 'client') { %>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Total Treinos</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: white;"><%= bi.totalWorkouts || 0 %></p>
                </div>
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Plano Ativo</h3>
                    <p style="font-size: 1.2rem; font-weight: bold; color: var(--primary-color); margin-top: 10px;">
                        <%= activePlan ? activePlan.plan_name : 'Nenhum' %>
                    </p>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; margin-bottom: 30px;">
                <div class="card-box">
                    <h3 style="color: var(--primary-color); border-bottom: 1px solid #333; padding-bottom: 10px; margin-bottom: 20px;">Ficha de Anamnese</h3>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div><label style="color:#666; font-size:0.8rem">Email</label><p style="color:white"><%= targetUser.email %></p></div>
                        <div><label style="color:#666; font-size:0.8rem">Telefone</label><p style="color:white"><%= targetUser.phone || '-' %></p></div>
                        <div><label style="color:#666; font-size:0.8rem">Peso / Altura</label><p style="color:white"><%= details.weight || '-' %> kg / <%= details.height || '-' %> cm</p></div>
                        <div><label style="color:#666; font-size:0.8rem">Objetivo</label><p style="color:var(--primary-color)"><%= details.goal || '-' %></p></div>

                        <div style="grid-column: 1 / -1;"><label style="color:#666; font-size:0.8rem">Descrição Objetivo</label><p class="bg-dark p-2 rounded"><%= details.goal_description || '-' %></p></div>
                        <div style="grid-column: 1 / -1;"><label style="color:#666; font-size:0.8rem">Histórico Médico</label><p class="bg-dark p-2 rounded"><%= details.medical_history || '-' %></p></div>
                        <div style="grid-column: 1 / -1;"><label style="color:#666; font-size:0.8rem">Lesões/Limitações</label><p class="bg-dark p-2 rounded"><%= details.injuries || details.limitations || '-' %></p></div>
                        <div style="grid-column: 1 / -1;"><label style="color:#666; font-size:0.8rem">Equipamentos</label><p class="bg-dark p-2 rounded"><%= details.available_equipment || '-' %></p></div>
                    </div>
                </div>

                <div class="card-box" style="height: fit-content;">
                    <h3 style="color: white; margin-bottom: 20px;">Treinador Responsável</h3>
                    <div style="background: rgba(190, 242, 2, 0.05); padding: 15px; border-radius: 8px; border: 1px solid var(--primary-color); margin-bottom: 20px; text-align: center;">
                        <h4 style="color: white;"><%= details.trainerName || 'Nenhum Atribuído' %></h4>
                    </div>
                    <form action="/admin/users/<%= targetUser.id %>/assign-trainer" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <select name="trainer_id" class="form-control" style="width: 100%; margin-bottom: 15px; background: #222; border: 1px solid #444; padding: 10px; color: white;">
                            <option value="none">-- Sem Treinador --</option>
                            <% if(allTrainers) { allTrainers.forEach(t => { %>
                                <option value="<%= t.id %>" <%= targetUser.trainer_id === t.id ? 'selected' : '' %>><%= t.name %> <%= t.is_approved ? '' : '(Pendente)' %></option>
                            <% }) } %>
                        </select>
                        <button class="btn btn-primary" style="width: 100%;">Salvar Vínculo</button>
                    </form>
                </div>
            </div>

            <div class="card-box">
                <h3 style="color: white; margin-bottom: 15px;">Treinos Atribuídos (Histórico)</h3>
                <div class="table-responsive">
                    <table style="width: 100%;">
                        <thead><tr><th>Título</th><th>Dia</th><th>Exercícios</th><th>Criado em</th><th>Ações</th></tr></thead>
                        <tbody>
                            <% if (workouts && workouts.length > 0) { %>
                                <% workouts.forEach(w => { %>
                                    <tr>
                                        <td><%= w.title %></td>
                                        <td><span class="badge-neon"><%= w.day_of_week %></span></td>
                                        <td><%= w.exercise_count %> exercícios</td>
                                        <td><%= new Date(w.created_at).toLocaleDateString() %></td>
                                        <td><a href="/workouts/<%= w.id %>" target="_blank" class="btn btn-sm btn-outline">Ver</a></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="5" style="text-align: center; padding: 15px;">Nenhum treino encontrado.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-box" style="margin-top: 30px;">
                <h3 style="color: white; margin-bottom: 15px;">Histórico Financeiro</h3>
                <div class="table-responsive">
                    <table style="width: 100%;">
                        <thead><tr><th>Data</th><th>Valor</th><th>Status</th><th>Ref</th></tr></thead>
                        <tbody>
                            <% if (financialHistory && financialHistory.length > 0) { %>
                                <% financialHistory.forEach(pay => { %>
                                    <tr>
                                        <td><%= new Date(pay.created_at).toLocaleDateString() %></td>
                                        <td>R$ <%= pay.amount %></td>
                                        <td><%= pay.status %></td>
                                        <td>PIX</td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="4" style="text-align: center; padding: 15px;">Nenhum pagamento registrado.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        <% } else if (targetUser.role === 'trainer') { %>
            <div class="card-box">
                <% if (!details.is_approved) { %>
                    <div style="background: rgba(255, 165, 0, 0.1); border: 1px solid orange; color: orange; padding: 20px; border-radius: 8px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
                        <span><i class="fas fa-exclamation-triangle"></i> Aprovação Pendente</span>
                        <form action="/admin/users/<%= targetUser.id %>/approve-trainer" method="POST" style="margin:0;">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-primary" style="background: #bef202; color: black;">Aprovar</button>
                        </form>
                    </div>
                <% } %>
                <h3>Dados Profissionais</h3>
                <p><strong>Bio:</strong> <%= details.bio || '-' %></p>
                <p><strong>Chave PIX:</strong> <%= details.pix_key || '-' %></p>
            </div>
        <% } %>

    </main>
</div>
<%- include('../partials/footer.ejs') %>
