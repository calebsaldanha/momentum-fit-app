<%- include('../partials/header.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/users' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Detalhes</span>
        </div>

        <div class="page-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
            <div style="display: flex; align-items: center; gap: 15px;">
                <a href="/admin/users" class="btn btn-sm btn-outline"><i class="fas fa-arrow-left"></i></a>
                <div>
                    <h1 style="margin: 0; font-size: 1.8rem;"><%= targetUser.name %></h1>
                    <div style="display: flex; gap: 10px; margin-top: 5px;">
                        <span class="badge-neon" style="font-size: 0.7rem;"><%= targetUser.role.toUpperCase() %></span>
                        <% if(targetUser.active) { %>
                            <span style="color: #bef202; font-size: 0.85rem;"><i class="fas fa-circle" style="font-size: 0.6rem;"></i> Ativo</span>
                        <% } else { %>
                            <span style="color: #ff4d4d; font-size: 0.85rem;"><i class="fas fa-circle" style="font-size: 0.6rem;"></i> Suspenso</span>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div style="display: flex; gap: 10px;">
                <form action="/admin/users/<%= targetUser.id %>/toggle-status" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-outline">
                        <%= targetUser.active ? 'Suspender' : 'Ativar' %>
                    </button>
                </form>
                <form action="/admin/users/<%= targetUser.id %>/delete" method="POST" onsubmit="return confirm('Tem certeza? Isso apaga TUDO deste usuário permanentemente.');">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary" style="background: #ff4d4d; color: white; border: none;">Excluir</button>
                </form>
            </div>
        </div>

        <% if(messages.success) { %><div class="alert alert-success"><%= messages.success %></div><% } %>
        <% if(messages.error) { %><div class="alert alert-danger"><%= messages.error %></div><% } %>

        <% if (targetUser.role === 'client') { %>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Treinos Atribuídos</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: white;"><%= bi.totalWorkouts || 0 %></p>
                </div>
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Assiduidade Estimada</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);"><%= bi.attendanceRate %>%</p>
                </div>
                <div class="card-box" style="text-align: center;">
                    <h3 class="text-muted" style="font-size: 0.9rem;">Plano Atual</h3>
                    <p style="font-size: 1.2rem; font-weight: bold; color: white; margin-top: 10px;">
                        <%= activePlan ? activePlan.plan_name : 'Nenhum' %>
                    </p>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; margin-bottom: 30px;">
                <div class="card-box">
                    <h3 style="color: var(--primary-color); border-bottom: 1px solid #333; padding-bottom: 10px; margin-bottom: 20px;">Ficha de Anamnese & Dados</h3>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Email</label>
                            <p style="color: white;"><%= targetUser.email %></p>
                        </div>
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Telefone</label>
                            <p style="color: white;"><%= targetUser.phone || '-' %></p>
                        </div>
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Data Nasc.</label>
                            <p style="color: white;"><%= targetUser.birth_date ? new Date(targetUser.birth_date).toLocaleDateString() : '-' %></p>
                        </div>
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Objetivo</label>
                            <p style="color: white;"><%= details.goal || '-' %></p>
                        </div>
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Peso</label>
                            <p style="color: white;"><%= details.weight ? details.weight + ' kg' : '-' %></p>
                        </div>
                        <div>
                            <label style="color: #666; font-size: 0.8rem;">Altura</label>
                            <p style="color: white;"><%= details.height ? details.height + ' cm' : '-' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color: #666; font-size: 0.8rem;">Histórico Médico</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.medical_history || 'Nada informado.' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color: #666; font-size: 0.8rem;">Medicamentos</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.medications || 'Nada informado.' %></p>
                        </div>
                        <div style="grid-column: 1 / -1;">
                            <label style="color: #666; font-size: 0.8rem;">Lesões</label>
                            <p style="background: #222; padding: 10px; border-radius: 5px; color: #ddd;"><%= details.injuries || 'Nenhuma.' %></p>
                        </div>
                    </div>
                </div>

                <div class="card-box" style="height: fit-content;">
                    <h3 style="color: white; margin-bottom: 20px;">Treinador Responsável</h3>
                    <div style="background: rgba(190, 242, 2, 0.05); padding: 15px; border-radius: 8px; border: 1px solid var(--primary-color); margin-bottom: 20px; text-align: center;">
                        <h4 style="color: white;"><%= details.trainerName || 'Nenhum' %></h4>
                    </div>

                    <form action="/admin/users/<%= targetUser.id %>/assign-trainer" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label style="color: #888;">Alterar Treinador</label>
                        <select name="trainer_id" class="form-control" style="width: 100%; margin-bottom: 10px; background: #222; border: 1px solid #444; padding: 10px; color: white;">
                            <option value="none">-- Remover Vínculo --</option>
                            <% if(allTrainers) { %>
                                <% allTrainers.forEach(t => { %>
                                    <option value="<%= t.id %>" <%= targetUser.trainer_id === t.id ? 'selected' : '' %>><%= t.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                        <button class="btn btn-primary" style="width: 100%;">Salvar</button>
                    </form>
                </div>
            </div>

            <div class="card-box">
                <h3 style="color: white; margin-bottom: 15px;">Treinos Ativos</h3>
                <div class="table-responsive">
                    <table style="width: 100%;">
                        <thead>
                            <tr><th>Título</th><th>Dia</th><th>Ações</th></tr>
                        </thead>
                        <tbody>
                            <% if (workouts && workouts.length > 0) { %>
                                <% workouts.forEach(w => { %>
                                    <tr>
                                        <td><%= w.title %></td>
                                        <td><%= w.day_of_week %></td>
                                        <td><a href="/workouts/<%= w.id %>" class="text-neon">Ver</a></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="3" style="text-align: center; padding: 15px;">Sem treinos.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-box" style="margin-top: 30px;">
                <h3 style="color: white; margin-bottom: 15px;">Histórico Financeiro</h3>
                <div class="table-responsive">
                    <table style="width: 100%;">
                        <thead>
                            <tr><th>Data</th><th>Valor</th><th>Status</th><th>Método</th></tr>
                        </thead>
                        <tbody>
                            <% if (financialHistory && financialHistory.length > 0) { %>
                                <% financialHistory.forEach(pay => { %>
                                    <tr>
                                        <td><%= new Date(pay.payment_date).toLocaleDateString() %></td>
                                        <td>R$ <%= pay.amount %></td>
                                        <td><%= pay.status %></td>
                                        <td>PIX</td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="4" style="text-align: center; padding: 15px;">Nenhum pagamento registrado.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        <% } else if (targetUser.role === 'trainer') { %>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
                <div class="card-box">
                    <h3>Alunos Ativos</h3>
                    <p style="font-size: 2rem; font-weight: bold;"><%= bi.activeStudents %></p>
                </div>
                <div class="card-box">
                    <h3>Receita Gerada</h3>
                    <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);">R$ <%= bi.totalRevenue %></p>
                </div>
                <div class="card-box">
                    <h3>Valor Mensal</h3>
                    <p style="font-size: 2rem;">R$ <%= details.price_monthly || 0 %></p>
                </div>
            </div>

            <div class="card-box">
                <h3 style="color: white; border-bottom: 1px solid #333; padding-bottom: 10px; margin-bottom: 20px;">Dados Profissionais</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div><label style="color:#888">Nome</label><p><%= targetUser.name %></p></div>
                    <div><label style="color:#888">Telefone</label><p><%= targetUser.phone || '-' %></p></div>
                    <div><label style="color:#888">Chave PIX</label><p><%= details.pix_key || '-' %></p></div>
                    <div><label style="color:#888">Tipo Chave</label><p><%= details.pix_key_type || '-' %></p></div>
                    <div style="grid-column: 1 / -1;"><label style="color:#888">Formação</label><p class="bg-dark p-2 rounded"><%= details.education || '-' %></p></div>
                    <div style="grid-column: 1 / -1;"><label style="color:#888">Experiência</label><p class="bg-dark p-2 rounded"><%= details.experience || '-' %></p></div>
                    <div style="grid-column: 1 / -1;"><label style="color:#888">Bio</label><p class="bg-dark p-2 rounded"><%= details.bio || '-' %></p></div>
                </div>
            </div>

        <% } else { %>
            <div class="card-box"><p>Usuário Administrador. Acesso total.</p></div>
        <% } %>

    </main>
</div>
<%- include('../partials/footer.ejs') %>
