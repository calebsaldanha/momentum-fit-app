<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/public/head', { title: 'Sobre Nós' }) %>
    <%- include('../layouts/public/header') %>
</head>
<body>
    <section class="hero-page bg-home" style="min-height: 60vh;">
        <div class="hero-overlay"></div>
        <div class="container" style="z-index: 2; text-align: center;">
            <h1 class="hero-title"><%= getText('about', 'intro', 'title', 'Sobre Nós') %></h1>
        </div>
    </section>

    <section class="section-padding" style="background: #080808;">
        <div class="container">
            <div class="grid-2">
                <div>
                    <h2 class="hero-title" style="font-size: 2.5rem;">Nossa Missão</h2>
                    <p class="text-muted" style="font-size: 1.1rem; line-height: 1.8; margin-bottom: 20px;">
                        <%= getText('about', 'mission', 'text', 'Texto de missão padrão.') %>
                    </p>
                </div>
                <div class="feature-card" style="display: flex; align-items: center; justify-content: center; min-height: 300px;">
                    <i class="fas fa-dna" style="font-size: 8rem; color: var(--primary); opacity: 0.2;"></i>
                </div>
            </div>
        </div>
    </section>

    <%- include('../layouts/public/footer') %>
</body>
</html>
