<%- include('../partials/header.ejs', { title: 'Dashboard' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    
    <main class="dashboard-main">
        <div class="page-header" style="text-align: left; padding: 0; background: transparent; border: none; margin-bottom: 30px;">
            <h1 style="font-size: 2rem;">Olá, <span class="text-neon"><%= user.name.split(' ')[0] %></span>!</h1>
            <p style="color: #888;">Aqui está o resumo do seu dia.</p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div class="card-box">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h2 style="font-size: 2.5rem; color: white; margin: 0;"><%= stats.completed || 0 %></h2>
                        <span style="color: #888; font-size: 0.9rem;">Treinos Realizados</span>
                    </div>
                    <i class="fas fa-check-circle text-neon" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
            
            <div class="card-box">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h2 style="font-size: 2.5rem; color: var(--primary-color); margin: 0;"><%= stats.streak || 0 %></h2>
                        <span style="color: #888; font-size: 0.9rem;">Dias de Sequência</span>
                    </div>
                    <i class="fas fa-fire text-neon" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>

        <h3 style="color: white; margin-bottom: 15px;">Próximos Treinos</h3>
        <% if (workouts && workouts.length > 0) { %>
            <div style="display: grid; gap: 15px;">
                <% workouts.forEach(w => { %>
                    <div class="card-box" style="display: flex; justify-content: space-between; align-items: center; padding: 20px;">
                        <div>
                            <h4 style="color: white; margin: 0 0 5px 0;"><%= w.title %></h4>
                            <p style="color: #666; margin: 0; font-size: 0.85rem;"><%= w.description || 'Sem descrição' %></p>
                        </div>
                        <a href="/client/workouts/<%= w.id %>" class="btn btn-sm btn-primary">Iniciar</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="card-box" style="text-align: center; color: #666;">
                <p>Nenhum treino agendado. Fale com seu personal.</p>
            </div>
        <% } %>
    </main>
</div>

<%- include('../partials/footer.ejs') %>
