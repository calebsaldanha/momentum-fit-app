<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/client-sidebar.ejs', { currentPage: 'dashboard' }) %>

    <main class="dashboard-main">
        <section class="section">
            <div class="section-header">
                <h1>Bem-vindo, <%= user.name %>!</h1>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-info">
                        <h3><%= profile.weight || '--' %> <small>kg</small></h3>
                        <p>Peso Atual</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h3><%= workouts.length %></h3>
                        <p>Planos Ativos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h3><%= profile.fitness_level || 'Definir' %></h3>
                        <p>Nível</p>
                    </div>
                </div>
            </div>

            <h2 style="margin-top: 3rem;">Treinos Recentes</h2>
            <div class="workouts-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 1rem;">
                <% if (workouts.length > 0) { %>
                    <% workouts.forEach(workout => { %>
                        <div class="info-card">
                            <h3><%= workout.title %></h3>
                            <p>Instrutor: <%= workout.trainer_name %></p>
                            <a href="/workouts/<%= workout.id %>" class="btn btn-primary btn-sm">Ver Detalhes</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Sem treinos atribuídos. <a href="/chat">Fale com seu treinador.</a></p>
                <% } %>
            </div>
        </section>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
