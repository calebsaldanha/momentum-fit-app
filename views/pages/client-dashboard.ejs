<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'dashboard' }) %>

    <main class="dashboard-main">
        <% if (typeof missingProfile !== 'undefined' && missingProfile) { %>
            <div class="alert alert-error" style="background: rgba(245, 158, 11, 0.2); border-color: rgba(245, 158, 11, 0.4); color: #fbbf24;">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Complete sua <a href="/client/initial-form" style="color: inherit; text-decoration: underline;">Ficha de Anamnese</a> para receber seu treino.</span>
            </div>
        <% } %>

        <div style="margin-bottom: 2rem;">
            <h1>Olá, <span class="text-neon"><%= user.name.split(' ')[0] %></span>!</h1>
            <p class="text-muted">Seu progresso hoje.</p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
            <div class="card-modern" style="text-align: center;">
                <h3 style="font-size: 2rem; margin: 0;"><%= (clientProfile && clientProfile.weight) ? clientProfile.weight : '--' %>kg</h3>
                <span class="text-muted">Peso Atual</span>
            </div>
            <div class="card-modern" style="text-align: center;">
                <h3 style="font-size: 2rem; margin: 0;"><%= workouts ? workouts.length : 0 %></h3>
                <span class="text-muted">Planos Ativos</span>
            </div>
        </div>

        <h3 class="text-neon" style="margin-bottom: 1rem;"><i class="fas fa-dumbbell"></i> Seus Treinos</h3>
        <% if (workouts && workouts.length > 0) { %>
            <div style="display: grid; gap: 1rem;">
                <% workouts.forEach(workout => { %>
                    <div class="card-modern" style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <h4 style="margin: 0;"><%= workout.title %></h4>
                            <small class="text-muted">Instrutor: <%= workout.trainer_name %></small>
                        </div>
                        <a href="/client/workouts/<%= workout.id %>" class="btn btn-primary btn-sm">Abrir</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="card-modern text-center text-muted" style="padding: 3rem;">
                <p>Nenhum treino disponível.</p>
            </div>
        <% } %>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
