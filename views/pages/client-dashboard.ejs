<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/client/dashboard' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span class="text-muted">Dashboard</span>
        </div>
        
        <div class="page-header">
            <h1>Ol√°, <span class="text-neon"><%= user.name.split(' ')[0] %></span></h1>
            <p>Resumo do seu progresso.</p>
        </div>

        <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
            <div class="card-box">
                <h3 class="text-muted">Treinos Feitos</h3>
                <p style="font-size: 2rem; font-weight: bold;"><%= stats ? stats.completedWorkouts : 0 %></p>
            </div>
            <div class="card-box">
                <h3 class="text-muted">Check-ins</h3>
                <p style="font-size: 2rem; font-weight: bold;"><%= stats ? stats.checkinsCount : 0 %></p>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
