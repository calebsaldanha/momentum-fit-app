<%- include('../partials/header') %>

<div class="page-content-wrapper">
    <div class="dashboard-header">
        <div>
            <h2 class="text-neon">Visão Geral</h2>
            <p class="text-muted">Bem-vindo de volta, <%= user.name.split(' ')[0] %>!</p>
        </div>
        <a href="/client/workouts" class="btn btn-primary">Ir para Treinos</a>
    </div>

    <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1.5rem; margin-top: 2rem;">
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: var(--primary); font-size: 1.5rem; margin-bottom: 10px;"><i class="fas fa-fire"></i></div>
            <h3><%= typeof workoutsCompleted !== 'undefined' ? workoutsCompleted : 0 %></h3>
            <p>Treinos Completos</p>
        </div>
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: #3b82f6; font-size: 1.5rem; margin-bottom: 10px;"><i class="fas fa-calendar-check"></i></div>
            <h3><%= typeof streak !== 'undefined' ? streak : 0 %></h3>
            <p>Dias de Sequência</p>
        </div>
        <div class="stat-card card-modern">
            <div class="stat-icon" style="color: #10b981; font-size: 1.5rem; margin-bottom: 10px;"><i class="fas fa-weight"></i></div>
            <h3><%= (user.profile && user.profile.weight) ? user.profile.weight + 'kg' : '--' %></h3>
            <p>Peso Atual</p>
        </div>
    </div>

    <div style="margin-top: 3rem;">
        <h3 style="margin-bottom: 1.5rem;">Acesso Rápido</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
            <a href="/client/workouts" class="card-modern action-card" style="text-decoration: none; color: white; display: flex; align-items: center; gap: 1rem; transition: transform 0.2s;">
                <div style="background: rgba(212, 255, 0, 0.1); padding: 1rem; border-radius: 12px; color: var(--primary);">
                    <i class="fas fa-dumbbell fa-lg"></i>
                </div>
                <div>
                    <h4 style="margin: 0 0 5px 0;">Meus Treinos</h4>
                    <span class="text-muted" style="font-size: 0.9rem;">Acesse sua rotina de hoje</span>
                </div>
            </a>
            
            <a href="/chat" class="card-modern action-card" style="text-decoration: none; color: white; display: flex; align-items: center; gap: 1rem; transition: transform 0.2s;">
                <div style="background: rgba(59, 130, 246, 0.1); padding: 1rem; border-radius: 12px; color: #3b82f6;">
                    <i class="fas fa-comments fa-lg"></i>
                </div>
                <div>
                    <h4 style="margin: 0 0 5px 0;">Falar com Coach</h4>
                    <span class="text-muted" style="font-size: 0.9rem;">Tire dúvidas e envie feedbacks</span>
                </div>
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
