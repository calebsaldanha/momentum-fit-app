<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { active: 'dashboard' }) %>

    <main class="dashboard-main">
        <div class="content-wrapper">
            <div style="margin-bottom: 30px; display: flex; justify-content: space-between; align-items: flex-end; flex-wrap: wrap; gap: 20px;">
                <div>
                    <h1 style="font-size: 2rem; color: white;">Olá, <span class="text-neon"><%= user.name.split(' ')[0] %></span>!</h1>
                    <p class="text-muted">Vamos manter o foco hoje?</p>
                </div>
                <a href="/client/workouts" class="btn btn-primary"><i class="fas fa-play" style="margin-right: 8px;"></i> Ir para Treinos</a>
            </div>

            <div class="content-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); margin-bottom: 30px;">
                <div class="card-box">
                    <span class="text-muted">Treinos Completos</span>
                    <h3 class="text-neon"><%= stats ? stats.completed_workouts : 0 %></h3>
                </div>
                <div class="card-box">
                    <span class="text-muted">Sequência</span>
                    <h3><%= stats ? stats.streak : 0 %> dias</h3>
                </div>
                <div class="card-box">
                    <span class="text-muted">Peso Atual</span>
                    <h3><%= clientData.current_weight || '-' %> kg</h3>
                </div>
            </div>

            <div class="card-box">
                <h3>Treinos Ativos</h3>
                <br>
                <% if (workouts && workouts.length > 0) { %>
                    <% workouts.forEach(workout => { %>
                    <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 8px; margin-bottom: 10px; display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <strong style="color: white;"><%= workout.title %></strong>
                            <div style="font-size: 0.8rem; color: #888;"><%= workout.day_of_week || 'Flexível' %></div>
                        </div>
                        <a href="/client/workout/<%= workout.id %>" class="btn btn-sm btn-outline">Abrir</a>
                    </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">Nenhum treino atribuído pelo seu personal ainda.</p>
                <% } %>
            </div>
        </div>
        
        <%- include('../partials/footer.ejs') %>
    </main>
</div>
