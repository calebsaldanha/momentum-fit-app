<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'dashboard' }) %>

    <main class="dashboard-main">
        <% if (typeof missingProfile !== 'undefined' && missingProfile) { %>
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <div style="flex: 1">
                    <strong>Atenção:</strong> Você ainda não preencheu sua Ficha de Anamnese.
                </div>
                <a href="/client/initial-form" class="btn btn-sm btn-primary">Preencher Agora</a>
            </div>
        <% } %>

        <div class="page-header">
            <h1>Olá, <span class="text-neon"><%= user.name.split(' ')[0] %></span>!</h1>
            <p class="text-muted">Aqui está o resumo do seu progresso.</p>
        </div>

        <div class="grid-stats">
            <div class="card-modern" style="margin-bottom: 0; text-align: center;">
                <div class="text-muted" style="font-size: 0.9rem; margin-bottom: 0.5rem;">Peso Atual</div>
                <h3 style="font-size: 2rem; margin: 0;"><%= (clientProfile && clientProfile.weight) ? clientProfile.weight : '--' %> <span style="font-size: 1rem; color: #666;">kg</span></h3>
            </div>
            <div class="card-modern" style="margin-bottom: 0; text-align: center;">
                <div class="text-muted" style="font-size: 0.9rem; margin-bottom: 0.5rem;">Planos Ativos</div>
                <h3 style="font-size: 2rem; margin: 0;"><%= workouts ? workouts.length : 0 %></h3>
            </div>
            <div class="card-modern" style="margin-bottom: 0; text-align: center;">
                <div class="text-muted" style="font-size: 0.9rem; margin-bottom: 0.5rem;">Nível</div>
                <h3 style="font-size: 2rem; margin: 0; text-transform: capitalize;"><%= (clientProfile && clientProfile.fitness_level) ? clientProfile.fitness_level : 'Definir' %></h3>
            </div>
        </div>

        <h3 style="margin-top: 3rem; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-dumbbell text-neon"></i> Seus Treinos
        </h3>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem;">
            <% if (workouts && workouts.length > 0) { %>
                <% workouts.forEach(workout => { %>
                    <div class="card-modern" style="display: flex; flex-direction: column; height: 100%; margin: 0;">
                        <div style="flex: 1;">
                            <h3 style="font-size: 1.25rem; margin-bottom: 0.5rem;"><%= workout.title %></h3>
                            <p class="text-muted" style="font-size: 0.9rem;">
                                <i class="fas fa-user-tie"></i> Instrutor: <%= workout.trainer_name %>
                            </p>
                        </div>
                        <div style="margin-top: 1.5rem;">
                            <a href="/client/workouts/<%= workout.id %>" class="btn btn-primary btn-full">Ver Treino</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="card-modern" style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
                    <i class="fas fa-clipboard-list" style="font-size: 3rem; color: #333; margin-bottom: 1rem;"></i>
                    <p class="text-muted">Nenhum treino atribuído no momento.</p>
                    <% if (typeof missingProfile !== 'undefined' && missingProfile) { %>
                        <p style="margin-top: 10px;">Complete sua anamnese para receber um treino.</p>
                        <a href="/client/initial-form" class="btn btn-primary" style="margin-top: 1rem;">Ir para Anamnese</a>
                    <% } else { %>
                        <p style="margin-top: 10px;">Solicite um plano ao seu treinador.</p>
                        <a href="/chat" class="btn btn-ghost" style="margin-top: 1rem;">Falar no Chat</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
