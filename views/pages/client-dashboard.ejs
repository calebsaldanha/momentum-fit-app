<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dashboard | Momentum Fit</title>
    <link rel="icon" href="/images/momentum-fit-icon.png" type="image/png">
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

<div class="dashboard-layout">
    <%- include('../partials/sidebar.ejs', { path: '/client/dashboard' }) %>

    <main class="app-main">
        <%- include('../partials/app-header.ejs', { title: 'Visão Geral' }) %>

        <div class="dashboard-content">
            <div style="margin-bottom: 30px;">
                <h1 style="color: white; font-size: 1.8rem;">Olá, <span style="color: var(--primary);"><%= user.name.split(' ')[0] %></span>!</h1>
                <p style="color: #888;">Resumo da sua jornada fitness.</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-fire"></i></div>
                    <div class="stat-info">
                        <h3>12</h3>
                        <p>Treinos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-weight"></i></div>
                    <div class="stat-info">
                        <h3><%= user.profile && user.profile.weight ? user.profile.weight + 'kg' : '--' %></h3>
                        <p>Peso Atual</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-trophy"></i></div>
                    <div class="stat-info">
                        <h3>Start</h3>
                        <p>Plano</p>
                    </div>
                </div>
            </div>

            <div class="grid-2-col" style="gap: 20px;">
                <div class="feature-card" style="min-height: 200px;">
                    <h3>Próximo Treino</h3>
                    <p style="color: #888;">Seu plano personalizado está pronto.</p>
                    <a href="/client/workouts" class="btn btn-primary btn-sm" style="margin-top: 15px; width: 100%; text-align: center; color: black;">Ver Treinos</a>
                </div>
                
                <div class="feature-card" style="min-height: 200px;">
                    <h3>Histórico</h3>
                    <div style="margin-top: 10px; color: #888; font-size: 0.9rem;">
                        Nenhuma atividade recente registrada.
                    </div>
                </div>
            </div>

        </div>
    </main>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.querySelector('.dashboard-overlay');
        
        sidebar.classList.toggle('active');
        if (overlay) overlay.classList.toggle('active');
    }
    
    // Fechar ao clicar no overlay
    document.addEventListener('click', function(e) {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.querySelector('.dashboard-overlay');
        const toggleBtn = document.querySelector('.mobile-toggle');
        
        // Se clicou no overlay
        if (e.target.classList.contains('dashboard-overlay')) {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        }
    });
</script>

</body>
</html>
