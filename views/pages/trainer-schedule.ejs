<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/schedule' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Agenda</span>
        </div>
        <div class="page-header" style="display: flex; justify-content: space-between;">
            <h1>Minha <span class="text-neon">Agenda</span></h1>
            <button class="btn btn-primary" id="newEventBtn"><i class="fas fa-plus"></i> Novo Evento</button>
        </div>

        <div class="alert alert-info" style="background: rgba(0,255,255,0.1); border: 1px solid cyan; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
            <i class="fas fa-info-circle"></i> A agenda exibe as aulas dos seus alunos vinculados.
        </div>

        <div class="card-box">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px;">
                <% ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'].forEach(day => { %>
                    <div style="background: #222; padding: 15px; border-radius: 8px; min-height: 200px;">
                        <h4 style="color: var(--primary-color); border-bottom: 1px solid #444; padding-bottom: 10px; margin-bottom: 10px;"><%= day %></h4>
                        <p class="text-muted" style="font-size: 0.8rem; text-align: center;">Sem eventos</p>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
</div>

<script>
document.getElementById('newEventBtn').addEventListener('click', function() {
    alert('Funcionalidade de criar evento na agenda será implementada na próxima versão.');
});
</script>

<%- include('../partials/footer.ejs') %>
