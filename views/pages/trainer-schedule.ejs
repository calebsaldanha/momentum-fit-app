<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/schedule' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Agenda</span>
        </div>
        <div class="page-header" style="display: flex; justify-content: space-between;">
            <h1>Minha <span class="text-neon">Agenda</span></h1>
            <button class="btn btn-primary"><i class="fas fa-plus"></i> Novo Evento</button>
        </div>
        <div class="card-box">
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <% ['Seg', 'Ter', 'Qua', 'Qui', 'Sex'].forEach(day => { %>
                    <div style="flex: 1; min-width: 150px; background: #222; padding: 15px; border-radius: 8px;">
                        <h4 style="color: var(--primary-color); margin-bottom: 10px; border-bottom: 1px solid #444; padding-bottom: 5px;"><%= day %></h4>
                        <div style="background: #333; padding: 8px; border-radius: 4px; margin-bottom: 5px; font-size: 0.85rem;">08:00 - Jo√£o Silva</div>
                        <div style="background: #333; padding: 8px; border-radius: 4px; margin-bottom: 5px; font-size: 0.85rem;">10:30 - Maria Santos</div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
