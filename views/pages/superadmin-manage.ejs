<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { user: user, currentPage: 'superadmin-manage' }) %>

        <main class="dashboard-main">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>Gerenciar Usuários</h1>
                    <p class="text-muted">Controle total sobre treinadores e alunos.</p>
                </div>
                <a href="/superadmin/create-trainer" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Treinador
                </a>
            </header>

            <div class="dashboard-card">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="m-0"><i class="fas fa-chalkboard-teacher text-primary"></i> Treinadores</h3>
                    <span class="badge badge-secondary"><%= trainers.length %> total</span>
                </div>
                
                <% if (trainers.length > 0) { %>
                    <div class="table-responsive">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>Profissional</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% trainers.forEach(t => { %>
                                    <tr>
                                        <td>
                                            <div class="user-info-flex">
                                                <img src="<%= t.profile_image || '/images/default-profile.png' %>" class="user-avatar-sm">
                                                <div>
                                                    <div class="fw-bold"><%= t.name %></div>
                                                    <small class="text-muted">Desde <%= new Date(t.created_at).toLocaleDateString() %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-muted"><%= t.email %></td>
                                        <td><span class="badge badge-<%= t.status %>"><%= t.status === 'active' ? 'Ativo' : 'Inativo' %></span></td>
                                        <td>
                                            <a href="/superadmin/trainers/<%= t.id %>" class="btn btn-sm btn-secondary"><i class="fas fa-cog"></i> Gerenciar</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted text-center py-3">Nenhum treinador cadastrado.</p>
                <% } %>
            </div>

            <div class="dashboard-card">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="m-0"><i class="fas fa-users text-primary"></i> Alunos</h3>
                    <span class="badge badge-secondary"><%= clients.length %> total</span>
                </div>

                <% if (clients.length > 0) { %>
                    <div class="table-responsive">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>Aluno</th>
                                    <th>Email</th>
                                    <th>Treinador</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% clients.forEach(c => { %>
                                    <tr>
                                        <td>
                                            <div class="user-info-flex">
                                                <img src="<%= c.profile_image || '/images/default-profile.png' %>" class="user-avatar-sm">
                                                <div class="fw-bold"><%= c.name %></div>
                                            </div>
                                        </td>
                                        <td class="text-muted"><%= c.email %></td>
                                        <td>
                                            <% const tr = trainers.find(t => t.id === c.trainer_id); %>
                                            <% if (tr) { %>
                                                <span class="text-primary"><i class="fas fa-dumbbell"></i> <%= tr.name %></span>
                                            <% } else { %>
                                                <span class="text-muted">--</span>
                                            <% } %>
                                        </td>
                                        <td><span class="badge badge-<%= c.status %>"><%= c.status === 'active' ? 'Ativo' : 'Inativo' %></span></td>
                                        <td>
                                            <a href="/superadmin/users/<%= c.id %>" class="btn btn-sm btn-secondary"><i class="fas fa-cog"></i> Detalhes</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted text-center py-3">Nenhum aluno cadastrado.</p>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>
