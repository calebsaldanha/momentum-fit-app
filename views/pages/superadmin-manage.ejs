<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <%- include('../partials/superadmin-sidebar.ejs', { currentPage: 'super-manage' }) %>
    <main class="dashboard-main">
        
        <div class="section">
            <div class="section-header"><h1>Gerenciar Treinadores</h1></div>
            <div class="table-container">
                <table>
                    <thead><tr><th>Nome</th><th>Email</th><th>Status</th><th style="text-align: right;">Ações</th></tr></thead>
                    <tbody>
                        <% trainers.forEach(user => { %>
                        <tr>
                            <td><strong><%= user.name %></strong></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.status === 'pending_approval') { %> <span style="color:#f59e0b; font-weight:bold;">[Pendente]</span>
                                <% } else if (user.status === 'active') { %> <span style="color:var(--c-success);">[Ativo]</span>
                                <% } else { %> <span style="color:var(--c-error);">[Inativo]</span> <% } %>
                            </td>
                            <td style="text-align: right; display: flex; justify-content: flex-end; gap: 10px;">
                                <a href="/superadmin/trainers/<%= user.id %>" class="btn btn-secondary btn-sm" style="background: var(--c-accent-primary); color: black; border: none;">Detalhes</a>
                                
                                <form action="/superadmin/trainers/<%= user.id %>/delete" method="POST" onsubmit="return confirm('Excluir este personal?');" style="margin:0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-secondary btn-sm" style="color: var(--c-error); border-color: var(--c-error);">Excluir</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section">
            <div class="section-header"><h1>Gerenciar Clientes</h1></div>
            <div class="table-container">
                <table>
                    <thead><tr><th>Nome</th><th>Email</th><th>Status</th><th style="text-align: right;">Ações</th></tr></thead>
                    <tbody>
                        <% clients.forEach(user => { %>
                        <tr>
                            <td><strong><%= user.name %></strong></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.status === 'pending_approval') { %> <span style="color:#f59e0b; font-weight:bold;">[Pendente]</span>
                                <% } else if (user.status === 'active') { %> <span style="color:var(--c-success);">[Ativo]</span>
                                <% } else { %> <span style="color:var(--c-error);">[Inativo]</span> <% } %>
                            </td>
                            <td style="text-align: right; display: flex; justify-content: flex-end; gap: 10px;">
                                <a href="/admin/clients/<%= user.id %>" class="btn btn-secondary btn-sm" style="background: var(--c-accent-primary); color: black; border: none;">Detalhes</a>
                                
                                <form action="/admin/clients/<%= user.id %>/delete" method="POST" onsubmit="return confirm('Excluir este cliente?');" style="margin:0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-secondary btn-sm" style="color: var(--c-error); border-color: var(--c-error);">Excluir</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
