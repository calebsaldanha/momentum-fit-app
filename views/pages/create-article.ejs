<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/admin/content' }) %>
    <main class="dashboard-main">
        <div class="page-header">
            <a href="/admin/content" class="btn btn-outline btn-sm" style="float:right"><i class="fas fa-arrow-left"></i> Voltar</a>
            <h1>Novo <span class="text-neon">Artigo</span></h1>
            <p>Compartilhe conhecimento com a comunidade.</p>
        </div>

        <div class="card-box" style="max-width: 800px;">
            <form action="/admin/content/create" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div style="margin-bottom: 20px;">
                    <label style="color:white;">Título</label>
                    <input type="text" name="title" required class="form-control" style="width:100%; padding:10px; background:#222; border:1px solid #444; color:white; margin-top:5px;">
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                    <div>
                        <label style="color:white;">Categoria</label>
                        <select name="category" class="form-control" style="width:100%; padding:10px; background:#222; border:1px solid #444; color:white; margin-top:5px;">
                            <option value="Dicas de Treino">Dicas de Treino</option>
                            <option value="Nutrição">Nutrição</option>
                            <option value="Saúde">Saúde</option>
                            <option value="Motivação">Motivação</option>
                        </select>
                    </div>
                    <div>
                        <label style="color:white;">URL da Imagem (Capa)</label>
                        <input type="text" name="image_url" placeholder="https://..." style="width:100%; padding:10px; background:#222; border:1px solid #444; color:white; margin-top:5px;">
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="color:white;">Conteúdo</label>
                    <textarea name="content" rows="10" required style="width:100%; padding:10px; background:#222; border:1px solid #444; color:white; margin-top:5px;"></textarea>
                </div>

                <div style="text-align: right;">
                    <button type="submit" class="btn btn-primary btn-lg">Publicar Artigo</button>
                </div>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
