<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <nav class="sidebar-nav">
            <% if (user.role === 'superadmin') { %>
                <a href="/superadmin/dashboard" class="nav-item"><span></span> Painel Super Admin</a>
                <div style="height: 1px; background: #e2e8f0; margin: 0.5rem 1rem;"></div>
            <% } %>
            <a href="/admin/dashboard" class="nav-item"><span></span> Dashboard</a>
            <a href="/admin/clients" class="nav-item"><span></span> Clientes</a>
            <a href="/workouts/create" class="nav-item active"><span></span> Criar Treino</a>
            <% if (user.role === 'superadmin') { %>
                <a href="/articles/create" class="nav-item"><span></span> Criar Artigo</a>
            <% } %>
            <a href="/chat" class="nav-item"><span></span> Chat</a>
        </nav>
        <div class="sidebar-footer">
            <form action="/auth/logout" method="POST" style="margin: 0;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn-logout-sidebar">Sair</button>
            </form>
        </div>
    </aside>
    <main class="dashboard-main">
        <div class="section">
            <div class="section-header"><h1>Criar Novo Treino</h1><p>Desenvolva um plano personalizado.</p></div>
            <form id="createWorkoutForm" class="dashboard-form" style="max-width: 800px;">
                <div class="form-group">
                    <label for="client_id">Cliente *</label>
                    <select id="client_id" name="client_id" required>
                        <option value="">Selecione um cliente</option>
                        <% clients.forEach(client => { %>
                            <option value="<%= client.id %>" <%= (typeof selectedClientId !== 'undefined' && selectedClientId == client.id) ? 'selected' : '' %>>
                                <%= client.name %> (<%= client.email %>)
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group"><label for="title">Título do Treino *</label><input type="text" id="title" name="title" required placeholder="Ex: Treino A - Hipertrofia"></div>
                <div class="form-group"><label for="description">Descrição / Instruções</label><textarea id="description" name="description" rows="3" placeholder="Instruções gerais para este treino..."></textarea></div>
                
                <h3 style="margin: 2rem 0 1rem;">Exercícios</h3>
                <div id="exercisesContainer"></div>
                
                <button type="button" class="btn btn-outline" id="addExerciseBtn" style="margin-top: 1rem; width: 100%; border-style: dashed;">+ Adicionar Exercício</button>
                
                <div class="form-actions" style="margin-top: 2rem; display: flex; justify-content: flex-end; gap: 1rem;">
                    <a href="/admin/dashboard" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar Treino</button>
                </div>
            </form>
        </div>
    </main>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    function addExercise() {
        const container = document.getElementById('exercisesContainer');
        const count = container.children.length + 1;
        const exerciseHTML = \`
            <div class="exercise-item" style="border: 1px solid var(--c-border); background: var(--c-bg-card); border-radius: var(--radius); padding: 1.5rem; margin-top: 1.5rem; position: relative;">
                <h4 style="margin-bottom: 1rem; color: var(--c-accent-primary);">Exercício \${count}</h4>
                <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group"><label>Nome do Exercício *</label><input type="text" class="exercise-name" required placeholder="Ex: Agachamento Livre"></div>
                    <div class="form-group"><label>Séries x Reps *</label><input type="text" class="exercise-sets" required placeholder="Ex: 4x12"></div>
                </div>
                <div class="form-group"><label>Observações / Técnica</label><textarea class="exercise-description" rows="2" placeholder="Ex: Cadência 2020, foco na descida..."></textarea></div>
                <button type="button" class="btn btn-secondary btn-sm remove-exercise" style="border-color: var(--c-error); color: var(--c-error);">Remover</button>
            </div>\`;
        container.insertAdjacentHTML('beforeend', exerciseHTML);
    }
    
    document.getElementById('addExerciseBtn').addEventListener('click', addExercise);
    
    document.getElementById('exercisesContainer').addEventListener('click', function(e) { 
        if (e.target && e.target.classList.contains('remove-exercise')) { 
            e.target.closest('.exercise-item').remove(); 
        } 
    });
    
    // Adiciona um exercício por padrão ao carregar
    if(document.getElementById('exercisesContainer').children.length === 0) {
        addExercise();
    }
    
    document.getElementById('createWorkoutForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const csrfToken = '<%= csrfToken %>';
        const exercises = [];
        document.querySelectorAll('.exercise-item').forEach(item => {
            const name = item.querySelector('.exercise-name').value;
            const sets = item.querySelector('.exercise-sets').value;
            if (name && sets) { 
                exercises.push({ 
                    name, 
                    sets, 
                    description: item.querySelector('.exercise-description').value 
                }); 
            }
        });
        
        if (exercises.length === 0) {
            alert('Adicione pelo menos um exercício.');
            return;
        }

        const formData = { 
            client_id: document.getElementById('client_id').value, 
            title: document.getElementById('title').value, 
            description: document.getElementById('description').value, 
            exercises 
        };
        
        try {
            const response = await fetch('/workouts/create', { 
                method: 'POST', 
                headers: { 'Content-Type': 'application/json', 'CSRF-Token': csrfToken }, 
                body: JSON.stringify(formData) 
            });
            const result = await response.json();
            if (response.ok && result.success) { 
                alert('Treino criado com sucesso!'); 
                window.location.href = '/admin/dashboard'; 
            } else { 
                throw new Error(result.message); 
            }
        } catch (error) { 
            alert('Erro: ' + error.message); 
        }
    });
});
</script>
<%- include('../partials/footer.ejs') %>
