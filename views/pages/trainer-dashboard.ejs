<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/dashboard' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span>Painel</span>
        </div>

        <div class="page-header">
            <h1>Painel do <span class="text-neon">Treinador</span></h1>
        </div>

        <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
            <div class="card-box">
                <h3>Total Alunos</h3>
                <p style="font-size: 2rem; font-weight: bold;"><%= typeof stats !== 'undefined' ? stats.totalClients : 0 %></p>
            </div>
            <div class="card-box">
                <h3>Alunos Ativos</h3>
                <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);"><%= typeof stats !== 'undefined' ? stats.activeClients : 0 %></p>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
