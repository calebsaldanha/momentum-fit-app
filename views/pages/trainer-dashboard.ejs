<%- include('../partials/header.ejs') %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/dashboard' }) %>

    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarToggle" class="btn btn-outline btn-sm">
                <i class="fas fa-bars"></i> Menu
            </button>
            <span class="text-muted">Painel Treinador</span>
        </div>

        <div class="page-header">
            <h1>Painel do <span class="text-neon">Treinador</span></h1>
            <p>Gerencie seus alunos e prescreva treinos.</p>
        </div>

        <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div class="card-box">
                <h3>Total Alunos</h3>
                <p style="font-size: 2rem; font-weight: bold;"><%= typeof stats !== 'undefined' ? stats.totalClients : 0 %></p>
            </div>
            <div class="card-box">
                <h3>Ativos</h3>
                <p style="font-size: 2rem; font-weight: bold; color: var(--primary-color);"><%= typeof stats !== 'undefined' ? stats.activeClients : 0 %></p>
            </div>
        </div>

        <div class="content-wrapper">
            <div class="card-box">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h2>Alunos Recentes</h2>
                    <a href="/trainer/clients" class="btn btn-sm btn-outline">Ver Todos</a>
                </div>
                
                <% if (typeof recentClients !== 'undefined' && recentClients.length > 0) { %>
                    <div class="table-responsive">
                        <table style="width: 100%; border-collapse: collapse; color: #ccc;">
                            <thead>
                                <tr style="border-bottom: 1px solid #333; text-align: left;">
                                    <th style="padding: 10px;">Nome</th>
                                    <th style="padding: 10px;">Email</th>
                                    <th style="padding: 10px;">Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentClients.forEach(client => { %>
                                    <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
                                        <td style="padding: 12px;"><%= client.name %></td>
                                        <td style="padding: 12px;"><%= client.email %></td>
                                        <td style="padding: 12px;">
                                            <a href="/trainer/clients/<%= client.id %>" class="btn btn-sm btn-primary">Gerenciar</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">Nenhum aluno ativo no momento.</p>
                <% } %>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer.ejs') %>
