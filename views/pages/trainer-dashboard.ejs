<%- include('../partials/header.ejs', { title: 'Painel Personal' }) %>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs') %>
    
    <main class="dashboard-main">
        <div class="page-header" style="text-align: left; padding: 0; background: transparent; border: none; margin-bottom: 30px;">
            <h1>Painel do Treinador</h1>
            <p>Gerencie seus alunos e prescreva treinos.</p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div class="card-box">
                <h3 style="color: #888; font-size: 0.9rem;">Alunos Ativos</h3>
                <p style="font-size: 2rem; color: white; font-weight: 700;"><%= stats.activeClients || 0 %></p>
            </div>
            <div class="card-box">
                <h3 style="color: #888; font-size: 0.9rem;">Check-ins Hoje</h3>
                <p style="font-size: 2rem; color: var(--primary-color); font-weight: 700;"><%= stats.totalCheckins || 0 %></p>
            </div>
        </div>

        <div class="card-box">
            <h3 style="margin-bottom: 20px; border-bottom: 1px solid #333; padding-bottom: 10px;">Atividades Recentes</h3>
            <p style="color: #666;">Nenhuma atividade recente registrada.</p>
        </div>
    </main>
</div>

<%- include('../partials/footer.ejs') %>
