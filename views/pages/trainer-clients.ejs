<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/clients' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i> Menu</button>
            <span>Alunos</span>
        </div>

        <div class="page-header">
            <h1>Gerenciar <span class="text-neon">Alunos</span></h1>
        </div>

        <div class="card-box">
            <% if (clients && clients.length > 0) { %>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% clients.forEach(client => { %>
                                <tr>
                                    <td><%= client.name %></td>
                                    <td><%= client.email %></td>
                                    <td>
                                        <a href="/trainer/clients/<%= client.id %>" class="btn btn-sm btn-outline">Perfil</a>
                                        <a href="/trainer/clients/<%= client.id %>/workout" class="btn btn-sm btn-primary">Treinos</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-muted">Você ainda não tem alunos.</p>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
