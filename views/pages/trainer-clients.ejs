<%- include('../partials/header.ejs') %>
<div class="layout-wrapper">
    <%- include('../partials/sidebar.ejs') %>
    <main class="dashboard-main">
        <div class="content-wrapper">
            <h1>Meus Alunos</h1>
            <div class="content-grid">
                <% if(clients && clients.length > 0) { %>
                    <% clients.forEach(c => { %>
                    <div class="card-box" style="text-align: center;">
                        <img src="<%= c.profile_image || '/images/logo-3d.png' %>" style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover;">
                        <h3><%= c.name %></h3>
                        <p class="text-muted"><%= c.email %></p>
                        <a href="#" class="btn btn-outline btn-full">Ver Treinos</a>
                    </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">Você ainda não tem alunos.</p>
                <% } %>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
