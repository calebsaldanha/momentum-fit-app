<%- include('../partials/header.ejs') %>
<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { path: '/trainer/clients' }) %>
    <main class="dashboard-main">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Alunos</span>
        </div>

        <div class="page-header">
            <h1>Meus <span class="text-neon">Alunos</span></h1>
        </div>

        <div class="card-box">
            <% if (clients && clients.length > 0) { %>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr><th>Nome</th><th>Email</th><th>Ações</th></tr>
                        </thead>
                        <tbody>
                            <% clients.forEach(c => { %>
                                <tr>
                                    <td><%= c.name %></td>
                                    <td><%= c.email %></td>
                                    <td>
                                        <a href="/trainer/clients/<%= c.id %>" class="btn btn-sm btn-outline">Ver Perfil</a>
                                        <a href="/trainer/clients/<%= c.id %>/create-workout" class="btn btn-sm btn-primary">Novo Treino</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-muted">Nenhum aluno encontrado.</p>
            <% } %>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
