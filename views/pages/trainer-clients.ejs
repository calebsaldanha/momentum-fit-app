<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/app/head') %>
    <title>Meus Alunos | Momentum Fit</title>
</head>
<body>
    <div class="dashboard-wrapper">
        <%- include('../partials/sidebar') %>
        <div class="main-content">
            <%- include('../partials/app-header', { title: 'Gestão de Alunos' }) %>

            <div class="content-pad">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-users"></i> Atletas Ativos</h3>
                        <a href="/trainer/clients/invite" class="btn btn-primary" style="font-size: 0.85rem; padding: 8px 20px;">
                            <i class="fas fa-plus"></i> Novo Aluno
                        </a>
                    </div>

                    <table style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Plano</th>
                                <th>Status</th>
                                <th style="text-align: right;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (clients && clients.length > 0) { %>
                                <% clients.forEach(client => { %>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <div class="user-avatar" style="width: 35px; height: 35px; font-size: 0.9rem;"><%= client.name.charAt(0) %></div>
                                            <div>
                                                <div style="font-weight: 600; color: white;"><%= client.name %></div>
                                                <div style="font-size: 0.8rem; color: #666;"><%= client.email %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span style="color: var(--neon-primary); font-weight: 600;"><%= client.plan %></span></td>
                                    <td><span class="badge badge-success">ATIVO</span></td>
                                    <td style="text-align: right;">
                                        <a href="/trainer/clients/<%= client.id %>" class="btn btn-outline" style="padding: 6px 12px; font-size: 0.8rem;">Perfil</a>
                                        <a href="/trainer/program/<%= client.id %>" class="btn btn-outline" style="padding: 6px 12px; font-size: 0.8rem;"><i class="fas fa-dumbbell"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="4" style="text-align: center; padding: 30px;">Você ainda não tem alunos.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
