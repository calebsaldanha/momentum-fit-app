<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>

<style>
/* --- Layout Tela Cheia --- */
html, body { height: 100% !important; margin: 0 !important; overflow: hidden !important; }
.dashboard-container { display: flex; height: 100vh !important; width: 100vw !important; overflow: hidden; position: fixed; top: 0; left: 0; }
.dashboard-main { flex: 1; display: flex; flex-direction: column; height: 100%; padding: 0 !important; background-color: #1a1a1a; }
.chat-container { display: flex; flex: 1; height: 100%; overflow: hidden; background-color: #1a1a1a; }

/* Sidebar */
.chat-sidebar { width: 300px; background: #111; border-right: 1px solid #333; display: flex; flex-direction: column; flex-shrink: 0; height: 100%; }
.chat-sidebar-header { padding: 15px; border-bottom: 1px solid #333; background: #111; }
.user-list { list-style: none; padding: 0; margin: 0; overflow-y: auto; flex: 1; }
.user-item { padding: 15px; border-bottom: 1px solid #222; cursor: pointer; display: flex; align-items: center; gap: 12px; }
.user-item:hover, .user-item.active { background: #2a2a2a; }
.user-avatar { width: 40px; height: 40px; border-radius: 50%; background: #444; object-fit: cover; flex-shrink: 0; }

/* Conteúdo */
.chat-content { flex: 1; display: flex; flex-direction: column; height: 100%; position: relative; background: #000; }
.chat-header { padding: 15px; background: #1a1a1a; border-bottom: 1px solid #333; flex-shrink: 0; color: white; }
.chat-messages { flex: 1; overflow-y: auto; padding: 20px; display: flex; flex-direction: column; gap: 15px; scroll-behavior: smooth; height: 0; min-height: 0; }
.message { max-width: 80%; padding: 10px 15px; border-radius: 12px; line-height: 1.4; word-wrap: break-word; color: white; }
.message.sent { background: var(--c-accent-primary); color: #000; align-self: flex-end; }
.message.received { background: #333; color: #fff; align-self: flex-start; }

/* Input */
.chat-input-area { padding: 15px; background: #1a1a1a; border-top: 1px solid #333; display: flex; align-items: center; gap: 10px; flex-shrink: 0; }
.chat-input { flex: 1; padding: 10px; border-radius: 6px; border: 1px solid #444; background: #222; color: white; }
.hidden { display: none !important; }

/* Overlay de Carregamento */
#uploadOverlay { display:none; position:absolute; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.85); z-index:99; align-items:center; justify-content:center; flex-direction:column; color:white; }

@media (max-width: 768px) {
    .dashboard-container { flex-direction: column; position: relative; }
    .chat-container { flex-direction: column; }
    .chat-sidebar { width: 100%; height: 160px; border-right: none; border-bottom: 1px solid #333; }
}
</style>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'chat' }) %>
    
    <main class="dashboard-main">
        <div class="chat-container">
            <div id="uploadOverlay">
                <i class="fas fa-spinner fa-spin" style="font-size:3rem; margin-bottom:1rem; color:var(--c-accent-primary);"></i>
                <p id="uploadStatusText">Processando imagem...</p>
            </div>

            <aside class="chat-sidebar">
                <div class="chat-sidebar-header"><h3 style="margin:0; font-size:1.1rem; color:white;">Conversas</h3></div>
                <ul class="user-list">
                    <% if (chatUsers && chatUsers.length > 0) { %>
                        <% chatUsers.forEach(u => { %>
                             <li class="user-item <%= typeof activeChat !== 'undefined' && activeChat && activeChat.id === u.id ? 'active' : '' %>" 
                                onclick="window.location.href='/chat?user_id=<%= u.id %>'">
                                <img src="<%= u.profile_image || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(u.name) %>" class="user-avatar">
                                <div><div style="font-weight: 600; color: white;"><%= u.name %></div></div>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <div style="padding:1rem; color:#666; text-align:center">Sem contatos.</div>
                    <% } %>
                </ul>
            </aside>

            <section class="chat-content">
                <% if (typeof activeChat !== 'undefined' && activeChat) { %>
                    <div class="chat-header">Conversando com: <span style="color: var(--c-accent-primary);"><%= activeChat.name %></span></div>
                    
                    <div class="chat-messages" id="messagesList">
                        <% if (messages && messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <div class="message <%= msg.sender_id === user.id ? 'sent' : 'received' %>">
                                    <% if (msg.message_type === 'image') { %>
                                        <a href="<%= msg.content %>" target="_blank"><img src="<%= msg.content %>" style="max-width:100%; border-radius:8px; max-height:300px;"></a>
                                    <% } else if (msg.message_type === 'video') { %>
                                        <video src="<%= msg.content %>" controls style="max-width:100%; border-radius:8px;"></video>
                                    <% } else if (msg.message_type === 'file') { %>
                                        <a href="<%= msg.content %>" target="_blank" style="color:inherit; text-decoration:underline;"><i class="fas fa-paperclip"></i> Baixar Arquivo</a>
                                    <% } else { %>
                                        <%= msg.content %>
                                    <% } %>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div style="text-align:center; color:#666; margin-top:50px;">Nenhuma mensagem.</div>
                        <% } %>
                    </div>
                    
                    <form id="chatForm" action="/chat/send?_csrf=<%= csrfToken %>" method="POST" class="chat-input-area" onsubmit="handleChatSubmit(event)">
                        <input type="hidden" name="recipient_id" value="<%= activeChat.id %>">
                        <input type="hidden" name="fileUrl" id="hiddenFileUrl">
                        
                        <label for="file-upload" style="cursor: pointer; color: #888; padding:5px;"><i class="fas fa-paperclip" style="font-size:1.2rem"></i></label>
                        <input id="file-upload" type="file" name="file" style="display: none;" accept="image/*,video/*,application/pdf" onchange="updateFilePreview(this)">
                        <span id="file-name-display" style="display:none; font-size:0.8rem; background:#333; padding:2px 6px; border-radius:4px; color:white;"></span>

                        <input type="text" name="content" class="chat-input" placeholder="Digite..." autocomplete="off">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
                    </form>
                <% } else { %>
                    <div style="display:flex; align-items:center; justify-content:center; height:100%; color:#666;">Selecione um usuário.</div>
                <% } %>
            </section>
        </div>
    </main>
</div>

<script type="module">
    try { import { upload } from 'https://cdn.jsdelivr.net/npm/@vercel/blob@0.22.1/dist/client.js'; window.vercelUpload = upload; } catch(e) {}
</script>

<script>
    const msgList = document.getElementById('messagesList');
    if(msgList) msgList.scrollTop = msgList.scrollHeight;

    function updateFilePreview(input) {
        const display = document.getElementById('file-name-display');
        if (input.files && input.files[0]) {
            display.textContent = input.files[0].name;
            display.style.display = 'inline-block';
        } else {
            display.style.display = 'none';
        }
    }

    // --- FUNÇÃO DE COMPRESSÃO DE IMAGEM ---
    const compressImage = async (file, { quality = 0.7, maxWidth = 1280 } = {}) => {
        if (!file.type.startsWith('image/')) return file; // Não comprime vídeos/PDFs
        console.log('Comprimindo imagem:', file.name, 'Tamanho original:', file.size);
        
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = (event) => {
                const img = new Image();
                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    let width = img.width;
                    let height = img.height;
                    
                    if (width > maxWidth) {
                        height = Math.round((height * maxWidth) / width);
                        width = maxWidth;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        if (!blob) return resolve(file); // Falha, retorna original
                        const newFile = new File([blob], file.name, {
                            type: 'image/jpeg',
                            lastModified: Date.now(),
                        });
                        console.log('Imagem comprimida. Novo tamanho:', newFile.size);
                        resolve(newFile);
                    }, 'image/jpeg', quality);
                };
                img.src = event.target.result;
            };
            reader.readAsDataURL(file);
        });
    };

    async function handleChatSubmit(e) {
        e.preventDefault();
        const form = e.target;
        const fileInput = document.getElementById('file-upload');
        let file = fileInput.files[0];
        const overlay = document.getElementById('uploadOverlay');
        const statusText = document.getElementById('uploadStatusText');

        // 1. Apenas texto (Modo Leve)
        if (!file) {
            form.enctype = "application/x-www-form-urlencoded";
            fileInput.removeAttribute('name');
            form.submit();
            return;
        }

        if(overlay) overlay.style.display = 'flex';
        
        // 2. Com Arquivo - Tenta comprimir primeiro
        try {
            if(statusText) statusText.textContent = "Otimizando arquivo...";
            file = await compressImage(file); // Comprime se for imagem
            
            // Atualiza o input file com a versão comprimida
            const dt = new DataTransfer();
            dt.items.add(file);
            fileInput.files = dt.files;
            
        } catch(err) {
            console.warn("Erro na compressão, usando original", err);
        }

        // 3. Tenta Upload Rápido (Vercel Blob)
        if (window.vercelUpload) {
            try {
                if(statusText) statusText.textContent = "Enviando para nuvem...";
                const newBlob = await window.vercelUpload(file.name, file, {
                    access: 'public',
                    handleUploadUrl: '/chat/upload/authorize',
                });

                document.getElementById('hiddenFileUrl').value = newBlob.url;
                fileInput.value = '';
                fileInput.removeAttribute('name'); 
                
                // Envia como form simples (URL já gerada)
                form.enctype = "application/x-www-form-urlencoded";
                form.submit();
                return;

            } catch (err) {
                console.warn('Upload rápido falhou, usando servidor...', err);
            }
        }

        // 4. Fallback: Envio via Servidor (Multipart)
        // Se chegou aqui, é porque Vercel Blob falhou ou não existe.
        // O arquivo JÁ ESTÁ COMPRIMIDO no input, então deve passar pelo limite de 4.5MB
        if(statusText) statusText.textContent = "Enviando via servidor...";
        form.enctype = "multipart/form-data";
        fileInput.setAttribute('name', 'file');
        
        // Remove handler e envia nativo
        form.removeEventListener('submit', handleChatSubmit);
        form.submit();
    }
</script>

