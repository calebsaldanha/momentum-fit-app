<%- include('../partials/header.ejs') %>
<div class="dashboard-container" style="height: calc(100vh - 80px);">
    <%- include('../partials/sidebar.ejs', { path: '/chat' }) %>
    
    <main class="dashboard-main" style="display: flex; flex-direction: column; padding: 0;">
        <div class="mobile-dash-header">
            <button id="sidebarOpenBtn" class="btn btn-outline btn-sm"><i class="fas fa-bars"></i></button>
            <span>Chat</span>
        </div>

        <div style="display: flex; flex: 1; height: 100%; overflow: hidden;">
            <div style="width: 300px; background: #0a0a0a; border-right: 1px solid #222; display: flex; flex-direction: column;" class="desktop-only">
                <div style="padding: 20px; border-bottom: 1px solid #222;">
                    <h3 style="color: white;">Mensagens</h3>
                </div>
                <div style="flex: 1; overflow-y: auto;">
                    <div style="padding: 15px; border-bottom: 1px solid #1a1a1a; cursor: pointer; transition: 0.2s; background: rgba(190, 242, 2, 0.05);">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 40px; height: 40px; background: #333; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">A</div>
                            <div>
                                <h4 style="color: white; font-size: 0.95rem; margin: 0;">Admin/Trainer</h4>
                                <p style="color: #888; font-size: 0.8rem; margin: 0;">Última mensagem...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div style="flex: 1; display: flex; flex-direction: column; background: #050505;">
                <div style="padding: 15px 20px; border-bottom: 1px solid #222; display: flex; align-items: center; justify-content: space-between;">
                    <h3 style="color: white; font-size: 1.1rem;">Chat Principal</h3>
                    <button class="btn btn-sm btn-ghost"><i class="fas fa-ellipsis-v"></i></button>
                </div>

                <div style="flex: 1; padding: 20px; overflow-y: auto; display: flex; flex-direction: column; gap: 15px;">
                    <div style="align-self: flex-start; max-width: 70%;">
                        <div style="background: #222; padding: 12px 15px; border-radius: 12px 12px 12px 0; color: #ddd;">
                            Olá! Como foi o treino de hoje?
                        </div>
                        <span style="font-size: 0.7rem; color: #555; margin-left: 5px;">10:30</span>
                    </div>

                    <div style="align-self: flex-end; max-width: 70%;">
                        <div style="background: var(--primary-color); color: black; padding: 12px 15px; border-radius: 12px 12px 0 12px; font-weight: 500;">
                            Foi intenso! Consegui aumentar a carga no supino.
                        </div>
                        <span style="font-size: 0.7rem; color: #555; float: right; margin-right: 5px;">10:32</span>
                    </div>
                </div>

                <div style="padding: 20px; border-top: 1px solid #222; background: #0a0a0a;">
                    <form style="display: flex; gap: 10px;">
                        <button type="button" class="btn btn-ghost" style="font-size: 1.2rem;"><i class="fas fa-paperclip"></i></button>
                        <input type="text" placeholder="Digite sua mensagem..." style="flex: 1; background: #1a1a1a; border: none; padding: 12px; border-radius: 25px; color: white;">
                        <button type="submit" class="btn btn-primary" style="border-radius: 50%; width: 45px; height: 45px; padding: 0;"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer.ejs') %>
