<%- include('../partials/header.ejs', { title, bodyClass: 'dashboard-body' }) %>

<style>
/* Estilos do Chat */
.user-list { list-style: none; padding: 0; margin: 0; }
.user-item { padding: 1rem; border-bottom: 1px solid #333; cursor: pointer; transition: background 0.2s; display: flex; align-items: center; gap: 10px; }
.user-item:hover, .user-item.active { background: #2a2a2a; }
.user-avatar { width: 40px; height: 40px; border-radius: 50%; background: #444; object-fit: cover; }
.message { max-width: 70%; padding: 10px 15px; border-radius: 12px; line-height: 1.4; position: relative; word-wrap: break-word; margin-bottom: 5px; }
.message.sent { background: var(--c-accent-primary); color: #000; align-self: flex-end; }
.message.received { background: #333; color: #fff; align-self: flex-start; }
.chat-input { flex: 1; padding: 10px; border-radius: 6px; border: 1px solid #444; background: #222; color: white; }
.chat-input:focus { outline: none; border-color: var(--c-accent-primary); }
.file-preview-badge { display: none; font-size: 0.8rem; background: #333; padding: 4px 8px; border-radius: 4px; color: var(--c-accent-primary); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 150px; }
.file-attachment-link { display: flex; align-items: center; gap: 8px; background: rgba(0,0,0,0.2); padding: 8px; border-radius: 6px; color: inherit; text-decoration: none; margin-top: 5px; font-size: 0.9rem; }
.file-attachment-link:hover { background: rgba(0,0,0,0.3); }
/* Loading overlay */
.upload-overlay { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); display: none; align-items: center; justify-content: center; z-index: 9999; flex-direction: column; color: white; }
</style>

<div id="uploadOverlay" class="upload-overlay">
    <i class="fas fa-spinner fa-spin" style="font-size: 3rem; color: var(--c-accent-primary); margin-bottom: 1rem;"></i>
    <p>Enviando arquivo...</p>
</div>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'chat' }) %>
    
    <main class="dashboard-main" style="padding: 0; height: 100%;">
        <div class="chat-container">
            <aside class="chat-sidebar">
                <div style="padding: 1rem; border-bottom: 1px solid #333;">
                    <h3 style="margin:0; font-size:1.1rem; color: white;">Conversas</h3>
                </div>
                <ul class="user-list">
                    <% if (chatUsers && chatUsers.length > 0) { %>
                        <% chatUsers.forEach(u => { %>
                             <li class="user-item <%= typeof activeChat !== 'undefined' && activeChat && activeChat.id === u.id ? 'active' : '' %>" 
                                onclick="selectUser('<%= u.id %>')">
                                <img src="<%= u.profile_image ? u.profile_image : 'https://ui-avatars.com/api/?name=' + encodeURIComponent(u.name) + '&background=random' %>" 
                                     class="user-avatar" alt="<%= u.name %>"
                                     onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= encodeURIComponent(u.name) %>&background=random'">
                                <div>
                                    <div style="font-weight: 600; color: white;"><%= u.name %></div>
                                    <small style="color: #888;">Clique para conversar</small>
                                </div>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <div style="padding: 1rem; color: #666;">Nenhum usuário encontrado.</div>
                    <% } %>
                </ul>
            </aside>

            <section class="chat-content">
                <% if (typeof activeChat !== 'undefined' && activeChat) { %>
                    <div class="chat-header">
                        Conversando com: <span style="color: var(--c-accent-primary);"><%= activeChat.name %></span>
                    </div>
                    <div class="chat-messages" id="messagesList">
                        <% if (messages && messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <div class="message <%= msg.sender_id === user.id ? 'sent' : 'received' %>">
                                    <% if (msg.message_type === 'image') { %>
                                        <a href="<%= msg.content %>" target="_blank">
                                            <img src="<%= msg.content %>" style="max-width: 100%; border-radius: 8px;">
                                        </a>
                                    <% } else if (msg.message_type === 'video') { %>
                                        <video src="<%= msg.content %>" controls style="max-width: 100%; border-radius: 8px;"></video>
                                    <% } else if (msg.message_type === 'file') { %>
                                        <a href="<%= msg.content %>" target="_blank" class="file-attachment-link">
                                            <i class="fas fa-file-download"></i> Baixar Arquivo
                                        </a>
                                    <% } else { %>
                                        <%= msg.content %>
                                    <% } %>
                                </div>
                            <% }); %>
                        <% } else { %>
                             <p style="text-align: center; color: #666; margin-top: 2rem;">Nenhuma mensagem ainda.</p>
                        <% } %>
                    </div>
                    
                    <form id="chatForm" action="/chat/send?_csrf=<%= csrfToken %>" method="POST" enctype="multipart/form-data" class="chat-input-area" onsubmit="handleChatSubmit(event)">
                        <input type="hidden" name="recipient_id" value="<%= activeChat.id %>">
                        <input type="hidden" name="fileUrl" id="hiddenFileUrl">
                        
                        <label for="file-upload" style="cursor: pointer; color: #888; display: flex; align-items: center; padding: 0 10px;" title="Enviar arquivo, foto ou vídeo">
                            <i class="fas fa-paperclip"></i>
                        </label>
                        <input id="file-upload" type="file" name="file" style="display: none;" onchange="updateFileName(this)">
                        
                        <span id="file-name-display" class="file-preview-badge"></span>

                        <input type="text" name="content" class="chat-input" placeholder="Digite sua mensagem..." autocomplete="off">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
                    </form>
                <% } else { %>
                    <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #666;">
                        Selecione um usuário para iniciar o chat.
                    </div>
                <% } %>
            </section>
        </div>
    </main>
</div>

<script type="module">
    import { upload } from 'https://cdn.jsdelivr.net/npm/@vercel/blob@0.22.1/dist/client.js';
    window.vercelUpload = upload; // Expor para o escopo global
</script>

<script>
    function selectUser(userId) {
        window.location.href = '/chat?user_id=' + userId;
    }

    function updateFileName(input) {
        const display = document.getElementById('file-name-display');
        if (input.files && input.files.length > 0) {
            display.textContent = input.files[0].name;
            display.style.display = 'inline-block';
        } else {
            display.style.display = 'none';
        }
    }

    // Lógica de Envio Inteligente (Client-Side Upload)
    async function handleChatSubmit(e) {
        e.preventDefault();
        const form = e.target;
        const fileInput = document.getElementById('file-upload');
        const file = fileInput.files[0];
        
        // Se tiver arquivo, faz upload direto pro Vercel Blob primeiro
        if (file) {
            document.getElementById('uploadOverlay').style.display = 'flex'; // Mostra loading
            
            try {
                if (!window.vercelUpload) throw new Error("SDK de Upload não carregado.");

                const newBlob = await window.vercelUpload(file.name, file, {
                    access: 'public',
                    handleUploadUrl: '/chat/upload/authorize', // Nossa nova rota de autorização
                });

                // Preenche o input hidden com a URL gerada
                document.getElementById('hiddenFileUrl').value = newBlob.url;
                
                // Limpa o input de arquivo para não enviar o binário (pesado) pro servidor
                fileInput.value = ''; 
                
                // Remove o atributo 'name' do input de arquivo temporariamente para garantir que não seja enviado
                fileInput.removeAttribute('name');

                form.submit(); // Envia o formulário agora com a URL e o texto
            } catch (err) {
                console.error("Erro no upload:", err);
                console.warn("Upload client-side falhou, tentando via servidor...");
                document.getElementById('uploadOverlay').style.display = 'none';
                fileInput.setAttribute('name', 'file'); form.submit();
            }
        } else {
            // Se for só texto, envia normal
            form.submit();
        }
    }

    const msgList = document.getElementById('messagesList');
    if(msgList) {
        msgList.scrollTop = msgList.scrollHeight;
    }
</script>

<%- include('../partials/footer') %>
