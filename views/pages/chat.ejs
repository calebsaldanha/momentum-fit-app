<%- include('../partials/header') %>

<style>
/* Chat Styles */
.chat-wrapper {
    display: flex;
    height: calc(100vh - 100px);
    gap: 1rem;
    overflow: hidden;
}
.chat-sidebar {
    width: 300px;
    background: #1a1a1a;
    border-radius: 8px;
    border: 1px solid #333;
    display: flex;
    flex-direction: column;
}
.user-list {
    flex: 1;
    overflow-y: auto;
    list-style: none;
    padding: 0;
    margin: 0;
}
.user-item {
    padding: 1rem;
    border-bottom: 1px solid #333;
    cursor: pointer;
    transition: background 0.2s;
    display: flex;
    align-items: center;
    gap: 10px;
}
.user-item:hover, .user-item.active {
    background: #2a2a2a;
}
.user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #444;
    object-fit: cover;
}
.chat-main {
    flex: 1;
    background: #111;
    border-radius: 8px;
    border: 1px solid #333;
    display: flex;
    flex-direction: column;
}
.chat-header {
    padding: 1rem;
    border-bottom: 1px solid #333;
    background: #1a1a1a;
    font-weight: bold;
}
.messages-area {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
}
.message {
    max-width: 70%;
    padding: 10px 15px;
    border-radius: 12px;
    line-height: 1.4;
    position: relative;
}
.message.sent {
    background: var(--c-accent-primary);
    color: #000;
    align-self: flex-end;
}
.message.received {
    background: #333;
    color: #fff;
    align-self: flex-start;
}
.input-area {
    padding: 1rem;
    border-top: 1px solid #333;
    background: #1a1a1a;
    display: flex;
    gap: 10px;
}
.chat-input {
    flex: 1;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #444;
    background: #222;
    color: white;
}
</style>

<div class="dashboard-container">
    <%- include('../partials/sidebar') %>
    
    <main class="main-content" style="padding-bottom: 0;">
        <div class="chat-wrapper">
            <aside class="chat-sidebar">
                <div style="padding: 1rem; border-bottom: 1px solid #333;">
                    <h3 style="margin:0; font-size:1.1rem;">Conversas</h3>
                </div>
                <ul class="user-list">
                    <% if (chatUsers && chatUsers.length > 0) { %>
                        <% chatUsers.forEach(u => { %>
                            <li class="user-item <%= typeof activeChat !== 'undefined' && activeChat && activeChat.id === u.id ? 'active' : '' %>" 
                                onclick="selectUser('<%= u.id %>')">
                                <img src="<%= u.profile_image || '/images/default-avatar.png' %>" class="user-avatar" onerror="this.src='/images/default-avatar.png'">
                                <div>
                                    <div style="font-weight: 600; color: white;"><%= u.name %></div>
                                    <small style="color: #888;">Clique para conversar</small>
                                </div>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <div style="padding: 1rem; color: #666;">Nenhum usuário encontrado.</div>
                    <% } %>
                </ul>
            </aside>

            <section class="chat-main">
                <% if (typeof activeChat !== 'undefined' && activeChat) { %>
                    <div class="chat-header">
                        Conversando com: <%= activeChat.name %>
                    </div>
                    <div class="messages-area" id="messagesList">
                        <% if (messages && messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <div class="message <%= msg.sender_id === user.id ? 'sent' : 'received' %>">
                                    <%= msg.content %>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p style="text-align: center; color: #666; margin-top: 2rem;">Nenhuma mensagem ainda.</p>
                        <% } %>
                    </div>
                    <form action="/chat/send" method="POST" class="input-area">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="recipient_id" value="<%= activeChat.id %>">
                        <input type="text" name="content" class="chat-input" placeholder="Digite sua mensagem..." required autocomplete="off">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
                    </form>
                <% } else { %>
                    <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #666;">
                        Selecione um usuário para iniciar o chat.
                    </div>
                <% } %>
            </section>
        </div>
    </main>
</div>

<script>
    function selectUser(userId) {
        window.location.href = '/chat?user_id=' + userId;
    }

    const msgList = document.getElementById('messagesList');
    if(msgList) {
        msgList.scrollTop = msgList.scrollHeight;
    }
</script>

<%- include('../partials/footer') %>
