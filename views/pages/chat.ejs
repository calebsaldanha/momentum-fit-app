<%- include('../partials/header.ejs', { title: 'Chat', bodyClass: 'dashboard-body' }) %>

<style>
    /* --- VARIÁVEIS DE CONFIGURAÇÃO --- */
    :root {
        --chat-header-height: 70px; /* Altura unificada dos cabeçalhos */
        --chat-border-color: #333;
        --chat-bg-sidebar: #0e0e0e;
        --chat-bg-main: #000;
        --chat-bg-header: #111;
    }

    /* --- LAYOUT GLOBAL (Full Screen) --- */
    body, html {
        height: 100%;
        overflow-x: hidden;
    }

    /* Container Principal do Dashboard */
    .dashboard-container {
        display: flex;
        flex-direction: row;
        height: 100vh;
        padding-top: 60px; /* Compensa o Header Principal do Site */
        box-sizing: border-box;
        overflow: hidden;
    }

    /* Wrapper da Página de Chat */
    .chat-page-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        height: 100%;
        background: var(--chat-bg-main);
        position: relative;
        min-width: 0;
        padding: 0 !important;
        margin: 0 !important;
    }

    /* O Container do Chat (Flex Row) */
    .chat-box-container {
        flex: 1;
        display: flex;
        overflow: hidden;
        position: relative;
        /* Remove bordas que possam causar desalinhamento de pixels */
        border: none; 
    }

    /* --- CLASSE MESTRA PARA CABEÇALHOS --- */
    /* Esta classe garante que ambos os lados tenham EXATAMENTE a mesma altura e alinhamento */
    .chat-header-unified {
        height: var(--chat-header-height);
        min-height: var(--chat-header-height);
        max-height: var(--chat-header-height);
        
        display: flex;
        align-items: center; /* Centraliza verticalmente o conteúdo */
        justify-content: space-between;
        
        padding: 0 25px; /* Padding lateral idêntico */
        background-color: var(--chat-bg-header);
        border-bottom: 1px solid var(--chat-border-color);
        box-sizing: border-box;
        flex-shrink: 0;
    }

    /* Reset de margens para elementos dentro do header */
    .chat-header-unified h3, 
    .chat-header-unified h4,
    .chat-header-unified span, 
    .chat-header-unified div,
    .chat-header-unified i {
        margin: 0;
        padding: 0;
        line-height: 1;
    }

    /* --- SIDEBAR DE CONTATOS (ESQUERDA) --- */
    .chat-contacts-sidebar {
        width: 300px;
        background: var(--chat-bg-sidebar);
        border-right: 1px solid var(--chat-border-color);
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
        height: 100%;
        z-index: 2; /* Fica acima se necessário */
    }

    .contacts-title {
        color: #888;
        font-weight: 700;
        font-size: 0.85rem;
        letter-spacing: 1.2px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .contacts-list {
        flex: 1;
        overflow-y: auto;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 25px; /* Alinhado visualmente */
        border-bottom: 1px solid #222;
        cursor: pointer;
        transition: background 0.2s;
    }

    .contact-item:hover { background: #1a1a1a; }
    .contact-item.active { background: #1f1f1f; border-left: 3px solid var(--c-accent-primary); padding-left: 22px; /* Compensa a borda */ }

    .contact-avatar { width: 42px; height: 42px; border-radius: 50%; object-fit: cover; background: #333; flex-shrink: 0; }

    /* --- ÁREA PRINCIPAL (DIREITA) --- */
    .chat-main-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: var(--chat-bg-main);
        position: relative;
        min-width: 0;
        height: 100%;
    }

    .chat-user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .chat-user-name {
        font-weight: 700;
        font-size: 1.1rem;
        color: #fff;
    }

    /* Scroll de Mensagens */
    .messages-scroll-area {
        flex: 1;
        padding: 20px 30px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
        scroll-behavior: smooth;
    }

    .msg-bubble {
        max-width: 70%;
        padding: 12px 18px;
        border-radius: 12px;
        font-size: 0.95rem;
        line-height: 1.5;
        color: white;
        position: relative;
        word-wrap: break-word;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .msg-bubble.sent { align-self: flex-end; background: var(--c-accent-primary); color: black; border-bottom-right-radius: 2px; font-weight: 500; }
    .msg-bubble.received { align-self: flex-start; background: #222; border-bottom-left-radius: 2px; border: 1px solid #333; }

    /* Input Area */
    .input-area-wrapper {
        padding: 20px 25px;
        background: var(--chat-bg-header);
        border-top: 1px solid var(--chat-border-color);
        display: flex;
        align-items: center;
        gap: 15px;
        flex-shrink: 0;
    }

    .main-input {
        flex: 1;
        padding: 14px 20px;
        border-radius: 30px;
        border: 1px solid #444;
        background: #222;
        color: white;
        outline: none;
        font-size: 0.95rem;
        transition: border 0.2s;
    }
    .main-input:focus { border-color: var(--c-accent-primary); }

    /* --- MOBILE --- */
    @media (max-width: 768px) {
        .dashboard-container { display: block; padding-top: 60px; height: auto; min-height: 100vh; overflow: visible; }
        .chat-page-wrapper { height: calc(100vh - 60px); }
        .chat-box-container { flex-direction: column; }
        
        .chat-contacts-sidebar { 
            width: 100%; 
            height: 70px; /* Header + Lista Horizontal */
            flex-direction: row; 
            overflow-x: auto;
            border-right: none;
            border-bottom: 1px solid #333; 
            background: #111;
        }
        
        /* Oculta o header "Contatos" no mobile para economizar espaço */
        .chat-header-unified.contacts-header-mobile { display: none; }
        
        .contacts-list { display: flex; flex-direction: row; align-items: center; padding: 0 10px; }
        .contact-item { border-bottom: none; border-right: none; padding: 8px 12px; background: transparent; min-width: auto; }
        .contact-item.active { border-left: none; background: #222; border-radius: 8px; padding: 8px 12px; }
        .contact-info { display: none; }
        .contact-avatar { width: 45px; height: 45px; margin: 0; border: 2px solid transparent; }
        .contact-item.active .contact-avatar { border-color: var(--c-accent-primary); }

        .chat-main-area { height: calc(100% - 70px); }
    }
</style>

<div class="dashboard-container">
    <%- include('../partials/sidebar.ejs', { currentPage: 'chat' }) %>

    <div class="chat-page-wrapper">
        <div id="uploadOverlay" style="display:none; position:absolute; inset:0; background:rgba(0,0,0,0.85); z-index:999; align-items:center; justify-content:center; flex-direction:column; color:white;">
            <i class="fas fa-spinner fa-spin" style="font-size:2.5rem; margin-bottom:15px; color:var(--c-accent-primary);"></i>
            <p id="uploadStatusText">Enviando...</p>
        </div>

        <div class="chat-box-container">
            
            <aside class="chat-contacts-sidebar">
                <div class="chat-header-unified contacts-header-mobile">
                    <div class="contacts-title">
                        <i class="far fa-address-book"></i> <span>Contatos</span>
                    </div>
                </div>

                <ul class="contacts-list">
                    <% if (typeof chatUsers !== 'undefined' && chatUsers.length > 0) { %>
                        <% chatUsers.forEach(u => { %>
                            <li class="contact-item <%= typeof activeChat !== 'undefined' && activeChat && activeChat.id === u.id ? 'active' : '' %>" 
                                onclick="window.location.href='/chat?user_id=<%= u.id %>'">
                                <img src="<%= u.profile_image || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(u.name) %>" class="contact-avatar">
                                <div class="contact-info" style="display: flex; flex-direction: column; justify-content: center;">
                                    <span style="font-weight: 600; color: #fff; font-size: 0.95rem; line-height: 1.2;"><%= u.name %></span>
                                    <span style="color: #666; font-size: 0.75rem; line-height: 1.2; margin-top: 2px;"><%= u.role === 'trainer' ? 'Personal' : 'Aluno' %></span>
                                </div>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <div style="padding:30px 20px; text-align:center; color:#555; font-size:0.9rem;">
                            <i class="far fa-sad-tear" style="display:block; margin-bottom:10px; font-size:1.5rem;"></i>
                            Nenhum contato.
                        </div>
                    <% } %>
                </ul>
            </aside>

            <main class="chat-main-area">
                <% if (typeof activeChat !== 'undefined' && activeChat) { %>
                    
                    <div class="chat-header-unified">
                        <div class="chat-user-info">
                            <img src="<%= activeChat.profile_image || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(activeChat.name) %>" 
                                 style="width:38px; height:38px; border-radius:50%; border: 1px solid #444;">
                            <span class="chat-user-name"><%= activeChat.name %></span>
                        </div>
                        <a href="/admin/clients/<%= activeChat.id %>" title="Ver Perfil" style="color: #666; font-size: 1.2rem; transition: color 0.2s;" onmouseover="this.style.color='#fff'" onmouseout="this.style.color='#666'">
                            <i class="far fa-user-circle"></i>
                        </a>
                    </div>

                    <div class="messages-scroll-area" id="messagesList">
                        <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <div class="msg-bubble <%= msg.sender_id === user.id ? 'sent' : 'received' %>">
                                    <% if (msg.message_type === 'image') { %>
                                        <a href="<%= msg.content %>" target="_blank">
                                            <img src="<%= msg.content %>" style="max-width:100%; border-radius:8px; max-height:300px; display:block;">
                                        </a>
                                    <% } else if (msg.message_type === 'video') { %>
                                        <video src="<%= msg.content %>" controls style="max-width:100%; border-radius:8px;"></video>
                                    <% } else if (msg.message_type === 'file') { %>
                                        <a href="<%= msg.content %>" target="_blank" style="color:inherit; text-decoration:underline; display:flex; align-items:center; gap:8px;">
                                            <i class="fas fa-paperclip"></i> Ver Anexo
                                        </a>
                                    <% } else { %>
                                        <%= msg.content %>
                                    <% } %>
                                    
                                    <div style="text-align:right; font-size:0.7rem; margin-top:5px; opacity:0.6;">
                                        <%= new Date(msg.created_at).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div style="flex:1; display:flex; align-items:center; justify-content:center; color:#333; flex-direction:column;">
                                <div style="width:80px; height:80px; background:#111; border-radius:50%; display:flex; align-items:center; justify-content:center; margin-bottom:15px;">
                                    <i class="fas fa-hand-sparkles" style="font-size:2rem; color:#444;"></i>
                                </div>
                                <p>Comece a conversar com <%= activeChat.name %></p>
                            </div>
                        <% } %>
                    </div>

                    <form action="/chat/send?_csrf=<%= csrfToken %>" method="POST" class="input-area-wrapper" onsubmit="handleChatSubmit(event)">
                        <input type="hidden" name="recipient_id" value="<%= activeChat.id %>">
                        <input type="hidden" name="fileUrl" id="hiddenFileUrl">
                        
                        <label for="file-upload" style="cursor:pointer; color:#888; padding:5px; transition:color 0.2s;" title="Enviar arquivo">
                            <i class="fas fa-plus-circle" style="font-size:1.4rem;"></i>
                        </label>
                        <input type="file" id="file-upload" name="file" style="display:none;" onchange="updateFilePreview(this)">
                        
                        <span id="fileNameDisplay" style="display:none; background:var(--c-accent-primary); color:black; font-size:0.75rem; padding:2px 8px; border-radius:4px; font-weight:bold;"></span>

                        <input type="text" name="content" class="main-input" placeholder="Digite sua mensagem..." autocomplete="off">
                        
                        <button type="submit" class="btn btn-primary" style="width:48px; height:48px; border-radius:50%; padding:0; display:flex; align-items:center; justify-content:center; box-shadow: 0 4px 15px rgba(190, 242, 2, 0.2);">
                            <i class="fas fa-paper-plane" style="font-size:1.1rem;"></i>
                        </button>
                    </form>
                <% } else { %>
                    <div style="flex:1; display:flex; align-items:center; justify-content:center; flex-direction:column; color:#444; background:#080808;">
                        <i class="far fa-comments" style="font-size:5rem; margin-bottom:20px; opacity:0.2;"></i>
                        <h3 style="color:#666;">Momentum Chat</h3>
                        <p style="color:#444;">Selecione um contato ao lado.</p>
                    </div>
                <% } %>
            </main>
        </div>
    </div>
</div>

<script type="module">
    try { import { upload } from 'https://cdn.jsdelivr.net/npm/@vercel/blob@0.22.1/dist/client.js'; window.vercelUpload = upload; } catch(e) {}
</script>

<script>
    const msgList = document.getElementById('messagesList');
    if(msgList) setTimeout(() => msgList.scrollTop = msgList.scrollHeight, 100);

    function updateFilePreview(input) {
        const display = document.getElementById('fileNameDisplay');
        if (input.files && input.files[0]) {
            display.innerText = input.files[0].name;
            display.style.display = 'inline-block';
        } else {
            display.style.display = 'none';
        }
    }

    async function handleChatSubmit(e) {
        e.preventDefault();
        const form = e.target;
        const fileInput = document.getElementById('file-upload');
        let file = fileInput.files[0];
        const statusText = document.getElementById('uploadStatusText');
        const overlay = document.getElementById('uploadOverlay');

        if(!file && !form.content.value.trim()) return;

        if(!file) {
            form.enctype = "application/x-www-form-urlencoded";
            fileInput.removeAttribute('name');
            form.submit();
            form.content.value = '';
            return;
        }

        if(overlay) overlay.style.display = 'flex';
        
        if(window.vercelUpload) {
            try {
                if(statusText) statusText.innerText = "Enviando arquivo...";
                const newBlob = await window.vercelUpload(file.name, file, {
                    access: 'public',
                    handleUploadUrl: '/chat/upload/authorize',
                });
                document.getElementById('hiddenFileUrl').value = newBlob.url;
                fileInput.value = ''; 
                fileInput.removeAttribute('name');
                form.enctype = "application/x-www-form-urlencoded";
                form.submit();
                return;
            } catch(e) { console.warn("Erro Vercel", e); }
        }

        if(statusText) statusText.innerText = "Enviando via Servidor...";
        form.enctype = "multipart/form-data";
        fileInput.setAttribute('name', 'file');
        form.removeEventListener('submit', handleChatSubmit);
        form.submit();
    }
</script>

