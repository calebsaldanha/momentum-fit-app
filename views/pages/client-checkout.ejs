<%- include('../layouts/app/head') %>

<div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <main class="app-main">
        <%- include('../partials/app-header') %>
        
        <div class="dashboard-content">
            <div class="container" style="max-width: 600px; padding-top: 40px;">
                
                <div class="app-card" style="text-align: center; padding: 40px;">
                    <div style="margin-bottom: 30px;">
                        <i class="fas fa-shield-alt" style="font-size: 4rem; color: var(--primary);"></i>
                    </div>
                    
                    <h2 style="color: white; margin-bottom: 10px;">Você está a um passo da evolução</h2>
                    <p style="color: #888; margin-bottom: 30px;">
                        Você será redirecionado para o ambiente seguro da Stripe para finalizar o pagamento.
                    </p>

                    <div style="background: #111; border: 1px solid #222; padding: 20px; border-radius: 10px; margin-bottom: 30px; text-align: left;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <span style="color: #ccc;">Plano:</span>
                            <strong style="color: white;"><%= plan.name %></strong>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #ccc;">Valor:</span>
                            <strong style="color: var(--primary); font-size: 1.2rem;">R$ <%= plan.price %></strong>
                        </div>
                    </div>

                    <form action="/payment/create-checkout-session" method="POST">
                        <input type="hidden" name="planId" value="<%= plan.id %>">
                        <button type="submit" class="btn btn-primary btn-lg w-100" style="display: flex; align-items: center; justify-content: center; gap: 10px; color: black;">
                            <span>Ir para Pagamento Seguro</span>
                            <i class="fas fa-external-link-alt"></i>
                        </button>
                    </form>
                    
                    <div style="margin-top: 20px; font-size: 0.85rem; color: #666;">
                        Aceitamos: <i class="fab fa-cc-visa"></i> <i class="fab fa-cc-mastercard"></i> <i class="brands fa-pix"></i> Boleto
                    </div>
                </div>

                <div class="center" style="margin-top: 20px;">
                    <a href="/client/plans" style="color: #666;">Cancelar e voltar</a>
                </div>

            </div>
        </div>
    </main>
</div>
