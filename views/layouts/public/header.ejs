<header class="public-header">
    <div class="container">
        <div class="logo-container">
            <a href="/">
                <img src="/images/momentum-fit-logo-completo.png" alt="Momentum Fit" onerror="this.src='https://placehold.co/150x40?text=Momentum+Fit'">
            </a>
        </div>
        
        <button class="mobile-menu-btn">☰</button>

        <nav class="nav-links">
            <a href="/" class="nav-link">Início</a>
            <a href="/about" class="nav-link">Sobre</a>
            <a href="/plans" class="nav-link">Planos</a>
            <a href="/articles" class="nav-link">Blog</a>
            <a href="/contact" class="nav-link">Contato</a>
            
            <% if (typeof user !== 'undefined' && user) { %>
                <% if (user.role === 'admin' || user.role === 'superadmin') { %>
                    <a href="/admin/dashboard" class="btn-login solid">Dashboard</a>
                <% } else if (user.role === 'trainer') { %>
                    <a href="/trainer/dashboard" class="btn-login solid">Painel</a>
                <% } else { %>
                    <a href="/client/dashboard" class="btn-login solid">Meu Treino</a>
                <% } %>
            <% } else { %>
                <a href="/login" class="btn-login outline">Entrar</a>
                <a href="/register" class="btn-login solid">Começar Agora</a>
            <% } %>
        </nav>
    </div>
</header>
