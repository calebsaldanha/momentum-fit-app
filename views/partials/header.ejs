<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <% 
        /* LÃ³gica de Links por Perfil */
        let menuItems = [];
        let dashboardLink = '/';

        if (typeof user !== 'undefined' && user) {
            if (user.role === 'client') {
                dashboardLink = '/client/dashboard';
                menuItems = [
                    { name: 'Dashboard', url: '/client/dashboard', icon: 'fa-home' },
                    { name: 'Meus Treinos', url: '/client/workouts', icon: 'fa-dumbbell' },
                    { name: 'Chat', url: '/chat', icon: 'fa-comments' },
                    { name: 'Meu Perfil', url: '/client/profile', icon: 'fa-user' }
                ];
            } else if (user.role === 'trainer') {
                dashboardLink = '/trainer/dashboard';
                menuItems = [
                    { name: 'Dashboard', url: '/trainer/dashboard', icon: 'fa-chart-line' },
                    { name: 'Meus Alunos', url: '/trainer/clients', icon: 'fa-users' },
                    { name: 'Chat', url: '/chat', icon: 'fa-comments' },
                    { name: 'Perfil', url: '/trainer/profile', icon: 'fa-user-tie' }
                ];
            } else if (user.role === 'admin' || user.role === 'superadmin') {
                dashboardLink = '/admin/dashboard';
                menuItems = [
                    { name: 'Painel Admin', url: '/admin/dashboard', icon: 'fa-cogs' },
                    { name: 'Gerenciar', url: '/admin/clients', icon: 'fa-users-cog' }
                ];
            }
        } else {
            // Visitante
            menuItems = [
                { name: 'InÃ­cio', url: '/', icon: 'fa-home' },
                { name: 'Sobre', url: '/about', icon: 'fa-info-circle' },
                { name: 'Artigos', url: '/articles', icon: 'fa-newspaper' }
            ];
        }
    %>

    <header class="main-header">
        <div class="header-container">
            <a href="<%= isAuthenticated ? dashboardLink : '/' %>" class="brand-logo">
                <img src="/images/momentum-fit-icon.png" alt="Momentum Fit" class="logo-icon">
                <span class="logo-text">Momentum Fit</span>
            </a>

            <nav class="desktop-nav">
                <% menuItems.forEach(function(item) { %>
                    <a href="<%= item.url %>" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === item.url ? 'active' : '' %>">
                        <%= item.name %>
                    </a>
                <% }); %>
            </nav>

            <div class="desktop-actions">
                <% if (!isAuthenticated) { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline">Entrar</a>
                    <a href="/auth/register" class="btn btn-sm btn-primary">Cadastro</a>
                <% } else { %>
                    <div class="user-chip desktop-only">
                        <i class="fas fa-user-circle"></i> <span><%= user.name.split(' ')[0] %></span>
                    </div>
                    <form action="/auth/logout" method="POST" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn btn-sm btn-ghost" title="Sair"><i class="fas fa-sign-out-alt"></i></button>
                    </form>
                <% } %>
            </div>

            <button class="hamburger-btn mobile-only" id="mobileMenuBtn" aria-label="Menu">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="mobileMenu">
            <div class="mobile-menu-header">
                <span class="text-neon">Menu</span>
                <button id="closeMenuBtn" class="close-btn"><i class="fas fa-times"></i></button>
            </div>
            
            <div class="mobile-links">
                <% menuItems.forEach(function(item) { %>
                    <a href="<%= item.url %>">
                        <i class="fas <%= item.icon %>" style="width: 25px; text-align: center; margin-right: 10px;"></i>
                        <%= item.name %>
                    </a>
                <% }); %>
            </div>

            <div class="mobile-auth">
                <% if (!isAuthenticated) { %>
                    <a href="/auth/login" class="btn btn-full btn-outline">Entrar</a>
                    <a href="/auth/register" class="btn btn-full btn-primary">Cadastro</a>
                <% } else { %>
                    <div style="padding: 10px 0; color: #666; font-size: 0.9rem;">
                        Logado como <strong class="text-neon"><%= user.name %></strong>
                    </div>
                    <form action="/auth/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn btn-full btn-ghost" style="border: 1px solid #333;">Sair</button>
                    </form>
                <% } %>
            </div>
        </div>
    </header>
    
    <div class="header-spacer"></div>

    <main class="main-content">
