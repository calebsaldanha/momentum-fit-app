<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/momentum-fit-icon.png">
</head>
<body>
    <% 
        let dashLink = '/client/dashboard';
        if (typeof user !== 'undefined' && user) {
            if (user.role === 'trainer') dashLink = '/trainer/dashboard';
            if (user.role === 'admin' || user.role === 'superadmin') dashLink = '/admin/dashboard';
        }
    %>

    <header class="main-header">
        <div class="header-container">
            <a href="/" class="brand-logo">
                <img src="/images/momentum-fit-icon.png" alt="Logo" class="logo-icon">
                <span class="logo-text">Momentum Fit</span>
            </a>

            <nav class="desktop-nav">
                <a href="/" class="nav-link">Início</a>
                <a href="/about" class="nav-link">Sobre</a>
                <a href="/articles" class="nav-link">Artigos</a>
                <a href="/plans" class="nav-link">Planos</a>
                <a href="/contact" class="nav-link">Contato</a>
            </nav>

            <div class="desktop-actions">
                <% if (!isAuthenticated) { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline">Entrar</a>
                    <a href="/auth/register" class="btn btn-sm btn-primary">Cadastro</a>
                <% } else { %>
                    <a href="/notifications" class="btn btn-ghost" style="position: relative; margin-right: 10px;">
                        <i class="fas fa-bell"></i>
                        <span style="position: absolute; top: 5px; right: 5px; width: 8px; height: 8px; background: var(--primary-color); border-radius: 50%;"></span>
                    </a>

                    <a href="<%= dashLink %>" class="btn btn-sm btn-secondary desktop-only">
                        <i class="fas fa-columns"></i> Painel
                    </a>
                    
                    <div class="user-chip" style="border: 1px solid #333; margin-left: 10px;">
                        <i class="fas fa-user-circle"></i> <span><%= user.name.split(' ')[0] %></span>
                    </div>
                    
                    <form action="/auth/logout" method="POST" style="display: inline; margin-left: 5px;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn btn-sm btn-ghost" title="Sair"><i class="fas fa-sign-out-alt"></i></button>
                    </form>
                <% } %>
            </div>

            <button class="hamburger-btn mobile-only" id="mobileMenuBtn">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="mobileMenu">
            <div class="mobile-menu-header">
                <span class="text-neon">Menu</span>
                <button id="closeMenuBtn" class="close-btn"><i class="fas fa-times"></i></button>
            </div>
            <div class="mobile-links">
                <a href="/">Início</a>
                <a href="/plans">Planos</a>
                <a href="/contact">Contato</a>
                <% if (isAuthenticated) { %>
                    <a href="<%= dashLink %>" class="text-neon">Acessar Painel</a>
                    <a href="/notifications">Notificações</a>
                <% } %>
            </div>
        </div>
    </header>
