<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="icon" type="image/png" href="/images/momentum-fit-icon.png">
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="stylesheet" href="/css/styles.css">
    <% if (typeof currentPage !== 'undefined' && (currentPage === 'dashboard' || currentPage === 'admin')) { %>
        <link rel="stylesheet" href="/css/dashboard.css">
    <% } %>
</head>
<body>
    <div class="app-container">
        <header class="main-header">
            <div class="header-content">
                <div class="brand">
                    <a href="/">
                        <%# Tenta usar a imagem, se falhar mostra texto %>
                        <img src="/images/momentum-fit-logo-completo.png" alt="Momentum Fit" class="header-logo-img" onerror="this.style.display='none';this.nextElementSibling.style.display='block'">
                        <span style="display:none; font-weight:bold; font-size:1.5rem; color:#2563eb;">Momentum Fit</span>
                    </a>
                </div>
                
                <nav class="nav-menu">
                    <a href="/" class="nav-link">Início</a>
                    <a href="/about" class="nav-link">Sobre</a>
                    <a href="/articles" class="nav-link">Artigos</a>
                </nav>
                
                <div class="user-actions">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="user-info">
                            <span class="greeting">Olá, <strong><%= user.name.split(' ')[0] %></strong></span>
                            <span class="badge-role"><%= user.role === 'superadmin' ? 'Admin' : (user.role === 'trainer' ? 'Personal' : 'Aluno') %></span>
                        </div>
                        
                        <% 
                            let dashboardLink = '/client/dashboard';
                            if (user.role === 'superadmin') dashboardLink = '/superadmin/dashboard';
                            else if (user.role === 'trainer') dashboardLink = '/admin/dashboard';
                        %>
                        <a href="<%= dashboardLink %>" class="btn btn-sm btn-primary" style="margin-right: 10px;">
                            <i class="fas fa-columns"></i> Painel
                        </a>

                        <a href="/notifications" class="btn-icon" title="Notificações">
                            <i class="fas fa-bell"></i>
                        </a>
                        <a href="/auth/logout" class="btn-logout" title="Sair" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                        <form id="logout-form" action="/auth/logout" method="POST" style="display: none;">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-sm btn-outline">Entrar</a>
                        <a href="/auth/register" class="btn btn-sm btn-primary">Cadastrar</a>
                    <% } %>
                    
                    <div class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </div>
            </div>
        </header>

        <div class="flash-messages-container" style="position:fixed; top:80px; right:20px; z-index:1100;">
            <% if (typeof messages !== 'undefined' && messages.error) { %>
                <div class="alert alert-danger global-alert">
                    <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
                    <button onclick="this.parentElement.remove()" style="margin-left:10px; background:none; border:none; cursor:pointer;">&times;</button>
                </div>
            <% } %>
            <% if (typeof messages !== 'undefined' && messages.success) { %>
                <div class="alert alert-success global-alert">
                    <i class="fas fa-check-circle"></i> <%= messages.success %>
                    <button onclick="this.parentElement.remove()" style="margin-left:10px; background:none; border:none; cursor:pointer;">&times;</button>
                </div>
            <% } %>
        </div>
