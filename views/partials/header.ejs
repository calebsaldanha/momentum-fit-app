<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

<% if (!path.includes('/client') && !path.includes('/trainer') && !path.includes('/admin')) { %>
    <header class="main-header">
        <div class="header-container">
            <a href="/" class="brand-logo">
                <img src="/images/momentum-fit-icon.png" alt="Momentum Logo" style="height: 35px; width: auto;">
                <span>Momentum</span>
            </a>
            
            <nav class="desktop-nav">
                <a href="/">Início</a>
                <a href="/plans">Planos</a>
                <a href="/about">Sobre</a>
                <a href="/auth/login">Entrar</a>
                <a href="/auth/register" class="btn btn-primary btn-sm" style="color: black;">Começar</a>
            </nav>

            <button class="hamburger-btn" onclick="togglePublicMenu()">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="publicMenu">
            <div style="display:flex; justify-content:space-between; align-items: center; margin-bottom: 40px;">
                <span class="brand-logo" style="font-size: 1.2rem;">
                    <img src="/images/momentum-fit-icon.png" alt="Logo" style="height: 30px; margin-right: 10px;">
                    Momentum
                </span>
                <button onclick="togglePublicMenu()" style="background:none; border:none; color:white; font-size:1.5rem;">&times;</button>
            </div>
            <a href="/" class="side-link">Início</a>
            <a href="/plans" class="side-link">Planos e Preços</a>
            <a href="/about" class="side-link">Sobre Nós</a>
            <a href="/auth/login" class="side-link">Entrar</a>
            <a href="/auth/register" class="btn btn-primary" style="margin-top: 20px; text-align: center; color: black;">Começar Agora</a>
        </div>
    </header>
    <script>
        function togglePublicMenu() {
            document.getElementById('publicMenu').classList.toggle('active');
        }
    </script>
<% } %>
