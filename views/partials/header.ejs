<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Momentum Fit' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    
    <link rel="icon" type="image/png" href="/images/logo-3d.png">

    <% if (typeof bodyClass !== 'undefined' && bodyClass.includes('dashboard-body')) { %>
        <link rel="stylesheet" href="/css/dashboard.css">
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <% if (typeof bodyClass === 'undefined' || !bodyClass.includes('auth-body')) { %>
        <header class="header">
            <div class="container">
                <nav class="nav-container">
                    <div class="nav-logo">
                        <a href="/">
                            <img src="/images/logo-3d.png" alt="Momentum Fit" onerror="this.src='/images/momentum-fit-icon.png'" style="height: 40px; width: 40px; border-radius: 50%; object-fit: cover;">
                        </a>
                    </div>
                    
                    <ul class="nav-menu">
                        <li><a href="/" class="nav-link">Início</a></li>
                        <li><a href="/about" class="nav-link">Sobre</a></li>
                        <li><a href="/articles" class="nav-link">Artigos</a></li>

                        <% if (isAuthenticated) { %>
                            <% if (user.role === 'client') { %>
                                <li><a href="/client/dashboard" class="nav-link">Meu Painel</a></li>
                                <li><a href="/client/workouts" class="nav-link">Treinos</a></li>
                            <% } %>
                            
                            <% if (user.role === 'superadmin') { %>
                                <li><a href="/superadmin/dashboard" class="nav-link">Painel Super Admin</a></li>
                            <% } %>

                            <% if (user.role === 'trainer' || user.role === 'superadmin') { %>
                                <li><a href="/admin/dashboard" class="nav-link">Painel Admin</a></li>
                            <% } %>

                            <li><a href="/chat" class="nav-link">Chat</a></li>

                            <li style="margin-left: auto; display: flex; align-items: center; gap: 15px;">
                                <div class="user-badge">
                                    Olá, <%= user.name.split(' ')[0] %>
                                </div>
                                <form action="/auth/logout" method="POST" style="display: inline; margin: 0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-secondary btn-sm" style="white-space: nowrap; border: 1px solid #ccc;">
                                        Sair
                                    </button>
                                </form>
                            </li>
                        <% } else { %>
                            <li style="margin-left: auto;"><a href="/auth/login" class="nav-link">Entrar</a></li>
                            <li><a href="/auth/register" class="btn btn-primary btn-sm">Começar</a></li>
                        <% } %>
                    </ul>

                    <div class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </nav>
            </div>
        </header>
    <% } %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Lógica do Menu Hamburger (Mobile)
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');
            if (hamburger) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });
            }

            // 2. Lógica para arredondar o Favicon dinamicamente
            // Como CSS não funciona na aba do navegador, usamos Canvas para recortar a imagem
            const faviconLink = document.querySelector("link[rel~='icon']");
            if (faviconLink) {
                const img = new Image();
                img.src = '/images/logo-3d.png'; // Carrega a imagem original quadrada
                // Configuração para evitar problemas de CORS se necessário (geralmente local ok)
                img.crossOrigin = "Anonymous"; 
                
                img.onload = function() {
                    // Cria um canvas temporário
                    const canvas = document.createElement('canvas');
                    const size = Math.min(img.width, img.height);
                    canvas.width = size;
                    canvas.height = size;
                    
                    const ctx = canvas.getContext('2d');
                    
                    // Desenha o caminho circular
                    ctx.beginPath();
                    ctx.arc(size/2, size/2, size/2, 0, 2 * Math.PI);
                    ctx.closePath();
                    ctx.clip(); // Aplica o recorte
                    
                    // Desenha a imagem dentro do recorte
                    ctx.drawImage(img, (img.width - size)/2, (img.height - size)/2, size, size, 0, 0, size, size);
                    
                    // Substitui o favicon pela versão recortada (Data URL)
                    faviconLink.href = canvas.toDataURL();
                };
            }
        });
    </script>
