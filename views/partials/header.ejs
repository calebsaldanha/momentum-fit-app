<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <% 
        // Define o link do dashboard baseado no role
        let dashLink = '/client/dashboard';
        if (typeof user !== 'undefined' && user) {
            if (user.role === 'trainer') dashLink = '/trainer/dashboard';
            if (user.role === 'admin' || user.role === 'superadmin') dashLink = '/admin/dashboard';
        }
    %>

    <header class="main-header">
        <div class="header-container">
            <a href="/" class="brand-logo">
                <img src="/images/momentum-fit-icon.png" alt="Momentum Fit" class="logo-icon">
                <span class="logo-text">Momentum Fit</span>
            </a>

            <nav class="desktop-nav">
                <a href="/" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'home' ? 'active' : '' %>">Início</a>
                <a href="/about" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'about' ? 'active' : '' %>">Sobre</a>
                <a href="/articles" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'articles' ? 'active' : '' %>">Artigos</a>
                <a href="/plans" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'plans' ? 'active' : '' %>">Planos</a>
                <a href="/contact" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'contact' ? 'active' : '' %>">Contato</a>
            </nav>

            <div class="desktop-actions">
                <% if (!isAuthenticated) { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline">Entrar</a>
                    <a href="/auth/register" class="btn btn-sm btn-primary">Cadastro</a>
                <% } else { %>
                    <a href="<%= dashLink %>" class="btn btn-sm btn-secondary" title="Ir para Painel">
                        <i class="fas fa-columns"></i> <span class="desktop-only" style="margin-left:5px;">Painel</span>
                    </a>
                    <div class="user-chip" style="border: 1px solid #333;">
                        <i class="fas fa-user-circle"></i> <span><%= user.name.split(' ')[0] %></span>
                    </div>
                    <form action="/auth/logout" method="POST" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn btn-sm btn-ghost" title="Sair"><i class="fas fa-sign-out-alt"></i></button>
                    </form>
                <% } %>
            </div>

            <button class="hamburger-btn mobile-only" id="mobileMenuBtn">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="mobileMenu">
            <div class="mobile-menu-header">
                <span class="text-neon">Menu</span>
                <button id="closeMenuBtn" class="close-btn"><i class="fas fa-times"></i></button>
            </div>
            <div class="mobile-links">
                <a href="/">Início</a>
                <a href="/about">Sobre</a>
                <a href="/articles">Artigos</a>
                <a href="/plans">Planos</a>
                <a href="/contact">Contato</a>
            </div>
            <div class="mobile-auth">
                <% if (!isAuthenticated) { %>
                    <a href="/auth/login" class="btn btn-full btn-outline">Entrar</a>
                    <a href="/auth/register" class="btn btn-full btn-primary">Cadastro</a>
                <% } else { %>
                    <a href="<%= dashLink %>" class="btn btn-full btn-primary">Acessar Painel</a>
                    <form action="/auth/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn btn-full btn-ghost">Sair</button>
                    </form>
                <% } %>
            </div>
        </div>
    </header>
    
    <div class="header-spacer"></div>

    <main class="main-content">
