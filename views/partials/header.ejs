<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit | A Evolução do Seu Treino' %></title>
    <meta name="description" content="Conecte-se com personal trainers de elite e use nossa IA para evoluir seu treino. A plataforma completa para sua jornada fitness.">
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="<%= (typeof path !== 'undefined' && (path.includes('/login') || path.includes('/register'))) ? 'auth-page' : '' %>">

<header class="main-header">
    <div class="header-container">
        <a href="/" class="brand-logo">
            <img src="/images/momentum-fit-icon.png" alt="Icon" class="logo-icon">
            <span>Momentum</span>
        </a>

        <nav class="desktop-nav">
            <a href="/" class="nav-link <%= typeof path !== 'undefined' && path === '/' ? 'active' : '' %>">Início</a>
            <a href="/about" class="nav-link <%= typeof path !== 'undefined' && path === '/about' ? 'active' : '' %>">Sobre</a>
            <a href="/plans" class="nav-link <%= typeof path !== 'undefined' && path === '/plans' ? 'active' : '' %>">Planos</a>
            <a href="/articles" class="nav-link <%= typeof path !== 'undefined' && path === '/articles' ? 'active' : '' %>">Blog</a>
        </nav>

        <div class="desktop-actions">
            <% if (typeof user !== 'undefined' && user) { %>
                <% 
                    let dashboardLink = '/client/dashboard';
                    if (user.role === 'trainer') dashboardLink = '/trainer/dashboard';
                    if (user.role === 'admin' || user.role === 'superadmin') dashboardLink = '/admin/dashboard';
                %>
                <a href="<%= dashboardLink %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-columns"></i> Dashboard
                </a>
            <% } else { %>
                <a href="/auth/login" class="nav-link">Entrar</a>
                <a href="/auth/register" class="btn btn-primary btn-sm">Começar Agora</a>
            <% } %>
        </div>

        <button class="hamburger-btn" onclick="toggleMobileMenu()">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <div class="mobile-menu" id="mobileMenu">
        <div class="mobile-menu-header">
            <span class="brand-logo">Momentum</span>
            <button class="close-btn" onclick="toggleMobileMenu()">&times;</button>
        </div>
        <div class="mobile-links">
            <a href="/" onclick="toggleMobileMenu()">Início</a>
            <a href="/plans" onclick="toggleMobileMenu()">Planos</a>
            <a href="/about" onclick="toggleMobileMenu()">Sobre</a> <a href="/articles" onclick="toggleMobileMenu()">Blog</a>
            
            <% if (typeof user !== 'undefined' && user) { %>
                <hr style="border-color: #333; margin: 20px 0;">
                <a href="<%= typeof dashboardLink !== 'undefined' ? dashboardLink : '/client/dashboard' %>" style="color: var(--primary-color);">Meu Painel</a>
                <a href="/auth/logout">Sair</a>
            <% } else { %>
                <hr style="border-color: #333; margin: 20px 0;">
                <a href="/auth/login">Login</a>
                <a href="/auth/register" style="color: var(--primary-color);">Criar Conta</a>
            <% } %>
        </div>
    </div>
</header>

<script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('active');
        document.body.style.overflow = menu.classList.contains('active') ? 'hidden' : '';
    }
</script>
