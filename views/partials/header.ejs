<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Momentum Fit' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css?v=<%= Date.now() %>">
    <link rel="icon" type="image/png" href="/images/logo-3d.png">
    <% if (typeof bodyClass !== 'undefined' && bodyClass.includes('dashboard-body')) { %>
        <link rel="stylesheet" href="/css/dashboard.css?v=<%= Date.now() %>">
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <% if (typeof bodyClass === 'undefined' || !bodyClass.includes('auth-body')) { %>
        <header class="header">
            <div class="container">
                <nav class="nav-container">
                    <div class="nav-logo">
                        <a href="/">
                            <img src="/images/logo-3d.png" alt="Momentum Fit" style="height: 40px; width: 40px; border-radius: 50%; object-fit: cover;">
                        </a>
                    </div>
                    <ul class="nav-menu">
                        <li><a href="/" class="nav-link">Início</a></li>
                        <li><a href="/about" class="nav-link">Sobre</a></li>
                        <li><a href="/articles" class="nav-link">Artigos</a></li>
                        <% if (isAuthenticated) { %>
                            <% if (user.role === 'client') { %>
                                <li><a href="/client/dashboard" class="nav-link">Painel Geral</a></li>
                                <li><a href="/client/workouts" class="nav-link">Meus Treinos</a></li>
                            <% } %>
                            <% if (user.role === 'superadmin') { %>
                                <li><a href="/superadmin/dashboard" class="nav-link">Super Admin</a></li>
                            <% } %>
                            <% if (user.role === 'trainer' || user.role === 'superadmin') { %>
                                <li><a href="/admin/dashboard" class="nav-link">Painel Admin</a></li>
                            <% } %>
                            <li><a href="/chat" class="nav-link">Mensagens</a></li>
                            <li style="margin-left: auto; display: flex; align-items: center; gap: 15px;">
                                <div class="user-badge">Olá, <%= user.name.split(' ')[0] %></div>
                                <form action="/auth/logout" method="POST" style="display: inline; margin: 0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-secondary btn-sm">Sair</button>
                                </form>
                            </li>
                        <% } else { %>
                            <li style="margin-left: auto;"><a href="/auth/login" class="nav-link">Entrar</a></li>
                            <li><a href="/auth/register" class="btn btn-primary btn-sm">Começar</a></li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </header>
    <% } %>
