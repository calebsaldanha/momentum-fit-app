<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= typeof title !== 'undefined' ? title + ' | Momentum Fit' : 'Momentum Fit' %></title>
    <link rel="icon" href="/images/momentum-fit-icon.png" type="image/png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

<% if (!path.includes('/client') && !path.includes('/trainer') && !path.includes('/admin')) { %>
    <header class="main-header">
        <div class="header-container">
            <a href="/" class="brand-logo">
                <img src="/images/momentum-fit-icon.png" alt="Momentum Logo" class="logo-rounded" style="height: 35px; width: 35px;">
                <span>Momentum</span>
            </a>
            
            <nav class="desktop-nav">
                <a href="/">Início</a>
                <a href="/plans">Planos</a>
                <a href="/about">Sobre</a>
                <a href="/auth/login">Entrar</a>
                <a href="/auth/register" class="btn btn-primary btn-sm" style="color: black;">Começar</a>
            </nav>

            <button class="hamburger-btn" onclick="togglePublicMenu()" aria-label="Menu">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="publicMenu">
            <button onclick="togglePublicMenu()" style="position: absolute; top: 20px; right: 20px; background: none; border: none; color: white; font-size: 2rem; cursor: pointer;">
                <i class="fas fa-times"></i>
            </button>

            <a href="/" class="side-link" onclick="togglePublicMenu()">Início</a>
            <a href="/plans" class="side-link" onclick="togglePublicMenu()">Planos</a>
            <a href="/about" class="side-link" onclick="togglePublicMenu()">Sobre</a>
            <a href="/auth/login" class="side-link" onclick="togglePublicMenu()">Entrar</a>
            <a href="/auth/register" class="btn btn-primary btn-lg" style="margin-top: 20px; width: 80%; text-align: center; color: black;">Começar Agora</a>
        </div>
    </header>
    
    <script>
        function togglePublicMenu() {
            const menu = document.getElementById('publicMenu');
            const btn = document.querySelector('.hamburger-btn i');
            
            menu.classList.toggle('active');
            
            // Trava o scroll do body quando menu está aberto
            if (menu.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
    </script>
<% } %>
