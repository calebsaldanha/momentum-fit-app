<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Momentum Fit' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/png" href="/images/momentum-fit-icon.png">
    <% if (typeof bodyClass !== 'undefined' && bodyClass.includes('dashboard-body')) { %>
        <link rel="stylesheet" href="/css/dashboard.css">
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <% if (typeof bodyClass === 'undefined' || !bodyClass.includes('auth-body')) { %>
        <header class="header">
            <div class="container">
                <nav class="nav-container">
                    <div class="nav-logo">
                        <a href="/">
                            <img src="/images/momentum-fit-logo-completo.png" alt="Momentum Fit" onerror="this.src='https://placehold.co/150x50/transparent/222222?text=MOMENTUM'" style="height: 40px;">
                        </a>
                    </div>
                    
                    <ul class="nav-menu">
                        <li><a href="/" class="nav-link">Início</a></li>
                        <li><a href="/about" class="nav-link">Sobre</a></li>
                        <li><a href="/articles" class="nav-link">Artigos</a></li>

                        <% if (isAuthenticated) { %>
                            <li class="desktop-only" style="height: 20px; border-left: 1px solid #ccc; margin: 0 10px;"></li>

                            <% if (user.role === 'client') { %>
                                <li><a href="/client/dashboard" class="nav-link">Painel</a></li>
                            <% } %>
                            
                            <% if (user.role === 'trainer') { %>
                                <li><a href="/admin/dashboard" class="nav-link">Painel Admin</a></li>
                            <% } %>
                            
                            <% if (user.role === 'superadmin') { %>
                                <li><a href="/superadmin/dashboard" class="nav-link" style="color: var(--c-accent-primary);">Super Admin</a></li>
                                <li><a href="/admin/dashboard" class="nav-link">Visão Geral</a></li>
                            <% } %>

                            <div class="notification-bell" style="position: relative;">
                                <a href="#" id="notificationLink" style="display: flex; align-items: center;">
                                    <span id="notificationBadge" class="notification-badge" style="display:none; position: absolute; top: -5px; right: -5px; background: var(--c-error); color: white; font-size: 10px; padding: 2px 5px; border-radius: 50%;">0</span>
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                        <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                                    </svg>
                                </a>
                                <div id="notificationDropdown" class="notification-dropdown" style="display:none; position: absolute; right: 0; top: 40px; background: white; border: 1px solid #eee; width: 300px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); border-radius: 8px; z-index: 100;">
                                    <div style="padding: 10px; border-bottom: 1px solid #eee; font-weight: bold;">Notificações</div>
                                    <div id="notificationList" style="max-height: 300px; overflow-y: auto;">
                                        <div id="noNotifications" style="padding: 10px; color: #777; text-align: center;">Nenhuma nova notificação.</div>
                                    </div>
                                </div>
                            </div>

                            <li style="margin-top: 0; display: flex; align-items: center; gap: 10px;">
                                <span style="font-size: 0.9rem; font-weight: 700; color: var(--c-text-primary);">
                                    <%= user.name.split(' ')[0] %>
                                </span>
                                <form action="/auth/logout" method="POST" style="display: inline; margin: 0;">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-secondary btn-sm" style="padding: 0.3rem 0.8rem;">Sair</button>
                                </form>
                            </li>
                        <% } else { %>
                            <li style="margin-left: 1rem;"><a href="/auth/login" class="nav-link">Entrar</a></li>
                            <li><a href="/auth/register" class="btn btn-primary btn-sm">Começar</a></li>
                        <% } %>
                    </ul>

                    <div class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </nav>
            </div>
        </header>
    <% } %>

    <% if (isAuthenticated) { %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Script simplificado para notificações e menu
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');
            if (hamburger) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });
            }

            const notifLink = document.getElementById('notificationLink');
            const notifDrop = document.getElementById('notificationDropdown');
            const notifBadge = document.getElementById('notificationBadge');
            const notifList = document.getElementById('notificationList');
            
            if(notifLink) {
                notifLink.addEventListener('click', (e) => {
                    e.preventDefault();
                    notifDrop.style.display = notifDrop.style.display === 'block' ? 'none' : 'block';
                });
                
                // Fetch inicial
                fetch('/api/notifications').then(res => res.json()).then(data => {
                    if(data.length > 0) {
                        notifBadge.style.display = 'block';
                        notifBadge.textContent = data.length;
                        notifList.innerHTML = '';
                        data.forEach(n => {
                            const div = document.createElement('div');
                            div.style.padding = '10px';
                            div.style.borderBottom = '1px solid #eee';
                            div.innerHTML = `<a href="${n.link}" style="text-decoration: none; color: #333; font-size: 0.9rem;">${n.message}</a>`;
                            div.onclick = () => {
                                fetch('/api/notifications/mark-read', { 
                                    method: 'POST', 
                                    headers: {'Content-Type': 'application/json', 'CSRF-Token': '<%= csrfToken %>'},
                                    body: JSON.stringify({ ids: [n.id] })
                                });
                            };
                            notifList.appendChild(div);
                        });
                    }
                }).catch(e => console.error(e));
            }
        });
    </script>
    <% } %>
