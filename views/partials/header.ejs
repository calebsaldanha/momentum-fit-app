<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Momentum Fit</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

<% if (!path.includes('/client') && !path.includes('/trainer') && !path.includes('/admin')) { %>
    <header class="main-header">
        <div class="header-container">
            <a href="/" class="brand-logo">
                <i class="fas fa-bolt" style="color: var(--primary-color);"></i> Momentum
            </a>
            
            <nav class="desktop-nav">
                <a href="/">Início</a>
                <a href="/plans">Planos</a>
                <a href="/about">Sobre</a>
                <a href="/auth/login">Entrar</a>
                <a href="/auth/register" class="btn btn-primary btn-sm" style="color: black;">Começar</a>
            </nav>

            <button class="hamburger-btn" onclick="togglePublicMenu()">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu" id="publicMenu">
            <div style="display:flex; justify-content:space-between; margin-bottom: 40px;">
                <span class="brand-logo">Momentum</span>
                <button onclick="togglePublicMenu()" style="background:none; border:none; color:white; font-size:1.5rem;">&times;</button>
            </div>
            <a href="/" class="side-link">Início</a>
            <a href="/plans" class="side-link">Planos</a>
            <a href="/auth/login" class="side-link">Entrar</a>
        </div>
    </header>
    <script>
        function togglePublicMenu() {
            document.getElementById('publicMenu').classList.toggle('active');
        }
    </script>
<% } %>
