<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Momentum Fit' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/png" href="/images/momentum-fit-icon.png">
    <% if (typeof bodyClass !== 'undefined' && bodyClass.includes('dashboard-body')) { %>
        <link rel="stylesheet" href="/css/dashboard.css">
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <% if (typeof bodyClass === 'undefined' || !bodyClass.includes('auth-body')) { %>
        <header class="header">
            <div class="container">
                <nav class="nav-container">
                    <div class="nav-logo">
                        <a href="/">
                            <img src="/images/momentum-fit-logo-completo.png" alt="Momentum Fit" onerror="this.src='https://placehold.co/150x50/transparent/222222?text=MOMENTUM'" style="height: 45px;">
                        </a>
                    </div>
                    
                    <ul class="nav-menu">
                        <li><a href="/" class="nav-link">InÃ­cio</a></li>
                        <li><a href="/about" class="nav-link">Sobre</a></li>
                        <li><a href="/articles" class="nav-link">Artigos</a></li>

                        <% if (isAuthenticated) { %>
                            <li class="desktop-only" style="height: 24px; border-left: 1px solid #e2e8f0; margin: 0 5px;"></li>

                            <% if (user.role === 'client') { %>
                                <li><a href="/client/dashboard" class="nav-link">Meu Dashboard</a></li>
                                <li><a href="/client/workouts" class="nav-link">Meus Treinos</a></li>
                            <% } %>
                            
                            <% if (user.role === 'trainer' || user.role === 'superadmin') { %>
                                <li><a href="/admin/dashboard" class="nav-link">Painel Admin</a></li>
                                <li><a href="/admin/clients" class="nav-link">Clientes</a></li>
                            <% } %>
                            
                            <% if (user.role === 'superadmin') { %>
                                <li><a href="/superadmin/dashboard" class="nav-link" style="color: var(--c-accent-primary);"><strong>Super Admin</strong></a></li>
                            <% } %>

                            <li><a href="/chat" class="nav-link">Chat</a></li>

                            <li style="margin-top: 0; display: flex; flex-direction: row; align-items: center; gap: 15px; border-top: 1px solid transparent;">
                                <div class="user-actions" style="display: flex; align-items: center; gap: 15px; width: 100%;">
                                    <span style="font-size: 0.9rem; font-weight: 700; color: var(--c-text-primary);">
                                        Ola, <%= user.name.split(' ')[0] %>
                                    </span>
                                    <form action="/auth/logout" method="POST" style="margin: 0;">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn btn-secondary btn-sm" style="white-space: nowrap;">Sair íºª</button>
                                    </form>
                                </div>
                            </li>
                        <% } else { %>
                            <li style="margin-left: 0.5rem;"><a href="/auth/login" class="nav-link">Login</a></li>
                            <li><a href="/auth/register" class="btn btn-primary btn-sm">ComeÃ§ar</a></li>
                        <% } %>
                    </ul>

                    <div class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </nav>
            </div>
        </header>
    <% } %>

    <% if (isAuthenticated) { %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');
            if (hamburger) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });
            }
        });
    </script>
    <% } %>
