        <% if (user.role === 'superadmin') { %>
            <a href="/superadmin/dashboard" class="nav-item">Super Admin</a>
            <div style="height: 1px; background: rgba(255,255,255,0.1); margin: 0.5rem 1rem;"></div>
        <% } %>
        <a href="/admin/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">Painel Geral</a>
