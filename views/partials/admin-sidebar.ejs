<aside class="dashboard-sidebar">
    <div class="sidebar-header">
        <div class="user-avatar-large">
            <i class="fas fa-user-shield"></i>
        </div>
        <h3 class="user-name"><%= user.name.split(' ')[0] %></h3>
        <span class="user-role-badge">
            <%= user.role === 'superadmin' ? 'Super Admin' : 'Treinador' %>
        </span>
    </div>
    
    <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
        </a>
        <a href="/admin/clients" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'clients' ? 'active' : '' %>">
            <i class="fas fa-users"></i> <span>Alunos</span>
        </a>
        <% if (user.role === 'superadmin') { %>
            <a href="/admin/trainers" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'trainers' ? 'active' : '' %>">
                <i class="fas fa-user-tie"></i> <span>Treinadores</span>
            </a>
        <% } %>
        </nav>
</aside>
