<aside class="dashboard-sidebar">
    <div class="sidebar-header">
        <div class="user-avatar-large">
            <i class="fas fa-user-shield"></i>
        </div>
        <h3 class="user-name"><%= user.name.split(' ')[0] %></h3>
        <span class="user-role-badge">Treinador</span>
    </div>
    
    <nav class="sidebar-nav">
        <div class="nav-section-label">Menu Principal</div>

        <a href="/admin/dashboard" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-tachometer-alt"></i> <span>Vis√£o Geral</span>
        </a>
        <a href="/admin/clients" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'clients' ? 'active' : '' %>">
            <i class="fas fa-users"></i> <span>Meus Alunos</span>
        </a>
        <a href="/workouts/create" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'create-workout' ? 'active' : '' %>">
            <i class="fas fa-plus-circle"></i> <span>Criar Treino</span>
        </a>
        <a href="/articles/manage" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'articles-manage' ? 'active' : '' %>">
            <i class="fas fa-newspaper"></i> <span>Criar Artigo</span>
        </a>
        <a href="/chat" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'chat' ? 'active' : '' %>">
            <i class="fas fa-comments"></i> <span>Chat</span>
        </a>
    </nav>

    <div class="sidebar-footer">
        <form action="/auth/logout" method="POST" style="margin:0;">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit" class="btn-logout-sidebar">
                <i class="fas fa-sign-out-alt"></i> <span>Sair</span>
            </button>
        </form>
    </div>
</aside>
