<aside class="dashboard-sidebar">
    <div class="sidebar-header">
        <div class="user-avatar-large"><i class="fas fa-user"></i></div>
        <h3 class="user-name"><%= user.name.split(' ')[0] %></h3>
        <span class="user-role-badge">Aluno</span>
    </div>
    
    <nav class="sidebar-nav">
        <a href="/client/dashboard" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-home"></i> <span>Vis√£o Geral</span>
        </a>
        <a href="/client/workouts" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'workouts' ? 'active' : '' %>">
            <i class="fas fa-dumbbell"></i> <span>Meus Treinos</span>
        </a>
        <a href="/articles" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'articles' ? 'active' : '' %>">
            <i class="fas fa-book-open"></i> <span>Blog & Dicas</span>
        </a>
        <a href="/client/profile" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'profile' ? 'active' : '' %>">
            <i class="fas fa-user-cog"></i> <span>Meu Perfil</span>
        </a>
        <a href="/chat" class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'chat' ? 'active' : '' %>">
            <i class="fas fa-comments"></i> <span>Chat</span>
        </a>
    </nav>

    <div class="sidebar-footer">
        <form action="/auth/logout" method="POST" style="margin:0;">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit" class="btn-logout-sidebar"><i class="fas fa-sign-out-alt"></i> <span>Sair</span></button>
        </form>
    </div>
</aside>
