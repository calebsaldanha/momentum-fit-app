<aside class="dashboard-sidebar">
    <div class="sidebar-header">
        <div class="user-avatar-large">
            <i class="fas fa-crown"></i>
        </div>
        <h3 class="user-name"><%= user.name.split(' ')[0] %></h3>
        <span class="user-role-badge">Acesso Total</span>
    </div>

    <nav class="sidebar-nav">
        <div class="nav-section-label">Gestão Global</div>
        
        <a href="/superadmin/dashboard" class="nav-item <%= currentPage === 'superadmin-dashboard' ? 'active' : '' %>">
            <i class="fas fa-chart-line"></i> <span>Visão Geral</span>
        </a>
        <a href="/superadmin/manage" class="nav-item <%= currentPage === 'superadmin-manage' ? 'active' : '' %>">
            <i class="fas fa-users-cog"></i> <span>Gerenciar Usuários</span>
        </a>
        <a href="/articles/manage" class="nav-item <%= currentPage === 'articles-manage' ? 'active' : '' %>">
            <i class="fas fa-newspaper"></i> <span>Gerenciar Blog</span>
        </a>

        <div class="nav-section-label">Área do Personal</div>

        <a href="/admin/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-tachometer-alt"></i> <span>Painel do Treinador</span>
        </a>
        <a href="/admin/clients" class="nav-item <%= currentPage === 'clients' ? 'active' : '' %>">
            <i class="fas fa-users"></i> <span>Meus Alunos</span>
        </a>
        <a href="/workouts/create" class="nav-item <%= currentPage === 'create-workout' ? 'active' : '' %>">
            <i class="fas fa-dumbbell"></i> <span>Criar Treino</span>
        </a>
        <a href="/chat" class="nav-item <%= currentPage === 'chat' ? 'active' : '' %>">
            <i class="fas fa-comments"></i> <span>Chat</span>
        </a>
    </nav>
    
    <div class="sidebar-footer">
         <form action="/auth/logout" method="POST" style="margin: 0;">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit" class="btn-logout-sidebar">
                <i class="fas fa-sign-out-alt"></i> <span>Sair</span>
            </button>
        </form>
    </div>
</aside>
