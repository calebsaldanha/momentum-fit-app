<header class="app-header">
    <div style="display: flex; align-items: center; gap: 15px;">
        <button class="mobile-toggle" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <h2 style="font-size: 1.2rem; font-weight: 700; color: white; margin: 0;">
            <%= typeof title !== 'undefined' ? title : 'Momentum Fit' %>
        </h2>
    </div>

    <div style="display: flex; align-items: center; gap: 15px;">
        <a href="/notifications" style="position: relative; color: #ccc;">
            <i class="fas fa-bell"></i>
            </a>
        
        <div class="user-profile" style="display: flex; align-items: center; gap: 10px;">
            <span style="display: none; @media(min-width: 768px){ display: inline; } color: #ccc; font-size: 0.9rem;">
                <%= user.name.split(' ')[0] %>
            </span>
            <div style="width: 35px; height: 35px; background: #333; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">
                <%= user.name.charAt(0) %>
            </div>
        </div>
    </div>
</header>
