<header class="top-header">
    <div style="display: flex; align-items: center;">
        <button class="mobile-menu-toggle" onclick="toggleAppSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <h2 class="page-title"><%= typeof title !== 'undefined' ? title : 'Momentum' %></h2>
    </div>

    <div class="header-right">
        <a href="/notifications" class="btn-icon">
            <i class="far fa-bell"></i>
            <% if (typeof notifications !== 'undefined' && notifications.length > 0) { %>
                <span class="notif-dot"></span>
            <% } %>
        </a>
        <a href="/client/settings" class="user-avatar" style="width: 32px; height: 32px; font-size: 0.9rem;">
            <%= user.name.charAt(0).toUpperCase() %>
        </a>
    </div>
</header>
