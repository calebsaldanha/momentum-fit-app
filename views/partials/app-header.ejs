<header class="app-header">
    <div style="display: flex; align-items: center;">
        <button class="mobile-toggle-btn" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <h2 style="color: white; font-size: 1.1rem; margin-left: 10px;"><%= typeof title !== 'undefined' ? title : 'Dashboard' %></h2>
    </div>

    <div style="display: flex; gap: 15px;">
        <div style="width: 35px; height: 35px; background: #333; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
            <%= user.name.charAt(0).toUpperCase() %>
        </div>
    </div>
</header>
