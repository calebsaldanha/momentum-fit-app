<div class="sidebar-overlay" id="sidebarOverlay"></div>

<aside class="sidebar">
    <div class="sidebar-header">
        <span class="brand-logo" style="font-size: 1rem;">
            <i class="fas fa-th-large text-neon"></i> &nbsp; Painel
        </span>
        <button class="close-btn mobile-only" id="sidebarClose" style="font-size: 1.2rem; margin-left: auto;">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <nav class="sidebar-nav">
        <% if (user.role === 'client') { %>
            <div class="menu-category">Meu Treino</div>
            <a href="/client/dashboard" class="nav-item <%= path === '/client/dashboard' ? 'active' : '' %>">
                <i class="fas fa-home"></i> <span>Visão Geral</span>
            </a>
            <a href="/client/workouts" class="nav-item <%= path === '/client/workouts' ? 'active' : '' %>">
                <i class="fas fa-dumbbell"></i> <span>Meus Treinos</span>
            </a>
            <a href="/client/evolution" class="nav-item <%= path === '/client/evolution' ? 'active' : '' %>">
                <i class="fas fa-chart-line"></i> <span>Minha Evolução</span>
            </a>
            <a href="/client/ai-coach" class="nav-item <%= path === '/client/ai-coach' ? 'active' : '' %>">
                <i class="fas fa-robot"></i> <span>IA Coach</span>
            </a>

            <div class="menu-category">Conta</div>
            <a href="/client/profile" class="nav-item <%= path === '/client/profile' ? 'active' : '' %>">
                <i class="fas fa-user"></i> <span>Meu Perfil</span>
            </a>
            <a href="/chat" class="nav-item <%= path === '/chat' ? 'active' : '' %>">
                <i class="fas fa-comments"></i> <span>Mensagens</span>
            </a>
        <% } %>

        <% if (user.role === 'trainer') { %>
            <div class="menu-category">Gestão</div>
            <a href="/trainer/dashboard" class="nav-item <%= path === '/trainer/dashboard' ? 'active' : '' %>">
                <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
            </a>
            <a href="/trainer/clients" class="nav-item <%= path === '/trainer/clients' ? 'active' : '' %>">
                <i class="fas fa-users"></i> <span>Meus Alunos</span>
            </a>
            <a href="/trainer/library" class="nav-item <%= path === '/trainer/library' ? 'active' : '' %>">
                <i class="fas fa-book"></i> <span>Biblioteca</span>
            </a>
            <a href="/trainer/content" class="nav-item <%= path === '/trainer/content' ? 'active' : '' %>">
                <i class="fas fa-video"></i> <span>Conteúdos</span>
            </a>

            <div class="menu-category">Pessoal</div>
            <a href="/trainer/profile" class="nav-item <%= path === '/trainer/profile' ? 'active' : '' %>">
                <i class="fas fa-id-card"></i> <span>Perfil Profissional</span>
            </a>
            <a href="/trainer/financial" class="nav-item <%= path === '/trainer/financial' ? 'active' : '' %>">
                <i class="fas fa-wallet"></i> <span>Financeiro</span>
            </a>
            <a href="/chat" class="nav-item <%= path === '/chat' ? 'active' : '' %>">
                <i class="fas fa-comments"></i> <span>Chat Alunos</span>
            </a>
        <% } %>

        <% if (user.role === 'admin' || user.role === 'superadmin') { %>
            <div class="menu-category">Administração</div>
            <a href="/admin/dashboard" class="nav-item <%= path === '/admin/dashboard' ? 'active' : '' %>">
                <i class="fas fa-chart-pie"></i> <span>Visão Geral</span>
            </a>
            <a href="/admin/approvals" class="nav-item <%= path === '/admin/approvals' ? 'active' : '' %>">
                <i class="fas fa-check-circle"></i> <span>Aprovações</span>
            </a>
            <a href="/admin/users" class="nav-item <%= path === '/admin/users' ? 'active' : '' %>">
                <i class="fas fa-users-cog"></i> <span>Usuários</span>
            </a>
            <a href="/admin/finance" class="nav-item <%= path === '/admin/finance' ? 'active' : '' %>">
                <i class="fas fa-dollar-sign"></i> <span>Financeiro</span>
            </a>
            <a href="/admin/plans" class="nav-item <%= path === '/admin/plans' ? 'active' : '' %>">
                <i class="fas fa-tags"></i> <span>Planos</span>
            </a>
        <% } %>

        <div class="menu-category" style="margin-top: auto;">Sistema</div>
        <a href="/auth/logout" class="nav-item">
            <i class="fas fa-sign-out-alt"></i> <span>Sair</span>
        </a>
    </nav>
</aside>
