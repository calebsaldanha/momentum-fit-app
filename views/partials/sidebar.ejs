<aside class="sidebar">
    <div class="sidebar-header" style="padding: 20px; text-align: center; border-bottom: 1px solid var(--border-light);">
        <div style="width: 60px; height: 60px; background: #222; border-radius: 50%; margin: 0 auto 15px; overflow: hidden; border: 2px solid var(--primary-color);">
            <img src="<%= user.profile_image || '/images/logo-3d.png' %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <h4 style="color: white; margin: 0; font-size: 1rem;"><%= user.name.split(' ')[0] %></h4>
        <span style="color: var(--text-muted); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px;"><%= user.role === 'superadmin' ? 'Admin' : user.role %></span>
    </div>

    <nav class="sidebar-nav" style="padding: 20px 0; flex: 1;">
        <ul style="list-style: none; padding: 0; margin: 0;">
            
            <% if (user.role === 'client') { %>
                <li><a href="/client/dashboard" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/client/workouts" class="nav-link <%= active === 'workouts' ? 'active' : '' %>"><i class="fas fa-dumbbell"></i> Treinos</a></li>
                <li><a href="/client/evolution" class="nav-link <%= active === 'evolution' ? 'active' : '' %>"><i class="fas fa-chart-line"></i> Evolução</a></li>
                <li><a href="/client/plans" class="nav-link <%= active === 'plans' ? 'active' : '' %>"><i class="fas fa-credit-card"></i> Meu Plano</a></li>
                <li><a href="/client/ai-coach" class="nav-link <%= active === 'ai-coach' ? 'active' : '' %>"><i class="fas fa-robot"></i> IA Coach</a></li>
            <% } %>

            <% if (user.role === 'trainer') { %>
                <li><a href="/trainer/dashboard" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>"><i class="fas fa-tachometer-alt"></i> Painel</a></li>
                <li><a href="/trainer/clients" class="nav-link <%= active === 'clients' ? 'active' : '' %>"><i class="fas fa-users"></i> Alunos</a></li>
                <li><a href="/trainer/schedule" class="nav-link <%= active === 'schedule' ? 'active' : '' %>"><i class="fas fa-calendar-alt"></i> Agenda</a></li>
                <li><a href="/trainer/library" class="nav-link <%= active === 'library' ? 'active' : '' %>"><i class="fas fa-book"></i> Biblioteca</a></li>
                <li><a href="/trainer/financial" class="nav-link <%= active === 'financial' ? 'active' : '' %>"><i class="fas fa-wallet"></i> Financeiro</a></li>
            <% } %>

            <% if (user.role === 'admin' || user.role === 'superadmin') { %>
                <li class="nav-section-title">Gestão</li>
                <li><a href="/admin/dashboard" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>"><i class="fas fa-chart-pie"></i> Visão Geral</a></li>
                <li><a href="/admin/clients" class="nav-link <%= active === 'clients' ? 'active' : '' %>"><i class="fas fa-users-cog"></i> Usuários</a></li>
                <li><a href="/admin/approvals" class="nav-link <%= active === 'approvals' ? 'active' : '' %>"><i class="fas fa-user-check"></i> Aprovações</a></li>
                
                <li class="nav-section-title">Plataforma</li>
                <li><a href="/admin/content" class="nav-link <%= active === 'content' ? 'active' : '' %>"><i class="fas fa-newspaper"></i> Conteúdo</a></li>
                <li><a href="/admin/plans" class="nav-link <%= active === 'plans' ? 'active' : '' %>"><i class="fas fa-tags"></i> Planos</a></li>
                <li><a href="/admin/finance" class="nav-link <%= active === 'finance' ? 'active' : '' %>"><i class="fas fa-dollar-sign"></i> Financeiro</a></li>
                
                <li class="nav-section-title">Sistema</li>
                <li><a href="/admin/ia-audit" class="nav-link <%= active === 'ia-audit' ? 'active' : '' %>"><i class="fas fa-brain"></i> Auditoria IA</a></li>
                <li><a href="/admin/settings" class="nav-link <%= active === 'settings' ? 'active' : '' %>"><i class="fas fa-cogs"></i> Configurações</a></li>
            <% } %>
        </ul>
    </nav>

    <div style="padding: 20px; border-top: 1px solid var(--border-light);">
        <a href="/client/profile" class="nav-link <%= active === 'profile' ? 'active' : '' %>" style="margin-bottom: 5px;"><i class="fas fa-user-circle"></i> Perfil</a>
        <a href="/auth/logout" class="nav-link" style="color: #ff4d4d;"><i class="fas fa-sign-out-alt"></i> Sair</a>
    </div>
</aside>

<style>
    .nav-section-title {
        padding: 15px 25px 10px;
        color: #555;
        font-size: 0.7rem;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }
    .nav-link {
        display: flex;
        align-items: center;
        padding: 12px 25px;
        color: #bbb;
        text-decoration: none;
        transition: all 0.2s;
        border-left: 3px solid transparent;
        font-size: 0.9rem;
    }
    .nav-link i { width: 25px; text-align: center; margin-right: 10px; font-size: 1rem; }
    .nav-link:hover { background: rgba(255,255,255,0.03); color: white; }
    .nav-link.active {
        background: rgba(190, 242, 2, 0.08);
        color: var(--primary-color);
        border-left-color: var(--primary-color);
    }
</style>
