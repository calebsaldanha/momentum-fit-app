<aside class="sidebar" id="appSidebar">
    <div class="sidebar-header">
        <a href="/" style="display: flex; align-items: center; gap: 10px; text-decoration: none; color: white;">
            <img src="/images/momentum-fit-icon.png" style="width: 30px; height: 30px; border-radius: 50%;">
            <span style="font-weight: 800; font-size: 1.1rem;">Momentum</span>
        </a>
        <button class="mobile-toggle" onclick="toggleSidebar()" style="background: none; border: none; color: #666;">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <nav class="sidebar-nav" style="flex: 1; overflow-y: auto;">
        <% if (user.role === 'trainer') { %>
            <a href="/trainer/dashboard" class="nav-link <%= path === '/trainer/dashboard' ? 'active' : '' %>">
                <i class="fas fa-home"></i> <span>Dashboard</span>
            </a>
            <a href="/trainer/clients" class="nav-link <%= path === '/trainer/clients' ? 'active' : '' %>">
                <i class="fas fa-users"></i> <span>Meus Alunos</span>
            </a>
            <a href="/trainer/library" class="nav-link <%= path === '/trainer/library' ? 'active' : '' %>">
                <i class="fas fa-book"></i> <span>Biblioteca</span>
            </a>
            <a href="/trainer/workouts" class="nav-link <%= path === '/trainer/workouts' ? 'active' : '' %>">
                <i class="fas fa-dumbbell"></i> <span>Treinos</span>
            </a>
            <a href="/trainer/financial" class="nav-link <%= path === '/trainer/financial' ? 'active' : '' %>">
                <i class="fas fa-wallet"></i> <span>Financeiro</span>
            </a>
        <% } %>

        <% if (user.role === 'client') { %>
            <a href="/client/dashboard" class="nav-link <%= path === '/client/dashboard' ? 'active' : '' %>">
                <i class="fas fa-home"></i> <span>Painel</span>
            </a>
            <a href="/client/workouts" class="nav-link <%= path === '/client/workouts' ? 'active' : '' %>">
                <i class="fas fa-dumbbell"></i> <span>Meus Treinos</span>
            </a>
            <a href="/client/evolution" class="nav-link <%= path === '/client/evolution' ? 'active' : '' %>">
                <i class="fas fa-chart-line"></i> <span>Evolução</span>
            </a>
            <a href="/client/ai-coach" class="nav-link <%= path === '/client/ai-coach' ? 'active' : '' %>">
                <i class="fas fa-robot"></i> <span>IA Coach</span>
            </a>
            <a href="/client/plans" class="nav-link <%= path === '/client/plans' ? 'active' : '' %>">
                <i class="fas fa-star"></i> <span>Planos</span>
            </a>
        <% } %>

        <% if (user.role === 'admin') { %>
            <a href="/admin/dashboard" class="nav-link <%= path === '/admin/dashboard' ? 'active' : '' %>">
                <i class="fas fa-shield-alt"></i> <span>Visão Geral</span>
            </a>
            <a href="/admin/users" class="nav-link <%= path === '/admin/users' ? 'active' : '' %>">
                <i class="fas fa-users-cog"></i> <span>Usuários</span>
            </a>
            <a href="/admin/finance" class="nav-link <%= path === '/admin/finance' ? 'active' : '' %>">
                <i class="fas fa-coins"></i> <span>Financeiro</span>
            </a>
            <a href="/admin/content" class="nav-link <%= path === '/admin/content' ? 'active' : '' %>">
                <i class="fas fa-edit"></i> <span>Conteúdo CMS</span>
            </a>
        <% } %>
    </nav>

    <div class="sidebar-footer">
        <a href="/auth/logout" class="nav-link" style="color: #ff6b6b;">
            <i class="fas fa-sign-out-alt"></i> <span>Sair</span>
        </a>
    </div>
</aside>
