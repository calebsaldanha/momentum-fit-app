<% if (locals.success_msg && locals.success_msg.length > 0) { %>
    <div class="alert alert-success" role="alert" style="border-radius: 8px; margin-bottom: 20px; padding: 15px; background: rgba(40, 167, 69, 0.2); border: 1px solid #28a745; color: #fff;">
        <% locals.success_msg.forEach(function(msg) { %>
            <div><i class="fas fa-check-circle" style="margin-right: 8px;"></i><%= msg %></div>
        <% }) %>
    </div>
<% } %>

<% if (locals.error_msg && locals.error_msg.length > 0) { %>
    <div class="alert alert-danger" role="alert" style="border-radius: 8px; margin-bottom: 20px; padding: 15px; background: rgba(220, 53, 69, 0.2); border: 1px solid #dc3545; color: #fff;">
        <% locals.error_msg.forEach(function(msg) { %>
            <div><i class="fas fa-exclamation-circle" style="margin-right: 8px;"></i><%= msg %></div>
        <% }) %>
    </div>
<% } %>

<% if (locals.error && locals.error.length > 0) { %>
    <div class="alert alert-danger" role="alert" style="border-radius: 8px; margin-bottom: 20px; padding: 15px; background: rgba(220, 53, 69, 0.2); border: 1px solid #dc3545; color: #fff;">
        <% locals.error.forEach(function(msg) { %>
            <div><i class="fas fa-exclamation-circle" style="margin-right: 8px;"></i><%= msg %></div>
        <% }) %>
    </div>
<% } %>
